<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>ch.vd.devsupport</groupId>
    <artifactId>projects-common-libraries</artifactId>
    <version>4.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>DEVSUPPORT - Common libraries for applications</name>

    <scm>
        <developerConnection>scm:git:git@bitbucket.etat-de-vaud.ch::/devsup/projects-common-libraries</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <modules>
        <!-- for libs -->
        <module>devsupport-library-dependencies</module>
        <module>devsupport-library-parent</module>
        <!-- libs -->
        <module>devsupport-authentication-starter</module>
        <module>devsupport-batch-starter</module>
        <module>devsupport-data-faker</module>
        <module>devsupport-keepass-properties/devsupport-keepass-properties-api</module>
        <module>devsupport-keepass-properties/devsupport-keepass-properties-starter</module>
        <module>devsupport-liquibase-starter</module>
        <module>devsupport-rights-starter</module>
        <module>devsupport-rest</module>
        <module>devsupport-spring-utils</module>
        <module>devsupport-utils</module>
        <module>devsupport-validation-starter</module>
        <module>devsupport-mail-starter</module>
        <module>devsupport-pagination-starter</module>
        <!-- testing extensions -->
        <module>devsupport-authentication-starter/devsupport-authentication-starter-test</module>
        <module>devsupport-rights-starter/devsupport-rights-starter-test</module>
        <!-- rights providers -->
        <module>devsupport-rights-starter/devsupport-rights-spi</module>
        <module>devsupport-rights-starter/devsupport-rights-cache-providers</module>
        <module>devsupport-rights-starter/devsupport-rights-providers</module>
        <!-- for apps -->
        <module>devsupport-application-parent</module>
        <module>devsupport-spring-application-starter</module>
        <module>devsupport-actuator-starter</module>
    </modules>

    <distributionManagement>
        <repository>
            <id>nexus-dgnsi-server</id>
            <name>Nexus DGNSI</name>
            <url>${nexus.url.stable}</url>
        </repository>
        <snapshotRepository>
            <id>nexus-dgnsi-server</id>
            <name>Nexus DGNSI</name>
            <url>${nexus.url.snapshots}</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>${maven-release-plugin.version}</version>
                <configuration>
                    <goals>clean deploy</goals>
                    <tagNameFormat>@{project.version}</tagNameFormat>
                    <pushChanges>true</pushChanges>
                    <localCheckout>true</localCheckout>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <java.version>17</java.version>
        <maven.deploy.skip>true</maven.deploy.skip>

        <maven-release-plugin.version>3.0.1</maven-release-plugin.version>
    </properties>

</project>
