    <dependencies>
        <dependency>
            <groupId>ch.vd.devsupport</groupId>
            <artifactId>vd-spring-boot-starter</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
