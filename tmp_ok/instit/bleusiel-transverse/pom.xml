<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <version>9.0.8-SNAPSHOT</version>

  <parent>
    <groupId>ch.vd.institutions.siel</groupId>
    <artifactId>shared-parent</artifactId>
    <version>9.0.0</version>
  </parent>
  <packaging>pom</packaging>

    <groupId>ch.vd.institutions.siel.transverse</groupId>
    <artifactId>transverse-parent</artifactId>
    <!-- <packaging>pom</packaging> -->
    <name>bleusiel Services transverses</name>
    <description>[Transverse] parent</description>

    <modules>
        <module>transverse-assembly</module>
        <module>utilisateur-service</module>
    </modules>

    <properties>
        <!-- See properties defined in environment-xx/maven/settings.xml -->
        <!-- Properties to define on command line: -->
        <!-- - config.location -->
        <!-- Default value: for customer -->
        <config.location>./config</config.location>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <archive.name>sielservicestransverses</archive.name>

        <dependency-check-maven.version>7.1.1</dependency-check-maven.version>
        <sonar.dependencyCheck.jsonReportPath>target/dependency-check-report.json</sonar.dependencyCheck.jsonReportPath>
        <sonar.dependencyCheck.htmlReportPath>target/dependency-check-report.html</sonar.dependencyCheck.htmlReportPath>
    </properties>

    <scm>
        <connection>${profile.git.connection}</connection>
        <tag>HEAD</tag>
    </scm>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>3.0.0</version>
                <configuration>
                    <goals>clean deploy</goals>
                    <pushChanges>true</pushChanges>
                    <arguments>-Dmaven.javadoc.skip=true</arguments>
                    <localCheckout>true</localCheckout>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>elca</id>
            <properties>
                <profile.git.connection>scm:git:file:.</profile.git.connection>
            </properties>
        </profile>
        <profile>
            <id>dgnsi</id>
            <properties>
                <profile.git.connection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/instit/bleusiel-transverse.git</profile.git.connection>
            </properties>
        </profile>
        <!-- can be removed when using the latest vd-application-parent -->
        <profile>
            <id>owasp-dependency-check</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.owasp</groupId>
                        <artifactId>dependency-check-maven</artifactId>
                        <version>${dependency-check-maven.version}</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>aggregate</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <formats>
                                <format>json</format>
                                <format>html</format>
                            </formats>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
