<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ch.vd.swissnat</groupId>
    <artifactId>swissnat-parent</artifactId>
    <version>5.8.0</version>
    <packaging>pom</packaging>
    <name>swissnat-parent</name>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.1.4.RELEASE</version>
        <relativePath />
    </parent>

    <scm>
        <developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/instit/swissnat</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <distributionManagement>
        <repository>
            <id>nexus-dgnsi-server</id>
            <name>Nexus releases</name>
            <url>${nexus.url.stable}</url>
        </repository>
        <snapshotRepository>
            <id>nexus-dgnsi-server</id>
            <name>Nexus snaphots</name>
            <url>${nexus.url.snapshots}</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>
    


    <modules>
		<module>foshared</module>
        <module>admui</module>
        <module>bo</module>
        <module>quizfo</module>
        <module>comfo</module>
    </modules>
    <profiles>
        <profile>
            <!-- NOTests -->
            <id>not</id>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </profile>
        <profile>
            <id>xfile.va</id>
            <properties>
                <xfile.url>http://outils-xweb-ws.etat-de-vaud.ch/outils/xweb/api</xfile.url>
            </properties>
        </profile>
        <profile>
            <!-- Pas de build du front -->
            <id>nof</id>
            <properties>
                <build.nofront>true</build.nofront>
            </properties>
        </profile>
        <profile>
            <id>platform-windows</id>
            <activation>
                <os>
                    <family>windows</family>
                </os>
            </activation>
            <properties>
                <!-- Override the executable names for Windows -->
                <npm.executable>npm.cmd</npm.executable>
                <yarn.executable>yarn</yarn.executable>
                <ng.executable>ng.cmd</ng.executable>
            </properties>
        </profile>
        <profile>
            <!-- Pour faire la livraison au CEI dans xFile -->
            <id>xfile</id>
            <properties>
                <!-- pour ne pas deployer dans Nexus -->
                <maven.deploy.skip>true</maven.deploy.skip>
            </properties>
            <build>
                <plugins>
                    <!-- Pour générer le fichier pour le CEI -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>${maven-assembly-plugin.version}</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <descriptors>
                                <descriptor>assembly.xml</descriptor>
                            </descriptors>
                            <finalName>${assembly.finalName}</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <tarLongFileMode>posix</tarLongFileMode>
                            <ignoreMissingDescriptor>true</ignoreMissingDescriptor>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>cei.aew.web</groupId>
                        <artifactId>cei-maven-plugin</artifactId>
                        <version>${cei-maven-plugin.version}</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>upload</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <webresourceurl>${xfile.url}</webresourceurl>
                            <filetoupload>target/${assembly.finalName}.tar.gz</filetoupload>
                            <!-- TO BE CHANGED -->
                            <from>${xfile.group}</from>
                            <to>WEB</to>
                            <warprojectonly>true</warprojectonly>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>devex.release</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>ch.vd.devex</groupId>
                        <artifactId>devex-maven-plugin</artifactId>
                        <version>${devex-maven-plugin.version}</version>
                        <configuration>
                            <configTag>${devex.configTag}</configTag>
                            <warProjectOnly>true</warProjectOnly>
                        </configuration>
                        <executions>
                            <execution>
                                <id>release</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>create-release</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>devex.in</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>ch.vd.devex</groupId>
                        <artifactId>devex-maven-plugin</artifactId>
                        <version>${devex-maven-plugin.version}</version>
                        <configuration>
                            <configTag>${devex.configTag}</configTag>
                            <warProjectOnly>true</warProjectOnly>
                            <environment>IN</environment>
                            <releaseVersion>${devex.releaseVersion}</releaseVersion>
                        </configuration>
                        <executions>
                            <execution>
                                <id>deploy</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>deploy</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>dgnsi</id>
            <distributionManagement>
                <repository>
                    <id>nexus-dgnsi-server</id>
                    <name>Nexus releases</name>
                    <url>${nexus.url.stable}</url>
                </repository>
                <snapshotRepository>
                    <id>nexus-dgnsi-server</id>
                    <name>Nexus snaphots</name>
                    <url>${nexus.url.snapshots}</url>
                    <uniqueVersion>false</uniqueVersion>
                </snapshotRepository>
            </distributionManagement>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${maven-jar-plugin.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                        <phase>verify</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>${maven-source-plugin.version}</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>verify</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>${maven-release-plugin.version}</version>
                <configuration>
                    <goals>${release.goals}</goals>
                    <releaseProfiles>${release.profiles}</releaseProfiles>
                    <updateDependencies>false</updateDependencies>
                    <pushChanges>true</pushChanges>
                    <tagNameFormat>@{project.version}</tagNameFormat>
                    <arguments>-Dmaven.javadoc.skip=true</arguments>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <xfile.url>http://outils-xweb-ws.etat-de-vaud.ch/outils/xweb/api</xfile.url>
        <xfile.group>MET_REP</xfile.group>
        <assembly.finalName>${project.artifactId}-${project.version}</assembly.finalName>
        <executable.finalName>${project.artifactId}</executable.finalName>
        <maven.deploy.skip>false</maven.deploy.skip>
        <warProjectOnly>false</warProjectOnly>

        <!-- Parametres de testing -->
        <surefire.useFile>false</surefire.useFile>
        <skipTests>false</skipTests>
        <build.nofront>false</build.nofront>

        <!-- Devex / CEI Config -->
        <devex-maven-plugin.releaseVersion>${project.version}</devex-maven-plugin.releaseVersion>
        <devex-maven-plugin.deployUnit>${project.artifactId}</devex-maven-plugin.deployUnit>
        <devex-maven-plugin.configTag>master</devex-maven-plugin.configTag>
        <devex-maven-plugin.warProjectOnly>${warProjectOnly}</devex-maven-plugin.warProjectOnly>
        <cei-maven-plugin.warprojectonly>${warProjectOnly}</cei-maven-plugin.warprojectonly>

        <!-- Le goal cei:upload est pris par le profile xfile -->
        <release.goals>clean install</release.goals>
        <devex.releaseVersion>${project.version}</devex.releaseVersion>
        <devex.profiles>devex.release,devex.in</devex.profiles>
        <release.profiles>not,xfile,${devex.profiles}</release.profiles>

        <!-- Sonar -->
        <sonar.java.coveragePlugin>jacoco</sonar.java.coveragePlugin>
        <sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
        <sonar.jacoco.reportPaths>${project.basedir}/target/jacoco.exec</sonar.jacoco.reportPaths>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <maven.deploy.skip>false</maven.deploy.skip>

        <atomikos.version>4.0.73</atomikos.version>
        <buildnumber-maven-plugin.version>1.4</buildnumber-maven-plugin.version>
        <cei-maven-plugin.version>1.0.3</cei-maven-plugin.version>
        <checkstyle.version>8.18</checkstyle.version>
        <commons-io.version>2.6</commons-io.version>
        <devex-maven-plugin.version>1.0.19</devex-maven-plugin.version>
        <esb-client-spring-boot-starter.version>5.3.6</esb-client-spring-boot-starter.version>
        <jacoco-maven-plugin.version>0.8.2</jacoco-maven-plugin.version>
        <jaxb2-value-constructor.version>3.0</jaxb2-value-constructor.version>
        <!--can be removed with Spring Boot 2.2.x-->
        <junit-jupiter.version>5.4.0</junit-jupiter.version>
        <!-- -->
        <kotlin.version>1.3.21</kotlin.version>
        <maven-checkstyle-plugin.version>3.0.0</maven-checkstyle-plugin.version>
        <maven-checkstyle-plugin.configLocation>${user.home}/slave-apps/checkstyles/checkstyle-iam.xml</maven-checkstyle-plugin.configLocation>
        <maven-jaxb2-plugin.version>0.13.3</maven-jaxb2-plugin.version>
        <maven-release-plugin.version>2.5.3</maven-release-plugin.version>
        <swagger.version>2.7.0</swagger.version>
        <xjc-non-null-getter.version>2.0.0</xjc-non-null-getter.version>

        <commons-csv.version>1.4</commons-csv.version>
        <poi.version>4.0.1</poi.version>

        <maven-jaxb2-plugin.version>0.13.2</maven-jaxb2-plugin.version>
        <jaxb2-value-constructor.version>3.0</jaxb2-value-constructor.version>
        <xjc-non-null-getter.version>2.0.0</xjc-non-null-getter.version>

        <assembly.finalName>${project.artifactId}-${project.version}</assembly.finalName>

        <xfile.url>http://outils-xweb-ws.etat-de-vaud.ch/outils/xweb/api</xfile.url>
        <xfile.group>dsi_pee</xfile.group>

        <maven-assembly-plugin.version>2.5.3</maven-assembly-plugin.version>
        <cei-maven-plugin.version>1.1.0</cei-maven-plugin.version>

        <devex.configTag>5.7.1</devex.configTag>
    </properties>

</project>
