<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ch.vd.swissnat</groupId>
    <artifactId>swissnatadmui</artifactId>
    <version>5.8.0</version>
    <packaging>pom</packaging>
    <name>swissnatadmui</name>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.1.4.RELEASE</version>
        <relativePath />
    </parent>

    <scm>
        <developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/instit/swissnat</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <profiles>
        <profile>
            <!-- Pas de build du front -->
            <id>nof</id>
            <properties>
                <build.nofront>true</build.nofront>
                <skipTests>true</skipTests>
            </properties>
        </profile>
        <profile>
            <id>not</id>
            <!-- NOTests -->
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>${exec-maven-plugin.version}</version>
                <configuration>
                    <workingDirectory>${basedir}</workingDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>exec-yarn-install</id>
                        <phase>prepare-package</phase>
                        <configuration>
                            <executable>${yarn.executable}</executable>
                            <arguments>
                                <argument>--pure-lockfile</argument>
                            </arguments>
                            <skip>${build.nofront}</skip>
                        </configuration>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>exec-ngcli-lint</id>
                        <phase>prepare-package</phase>
                        <configuration>
                            <executable>${yarn.executable}</executable>
                            <arguments>
                                <argument>run</argument>
                                <argument>lint</argument>
                            </arguments>
                            <skip>${skipTests}</skip>
                        </configuration>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>exec-ngcli-test</id>
                        <phase>prepare-package</phase>
                        <configuration>
                            <executable>${yarn.executable}</executable>
                            <arguments>
                                <argument>run</argument>
                                <argument>test</argument>
                            </arguments>
                            <skip>${skipTests}</skip>
                        </configuration>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>exec-ngcli-build</id>
                        <phase>prepare-package</phase>
                        <configuration>
                            <executable>${yarn.executable}</executable>
                            <arguments>
                                <argument>run</argument>
                                <argument>buildprod</argument>
                            </arguments>
                            <skip>${build.nofront}</skip>
                        </configuration>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <properties>
        <xfile.url>http://outils-xweb-ws.etat-de-vaud.ch/outils/xweb/api</xfile.url>
        <xfile.group>dsi_pee</xfile.group>
        <assembly.finalName>${project.artifactId}-${project.version}</assembly.finalName>
        <executable.finalName>${project.artifactId}</executable.finalName>
        <maven.deploy.skip>false</maven.deploy.skip>
        <warProjectOnly>false</warProjectOnly>

        <!-- Parametres de testing -->
        <surefire.useFile>false</surefire.useFile>
        <skipTests>false</skipTests>
        <build.nofront>false</build.nofront>

        <!-- Devex / CEI Config -->
        <devex.profiles>devex.release,devex.in</devex.profiles>
        <devex-maven-plugin.releaseVersion>${project.version}</devex-maven-plugin.releaseVersion>
        <devex-maven-plugin.deployUnit>${project.artifactId}</devex-maven-plugin.deployUnit>
        <devex-maven-plugin.configTag>master</devex-maven-plugin.configTag>
        <devex-maven-plugin.warProjectOnly>${warProjectOnly}</devex-maven-plugin.warProjectOnly>
        <cei-maven-plugin.warprojectonly>${warProjectOnly}</cei-maven-plugin.warprojectonly>

        <!-- Le goal cei:upload est pris par le profile xfile -->
        <release.goals>clean install</release.goals>
        <release.profiles>not,xfile,${devex.profiles}</release.profiles>

        <!-- Sonar -->
        <sonar.java.coveragePlugin>jacoco</sonar.java.coveragePlugin>
        <sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
        <sonar.jacoco.reportPaths>${project.basedir}/target/jacoco.exec</sonar.jacoco.reportPaths>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.8</java.version>
        <maven.deploy.skip>false</maven.deploy.skip>

        <atomikos.version>4.0.73</atomikos.version>
        <buildnumber-maven-plugin.version>1.4</buildnumber-maven-plugin.version>
        <cei-maven-plugin.version>1.0.3</cei-maven-plugin.version>
        <checkstyle.version>8.18</checkstyle.version>
        <commons-io.version>2.6</commons-io.version>
        <devex-maven-plugin.version>1.0.19</devex-maven-plugin.version>
        <esb-client-spring-boot-starter.version>5.3.6</esb-client-spring-boot-starter.version>
        <jacoco-maven-plugin.version>0.8.2</jacoco-maven-plugin.version>
        <jaxb2-value-constructor.version>3.0</jaxb2-value-constructor.version>
        <!--can be removed with Spring Boot 2.2.x-->
        <junit-jupiter.version>5.4.0</junit-jupiter.version>
        <!-- -->
        <kotlin.version>1.3.21</kotlin.version>
        <maven-checkstyle-plugin.version>3.0.0</maven-checkstyle-plugin.version>
        <maven-checkstyle-plugin.configLocation>${user.home}/slave-apps/checkstyles/checkstyle-iam.xml</maven-checkstyle-plugin.configLocation>
        <maven-jaxb2-plugin.version>0.13.3</maven-jaxb2-plugin.version>
        <maven-release-plugin.version>2.5.3</maven-release-plugin.version>
        <ojdbc7.version>12.1.0.2.0</ojdbc7.version>
        <swagger.version>2.7.0</swagger.version>
        <xjc-non-null-getter.version>2.0.0</xjc-non-null-getter.version>

        <commons-csv.version>1.4</commons-csv.version>
        <poi.version>4.0.1</poi.version>

        <maven-jaxb2-plugin.version>0.13.2</maven-jaxb2-plugin.version>
        <jaxb2-value-constructor.version>3.0</jaxb2-value-constructor.version>
        <xjc-non-null-getter.version>2.0.0</xjc-non-null-getter.version>

        <assembly.finalName>${project.artifactId}-${project.version}</assembly.finalName>

        <xfile.url>http://outils-xweb-ws.etat-de-vaud.ch/outils/xweb/api</xfile.url>
        <xfile.group>dsi_pee</xfile.group>

        <maven-assembly-plugin.version>2.5.3</maven-assembly-plugin.version>
        <cei-maven-plugin.version>1.1.0</cei-maven-plugin.version>

        <!-- executables -->
        <yarn.executable>yarn</yarn.executable>
        <ng.executable>ng</ng.executable>
        <npm.executable>npm</npm.executable>
    </properties>

</project>
