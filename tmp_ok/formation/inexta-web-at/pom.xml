<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>ch.vd.inextaweb</groupId>
	<artifactId>QT-test</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>Inexta Web Automatisation</name>
	<description>Suites de tests développées pour la non-régression de l'application Inexta web</description>

	<modules>
		<module>common-test-utils</module>
		<module>inexta-web-testsuites</module>
	</modules>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>1.8</java.version>
		<spring.version>5.0.2.RELEASE</spring.version>
		<serenity.version>1.7.0-rc.1</serenity.version>
		<serenity.cucumber.version>1.6.5</serenity.cucumber.version>
		<junit.version>4.12</junit.version>
		<slf4j.version>1.7.21</slf4j.version>
		<ojdbc.version>12.1.0.2.0</ojdbc.version>
	</properties>

	<dependencies>
		<!-- Serenity Test -->
	<dependency>
			<groupId>net.serenity-bdd</groupId>
			<artifactId>serenity-core</artifactId>
			<version>${serenity.version}</version>
    </dependency>
    <dependency>
        <groupId>net.serenity-bdd</groupId>
        <artifactId>serenity-junit</artifactId>
        <version>${serenity.version}</version>
    </dependency>
    <dependency>
        <groupId>net.serenity-bdd</groupId>
        <artifactId>serenity-cucumber</artifactId>
        <version>${serenity.cucumber.version}</version>
    </dependency>
    <dependency>
        <groupId>net.serenity-bdd</groupId>
        <artifactId>serenity-spring</artifactId>
        <version>${serenity.version}</version>
    </dependency>
    <!-- Spring -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-core</artifactId>
			<version>${spring.version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
			<version>${spring.version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-jdbc</artifactId>
			<version>${spring.version}</version>
		</dependency>
		<dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
		<!-- JUNIT -->
		 <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
            <version>1.7.0</version>
            <scope>test</scope>
        </dependency>
		<!-- JDBC -->
		<dependency>
			<groupId>oracle.jdbc</groupId>
			<artifactId>ojdbc7</artifactId>
			<version>${ojdbc.version}</version>
			<scope>runtime</scope>
		</dependency>

	</dependencies>

	<profiles>
		<profile>
			<id>integration</id>
			<activation>
				<property>
					<name>env</name>
					<value>int</value>
				</property>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<test.environnement>int</test.environnement>
			</properties>
		</profile>
		<profile>
			<id>validation</id>
			<activation>
				<property>
					<name>env</name>
					<value>val</value>
				</property>
			</activation>
			<properties>
				<test.environnement>val</test.environnement>
			</properties>
		</profile>
		<profile>
			<id>chromeCustom</id>
			<activation>
				<property>
					<name>webdriverCustom</name>
					<value>chrome</value>
				</property>
			</activation>
			<properties>
				<context>chrome</context>
				<webdriver.driver>provided</webdriver.driver>
				<webdriver.provided.type>mydriver</webdriver.provided.type>
				<webdriver.provided.mydriver>com.testing.starter.commun.webdrivers.ChromeCustom</webdriver.provided.mydriver>
				<thucydides.driver.capabilities>mydriver</thucydides.driver.capabilities>
			</properties>
		</profile>
		<profile>
			<id>chromeHeadlessCustom</id>
			<activation>
				<property>
					<name>webdriverCustom</name>
					<value>chromeHeadlessCustom</value>
				</property>
			</activation>
			<properties>
				<context>chrome</context>
				<webdriver.driver>provided</webdriver.driver>
				<webdriver.provided.type>mydriver</webdriver.provided.type>
				<webdriver.provided.mydriver>com.testing.starter.commun.webdrivers.ChromeHeadlessCustom</webdriver.provided.mydriver>
				<thucydides.driver.capabilities>mydriver</thucydides.driver.capabilities>
			</properties>
		</profile>
		<profile>
			<id>firefoxCustom</id>
			<activation>
				<property>
					<name>webdriverCustom</name>
					<value>firefox</value>
				</property>
			</activation>
			<properties>
				<context>firefox</context>
				<webdriver.driver>provided</webdriver.driver>
				<webdriver.provided.type>mydriver</webdriver.provided.type>
				<webdriver.provided.mydriver>com.testing.starter.commun.webdrivers.FirefoxCustom</webdriver.provided.mydriver>
				<thucydides.driver.capabilities>mydriver</thucydides.driver.capabilities>
			</properties>
		</profile>
		<profile>
			<id>firefoxHeadlessCustom</id>
			<activation>
				<property>
					<name>webdriverCustom</name>
					<value>firefoxHeadlessCustom</value>
				</property>
			</activation>
			<properties>
				<context>chrome</context>
				<webdriver.driver>provided</webdriver.driver>
				<webdriver.provided.type>mydriver</webdriver.provided.type>
				<webdriver.provided.mydriver>com.testing.starter.commun.webdrivers.FirefoxHeadlessCustom</webdriver.provided.mydriver>
				<thucydides.driver.capabilities>mydriver</thucydides.driver.capabilities>
			</properties>
		</profile>
		<profile>
			<id>internetExplorerCustom</id>
			<activation>
				<property>
					<name>webdriverCustom</name>
					<value>ie</value>
				</property>
			</activation>
			<properties>
				<context>ie</context>
				<webdriver.driver>provided</webdriver.driver>
				<webdriver.provided.type>mydriver</webdriver.provided.type>
				<webdriver.provided.mydriver>com.testing.starter.commun.webdrivers.InternetExplorerCustom</webdriver.provided.mydriver>
				<thucydides.driver.capabilities>mydriver</thucydides.driver.capabilities>
			</properties>
		</profile>
	</profiles>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.2</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>net.serenity-bdd.maven.plugins</groupId>
				<artifactId>serenity-maven-plugin</artifactId>
				<version>${serenity.version}</version>
				<executions>
					<execution>
						<id>serenity-reports</id>
						<phase>post-integration-test</phase>
						<goals>
							<goal>aggregate</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
