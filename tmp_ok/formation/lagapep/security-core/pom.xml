    <name>Lagapep - Core Security</name>
    <description>Core Security module of Lagapep</description>

    <properties>
        <shared-iam.version>9.2.0</shared-iam.version>
    </properties>

    <dependencies>
        <!-- Lagapep modules -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>lagapep-user-integration</artifactId>
            <version>${project.version}</version>
