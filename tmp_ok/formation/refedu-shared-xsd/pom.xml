<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>ch.vd.formation</groupId>
    <artifactId>refedu-shared-xsd</artifactId>
    <version>2.3.5-SNAPSHOT</version>
    <name>refeduSharedXSD</name>
    <packaging>jar</packaging>
    <description>RefEdu - Listes des XSDs pour les Ã©changes RefEdu et les autres Applications</description>

    <scm>
        <connection>git@bitbucket.etat-de-vaud.ch:/formation/refedu-shared-xsd.git</connection>
        <developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/formation/refedu-shared-xsd.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <properties>
        <maven-jaxb2-plugin-version>0.10.0</maven-jaxb2-plugin-version>
        <jakarta.xml.bind-api.version>2.3.3</jakarta.xml.bind-api.version>

        <jaxb2-version>0.6.4</jaxb2-version>
        <jaxb2-basics-runtime.version>1.11.1</jaxb2-basics-runtime.version>
        <build-helper-maven-plugin-version>1.7</build-helper-maven-plugin-version>
        <slf4j-api-verion>1.7.25</slf4j-api-verion>

        <junit.version>4.11</junit.version>

        <commons-lang>2.6</commons-lang>
        <commons-codec-version>1.10</commons-codec-version>

        <xfile.group>${user.name}</xfile.group>
        <xfile.url>http://outils-xweb-ws.etat-de-vaud.ch/outils/xweb/api</xfile.url>

        <assembly.finalName>${project.name}-${project.version}</assembly.finalName>

        <release.goals>clean deploy</release.goals>
        <release.profiles>not,xfile</release.profiles>

        <cei-maven-plugin.version>1.1.0</cei-maven-plugin.version>
        <maven-compiler-plugin.version>3.10.1</maven-compiler-plugin.version>
        <maven-release-plugin.version>2.5.3</maven-release-plugin.version>
        <maven-deploy-plugin.version>2.8.2</maven-deploy-plugin.version>
        <maven-assembly-plugin.version>2.5.3</maven-assembly-plugin.version>
        <maven-release-plugin.version>2.5.3</maven-release-plugin.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.jvnet.jaxb2_commons</groupId>
            <artifactId>jaxb2-basics-runtime</artifactId>
            <version>${jaxb2-basics-runtime.version}</version>
        </dependency>

        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.6</version>
        </dependency>

        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
            <version>${commons-codec-version}</version>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${slf4j-api-verion}</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>


        <!--Migration Java 11 -->
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
            <version>2.3.1</version>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-core</artifactId>
            <version>2.3.0</version>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-impl</artifactId>
            <version>2.3.1</version>
        </dependency>
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
            <version>2.9.1</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <!-- Properties management for relevDomainXSD
                 Generate Java classes from XSD during build -->
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb22-plugin</artifactId>
                <version>${maven-jaxb2-plugin-version}</version>
                <configuration>
                    <strict>false</strict>
                    <extension>true</extension>
                    <schemaDirectory>${basedir}/src/main/resources/xsd</schemaDirectory>
                    <catalog>${basedir}/src/main/resources/xsd/catalog.xml</catalog>
                    <generateDirectory>${basedir}/target/generated/src/main/java</generateDirectory>
                    <removeOldOutput>true</removeOldOutput>

                    <bindingDirectory>${basedir}/src/main/resources/bindings</bindingDirectory>

                    <args>
                        <!-- Generate toString, equals, hashCode methods -->
                        <!-- <arg>-XtoString-toStringStrategyClass=ch.vd.formation.refedu.xmlns.adapter.RefEduJAXBToStringStrategy</arg> -->
                        <arg>-XtoString</arg>
                        <arg>-Xequals</arg>
                        <arg>-XhashCode</arg>
                        <arg>-Xannotate</arg>
                        <!--<arg>-Xdigest</arg>-->

                        <!-- This helps generate setter methods-->
                        <!--<arg>-npa</arg>-->
                        <arg>-Xcollection-setter-injector</arg>

                        <!--<arg>-Djavax.xml.accessExternalSchema=all</arg>-->
                    </args>


                    <plugins>
                        <plugin>
                            <groupId>org.jvnet.jaxb2_commons</groupId>
                            <artifactId>jaxb2-basics</artifactId>
                            <version>${jaxb2-version}</version>
                        </plugin>
                        <plugin>
                            <groupId>org.jvnet.jaxb2_commons</groupId>
                            <artifactId>jaxb2-basics-annotate</artifactId>
                            <version>${jaxb2-version}</version>
                        </plugin>

                        <!-- plugin to generate setter for collection-->
                        <plugin>
                            <groupId>net.java.dev.vcc.thirdparty</groupId>
                            <artifactId>collection-setter-injector</artifactId>
                            <version>0.5.0-1</version>
                        </plugin>

                    </plugins>
                </configuration>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <schemaIncludes>
                                <include>multigrammaire/*.xsd</include>

                                <include>response/bilanTraitement/**/*.xsd</include>
                                <include>response/enseignant/**/*.xsd</include>
                                <include>response/eleve/**/*.xsd</include>
                                <include>response/donneePersonnelle/**/*.xsd</include>
                                <include>response/donneesReference/**/**/*.xsd</include>
                                <include>response/nomenclature/**/*.xsd</include>
                                <include>response/cursus/**/*.xsd</include>

                                <include>request/faitmarquant/elevecree/v1/elevecree-1-0.xsd</include>
                                <include>request/faitmarquant/elevescolarise/v1/elevescolarise-1-0.xsd</include>
                                <include>request/faitmarquant/elevescolarise/v1/elevescolarise-1-1.xsd</include>
                                <include>request/faitmarquant/elevefusionne/v1/elevefusionne-1-0.xsd</include>
                                <include>request/faitmarquant/elevemodifie/v1/elevemodifie-1-0.xsd</include>
                                <include>request/faitmarquant/personneModifiee/v1/personnemodifiee-1-0.xsd</include>
                                <include>request/faitmarquant/personneaffecteeetablissement/v1/personneaffecteeetablissement-1-0.xsd</include>
                                <include>request/faitmarquant/contratapprentissage/v1/contratapprentissage-1-0.xsd</include>
                                <include>request/faitmarquant/resultatexamen/v1/resultatexamen-1-0.xsd</include>
                                <include>request/faitmarquant/upipersonne/upipersonne-1-0.xsd</include>
                                <include>request/faitmarquant/titreenseignanthep/titreenseignanthep-1-0.xsd</include>
                                <include>request/faitmarquant/rcentreprise/rcentreprise-1-0.xsd</include>

                                <include>request/faitmarquant/personne/**/*.xsd</include>
                                <include>request/faitmarquant/entreprise/**/*.xsd</include>

                                <include>request/event/request/v1/eventRequest-1-0.xsd</include>

                                <include>schemaupi/**/*.xsd</include>
                                <include>shared-xsd/eCH-0085-1-4.xsd</include>
                                <include>shared-xsd/eCH-0086-1-3.xsd</include>
                                <include>shared-xsd/eVD-0015-4-2.xsd</include>

                                <include>shared-xsd/eVD-0022-3-6.xsd</include>

                            </schemaIncludes>
                            <schemaExcludes>
                                <include>request/faitmarquant/commun/esbheader/**/*.xsd</include>
                                <include>request/faitmarquant/commun/faitmarquant/**/*.xsd</include>

                                <include>request/domain/**/*.xsd</include>

                                <include>request/faitmarquant/rcpersonne/**/*.xsd</include>
                                <include>request/schemaupi_old/**/**/*.xsd</include>
                            </schemaExcludes>

                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.jvnet.jaxb2_commons</groupId>
                        <artifactId>jaxb2-basics</artifactId>
                        <version>${jaxb2-version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.jvnet.jaxb2_commons</groupId>
                        <artifactId>jaxb2-basics-annotate</artifactId>
                        <version>${jaxb2-version}</version>
                    </dependency>

                    <!-- JAXB API -->
                    <dependency>
                        <groupId>jakarta.xml.bind</groupId>
                        <artifactId>jakarta.xml.bind-api</artifactId>
                        <version>${jakarta.xml.bind-api.version}</version>
                    </dependency>

                </dependencies>
            </plugin>

            <!-- Add generated sources - avoids having to copy generated sources to
                 build location -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>${build-helper-maven-plugin-version}</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${basedir}/target/generated/src/main/java</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>${maven-release-plugin.version}</version>
                <configuration>
                    <goals>${release.goals}</goals>
                    <tagNameFormat>@{project.version}</tagNameFormat>
                    <arguments>-Dmaven.javadoc.skip=true</arguments>
                    <pushChanges>true</pushChanges>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>not</id>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </profile>
        <profile>
            <id>xfile</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>${maven-assembly-plugin.version}</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <descriptors>
                                <descriptor>assembly.xml</descriptor>
                            </descriptors>
                            <finalName>${assembly.finalName}</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <tarLongFileMode>posix</tarLongFileMode>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>cei.aew.web</groupId>
                        <artifactId>cei-maven-plugin</artifactId>
                        <version>${cei-maven-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>upload</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>upload</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <webresourceurl>${xfile.url}</webresourceurl>
                            <filetoupload>target/${project.name}-${project.version}.tar.gz</filetoupload>
                            <from>${xfile.group}</from>
                            <to>NCK</to>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <distributionManagement>
        <repository>
            <id>nexus.releases</id>
            <name>Nexus releases</name>
            <url>${nexus.url.releases}</url>
        </repository>
        <snapshotRepository>
            <id>nexus.snapshots</id>
            <name>Nexus snapshots</name>
            <url>${nexus.url.snapshots}</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

</project>
