<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>ch.vd.sieeo.neo</groupId>
	<artifactId>master-pom</artifactId>
	<version>24.0.4-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>NEO Master POM</name>
	<description>NEO Master POM</description>
	<organization>
		<name>Tata Consultancy Services Switzerland</name>
		<url>www.tcs.com</url>
	</organization>

	<url>www.vd.ch</url>
	<issueManagement>
		<system>Jira</system>
		<url>https://alti-suisse.atlassian.net/browse/NEO</url>
	</issueManagement>
	<ciManagement>
		<system>Jenkins</system>
		<url>https://edvteam.my.to:10443/jenkins/job/NEO</url>
	</ciManagement>

	<scm>
		<connection>${scm.connexion}</connection>
		<developerConnection>${scm.developerConnection}</developerConnection>
		<url>${scm.url}</url>
		<tag>${scm.tag}</tag>
	</scm>

	<properties>
		<scm.connexion/>
		<scm.developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/formation/neo.git</scm.developerConnection>
		<scm.url/>
		<scm.tag>HEAD</scm.tag>

		<maven.build.timestamp.format>dd-MM-yyyy HH:mm</maven.build.timestamp.format>
		<buildDate>${maven.build.timestamp}</buildDate>

		<database.test.url>jdbc:log4jdbc:hsqldb:mem:neo;sql.syntax_ora=true</database.test.url>
		<database.test.user>SA</database.test.user>
		<database.test.password />

		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.java.version>17</project.java.version>
		<maven.compiler.source>17</maven.compiler.source>
		<maven.compiler.target>17</maven.compiler.target>

		<org.springframework-version>6.1.6</org.springframework-version>
		<spring.version>${org.springframework-version}</spring.version>
		<org.springsecurity-version>6.2.4</org.springsecurity-version>
		<spring-security.version>${org.springsecurity-version}</spring-security.version>

		<org.hibernate.version>6.4.8.Final</org.hibernate.version>
		<org.hibernate.tool.version>6.4.8.Final</org.hibernate.tool.version>
		<org.hibernate-validator.version>8.0.1.Final</org.hibernate-validator.version>
		<spring-test-dbunit.version>1.3.0</spring-test-dbunit.version>
		<dbunit.version>2.7.3</dbunit.version>
		<hsqldb.version>2.7.2</hsqldb.version>
		<liquibase.version>4.27.0</liquibase.version>

		<org.aspectj-version>1.9.22</org.aspectj-version>

		<jakarta.mail.version>2.1.3</jakarta.mail.version>
		<angus.mail.version>2.0.3</angus.mail.version> <!-- Implementation of Jakarta mal API -->
		<jakarta.servlet-api.version>6.0.0</jakarta.servlet-api.version>
		<jakarta.validation-api.version>3.0.2</jakarta.validation-api.version>

		<jasperreports.version>6.21.2</jasperreports.version>
		<jasperreports-fonts-functions.version>6.21.2</jasperreports-fonts-functions.version>

		<openpdf.version>1.3.32</openpdf.version>
		<poi.version>5.2.5</poi.version>
		<open-csv.version>5.9</open-csv.version>

		<jackson-version>2.17.1</jackson-version>

		<junit.jupiter-version>5.10.1</junit.jupiter-version>
		<mockito.version>5.12.0</mockito.version>
		<jacoco.version>0.8.11</jacoco.version>

		<org.slf4j-version>2.0.11</org.slf4j-version>
		<slf4j-version>${org.slf4j-version}</slf4j-version>
		<logback-version>1.5.6</logback-version>

		<iam.version>10.1.0</iam.version>
		<esb-client.version>6.0.1</esb-client.version>

		<tomcat-version>10.1.24</tomcat-version>

		<google.guava.version>33.0.0-jre</google.guava.version>

		<maven.javadoc.skip>true</maven.javadoc.skip>

		<sonar-maven-plugin.version>3.10.0.2594</sonar-maven-plugin.version>
		<jacoco.aggregate.report>build-report/target/site/jacoco-aggregate/jacoco.xml</jacoco.aggregate.report>
		<sonar.coverage.jacoco.xmlReportPaths>${project.basedir}/${jacoco.aggregate.report}</sonar.coverage.jacoco.xmlReportPaths>
		<sonar.compiler.source>${maven.compiler.source}</sonar.compiler.source>
		<sonar.compiler.target>${maven.compiler.target}</sonar.compiler.target>
		<sonar.core.codeCoveragePlugin>jacoco</sonar.core.codeCoveragePlugin>
		<sonar.java.libraries>target</sonar.java.libraries>
		<sonar.java.binaries>target</sonar.java.binaries>
		<sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>

		<maven.deploy.skip>true</maven.deploy.skip>
	</properties>

	<repositories>
		<repository>
			<id>jaspersoft-third-party</id>
			<url>https://jaspersoft.jfrog.io/jaspersoft/third-party-ce-artifacts/</url>
		</repository>
	</repositories>

	<profiles>
		<profile>
			<id>TCS</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<scm.connexion>scm:git:ssh://git@bitbucket.org/alti-suisse/neo.git</scm.connexion>
				<scm.developerConnection>scm:git:ssh://git@bitbucket.org/alti-suisse/neo.git</scm.developerConnection>
				<scm.url>https://bitbucket.org/alti-suisse/neo</scm.url>
				<scm.tag>24.0</scm.tag>

				<prepare.goals>clean install verify</prepare.goals>
				<release.goals>deploy</release.goals>
				<release.profiles>TCS,not</release.profiles>
				<release.arguments>-Dmaven.javadoc.skip=true</release.arguments>
			</properties>
		</profile>

		<profile>
			<id>DGNSI</id>
			<properties>
				<scm.connexion/>
				<scm.developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/formation/neo.git</scm.developerConnection>
				<scm.url/>
				<scm.tag>HEAD</scm.tag>

				<devex.profiles>devex.release,devex.in</devex.profiles>
				<prepare.goals>clean verify</prepare.goals>
				<release.goals>clean deploy</release.goals>
				<release.profiles>DGNSI,not,nexus,${devex.profiles}</release.profiles>
				<release.arguments>-Dmaven.javadoc.skip=true</release.arguments>
			</properties>
			<distributionManagement>
				<repository>
					<id>nexus.releases</id>
					<name>Nexus releases</name>
					<url>${nexus.url.stable}</url>
				</repository>
				<snapshotRepository>
					<id>nexus.snapshots</id>
					<name>Nexus snapshots</name>
					<url>${nexus.url.snapshots}</url>
					<uniqueVersion>false</uniqueVersion>
				</snapshotRepository>
			</distributionManagement>
		</profile>

		<profile>
			<id>not</id>
			<!-- NOTests -->
			<properties>
				<skipTests>true</skipTests>
			</properties>
		</profile>
	</profiles>


	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>neo-esb-client</artifactId>
				<version>${project.version}</version>
				<exclusions>
					<exclusion>
						<groupId>org.bouncycastle</groupId>
						<artifactId>bcprov-jdk14</artifactId>
					</exclusion>
					<exclusion>
						<groupId>org.bouncycastle</groupId>
						<artifactId>bcmail-jdk14</artifactId>
					</exclusion>
				</exclusions>
			</dependency>

			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>neo-esb-client</artifactId>
				<type>test-jar</type>
				<scope>test</scope>
				<version>${project.version}</version>
			</dependency>

			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>utils</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>domain</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>reference</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>reference-impl</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>service</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>service-impl</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>service-impl</artifactId>
				<type>test-jar</type>
				<scope>test</scope>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>reference-impl</artifactId>
				<type>test-jar</type>
				<scope>test</scope>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>neo-report</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>neo-report</artifactId>
				<type>test-jar</type>
				<scope>test</scope>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>test-utils</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>com.googlecode.log4jdbc</groupId>
				<artifactId>log4jdbc</artifactId>
				<version>1.2</version>
			</dependency>

			<dependency>
				<groupId>org.mockito</groupId>
				<artifactId>mockito-junit-jupiter</artifactId>
				<version>${mockito.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<pluginManagement>
			<plugins>
				<!-- versions les plus récentes à compter du 08/01/2016 -->
				<plugin>
					<artifactId>maven-resources-plugin</artifactId>
					<version>3.3.1</version>
				</plugin>
				<plugin>
					<artifactId>maven-antrun-plugin</artifactId>
					<version>1.8</version>
				</plugin>
				<plugin>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>3.3.0</version>
				</plugin>
				<plugin>
					<artifactId>maven-dependency-plugin</artifactId>
					<version>3.6.0</version>
				</plugin>
				<plugin>
					<artifactId>maven-release-plugin</artifactId>
					<version>3.0.1</version>
				</plugin>
				<plugin>
					<artifactId>maven-clean-plugin</artifactId>
					<version>3.3.1</version>
				</plugin>
				<plugin>
					<artifactId>maven-install-plugin</artifactId>
					<version>3.1.1</version>
				</plugin>
				<plugin>
					<artifactId>maven-deploy-plugin</artifactId>
					<version>3.1.1</version>
				</plugin>
				<plugin>
					<artifactId>maven-site-plugin</artifactId>
					<version>3.12.1</version>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.11.0</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-failsafe-plugin</artifactId>
					<version>3.1.2</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<version>3.2.2</version>
					<configuration>
						<argLine>@{argLine} -Dfile.encoding=UTF-8</argLine>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>sql-maven-plugin</artifactId>
					<version>1.5</version>
				</plugin>
				<plugin>
					<groupId>org.jacoco</groupId>
					<artifactId>jacoco-maven-plugin</artifactId>
					<executions>
						<execution>
							<goals>
								<goal>prepare-agent</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.sonarsource.scanner.maven</groupId>
					<artifactId>sonar-maven-plugin</artifactId>
					<version>${sonar-maven-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.apache.maven.plugins</groupId>
										<artifactId>maven-dependency-plugin</artifactId>
										<versionRange>[3.1,)</versionRange>
										<goals>
											<goal>copy</goal>
											<goal>unpack</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore />
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.jacoco</groupId>
										<artifactId>jacoco-maven-plugin</artifactId>
										<version>${jacoco.version}</version>
										<goals>
											<goal>prepare-agent</goal>
										</goals>
									</pluginExecutionFilter>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>versions-maven-plugin</artifactId>
					<version>2.16.2</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-scm-plugin</artifactId>
					<version>1.11.2</version>
					<configuration>
						<connectionType>developerConnection</connectionType>
					</configuration>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-javadoc-plugin</artifactId>
					<version>3.6.3</version>
				</plugin>

				<plugin>
					<groupId>org.apache.tomcat.maven</groupId>
					<artifactId>tomcat7-maven-plugin</artifactId>
					<version>2.2</version>
				</plugin>
			</plugins>
		</pluginManagement>

		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>aspectj-maven-plugin</artifactId>
				<version>1.11</version>
				<configuration>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${project.java.version}</source>
					<target>${project.java.version}</target>
					<encoding>${project.build.sourceEncoding}</encoding>
					<parameters>true</parameters> <!-- Required starting from Spring framework 6.1 so that Controllers can discover query parameters based on their name: https://github.com/spring-projects/spring-framework/wiki/Upgrading-to-Spring-Framework-6.x#parameter-name-retention -->
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<goals>${release.goals}</goals>
					<preparationGoals>${prepare.goals}</preparationGoals>
					<releaseProfiles>${release.profiles}</releaseProfiles>
					<tagNameFormat>@{project.version}</tagNameFormat>
					<arguments>${release.arguments}</arguments>
					<pushChanges>true</pushChanges>
					<localCheckout>true</localCheckout>
					<autoVersionSubmodules>true</autoVersionSubmodules>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>${jacoco.version}</version>
				<executions>
					<execution>
						<id>prepare-agent</id>
						<phase>verify</phase>
						<goals>
							<goal>prepare-agent</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.sonarsource.scanner.maven</groupId>
				<artifactId>sonar-maven-plugin</artifactId>
				<version>${sonar-maven-plugin.version}</version>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<version>3.3.0</version>
				<executions>
					<execution>
						<id>enforce-maven</id>
						<goals>
							<goal>enforce</goal>
						</goals>
						<configuration>
							<rules>
								<dependencyConvergence /> <!-- Check dependencies conflicts during build -->
								<requireMavenVersion>
									<version>3.0</version>
								</requireMavenVersion>
							</rules>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>versions-maven-plugin</artifactId>
				<inherited>false</inherited>
				<configuration>
					<processPluginDependenciesInPluginManagement>false</processPluginDependenciesInPluginManagement>
					<processPluginDependencies>false</processPluginDependencies>
					<processDependencyManagement>false</processDependencyManagement>
					<outputFile>neo-web/target/outdated-dependencies-master.txt</outputFile>
					<rulesUri>file:///${project.basedir}/maven-versions-rules.xml</rulesUri>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.8</version>
				<inherited>false</inherited>
				<executions>
					<execution>
						<id>check-dependencies</id>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<ant antfile="${basedir}/build.xml">
									<target name="checkDependencies" />
								</ant>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<modules>
		<module>utils</module>
		<module>domain</module>
		<module>reference</module>
		<module>reference-impl</module>
		<module>service</module>
		<module>service-impl</module>
		<module>neo-web</module>
		<module>test-utils</module>
		<module>neo-report</module>
		<module>neo-esb-client</module>
		<module>build-report</module>
		<module>packaging</module>
	</modules>
</project>
