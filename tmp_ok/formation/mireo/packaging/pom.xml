<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>ch.vd.formation.mireo</groupId>
        <artifactId>mireo-parent</artifactId>
        <version>0.1.0</version>
    </parent>

    <artifactId>mireo-packaging</artifactId>
    <name>MIREO [packaging]</name>
    <packaging>pom</packaging>

    <properties>
        <project.home>${project.basedir}/../</project.home>
        <mireo.deliverables.dir>${project.basedir}/../</mireo.deliverables.dir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <version>${project.version}</version>
            <artifactId>mireo-web</artifactId>
            <type>war</type>
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>xfile.va</id>
            <properties>
                <xfile.url>http://exploitation-va.etat-de-vaud.ch/outils/web/ws/rest</xfile.url>
            </properties>
        </profile>
        <profile>
            <id>build-release</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>2.3</version>
                        <executions>
                            <execution>
                                <id>distro-assembly</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <appendAssemblyId>false</appendAssemblyId>
                                    <finalName>${mireo.name}-${project.version}</finalName>
                                    <descriptors>
                                        <descriptor>src/assemble/bin.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>cei.aew.web</groupId>
                        <artifactId>cei-maven-plugin</artifactId>
                        <version>${cei-maven-plugin.version}</version>
                        <configuration>
                            <webresourceurl>${xfile.url}</webresourceurl>
                            <filetoupload>target/${mireo.name}-${project.version}.tar.gz</filetoupload>
                            <from>dsi_for</from>
                            <to>WEB</to>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
