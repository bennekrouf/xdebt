    </dependencies>

    <distributionManagement>
        <repository>
            <id>DSAS-repo</id>
            <name>DSAS-repo</name>
            <url>${nexus.url}/dsas-releases</url>
            <layout>default</layout>
        </repository>
        <snapshotRepository>
            <id>DSAS-snapshots</id>
            <name>DSAS-snapshots</name>
            <url>${nexus.url}/dsas-snapshots</url>
            <layout>default</layout>
        </snapshotRepository>
    </distributionManagement>

</project>
