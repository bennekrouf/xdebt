<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <artifactId>demaut-wsclient-refsec</artifactId>
    <version>2.7.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>demaut-wsclient-refsec</name>

    <parent>
        <groupId>ch.vd.ses</groupId>
        <artifactId>demaut-wsclient</artifactId>
        <version>2.7.0-SNAPSHOT</version>
    </parent>

    <dependencies>
        <dependency>
            <groupId>ch.vd.ses</groupId>
            <artifactId>demaut-wsclient-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>io.swagger.core.v3</groupId>
            <artifactId>swagger-annotations</artifactId>
            <version>2.2.16</version>
        </dependency>
        <dependency>
            <groupId>ch.vd.devsupport</groupId>
            <artifactId>devsupport-keepass-properties-api</artifactId>
            <version>${devsupport.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>ch.vd.devsupport</groupId>
            <artifactId>devsupport-keepass-properties-starter</artifactId>
            <version>${devsupport.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.openapitools</groupId>
                <artifactId>openapi-generator-maven-plugin</artifactId>
                <version>7.1.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/src/main/resources/refsecref-api-docs.json</inputSpec>
                            <generatorName>java</generatorName>
                            <modelPackage>ch.vd.demaut.wsclient.refsec.model</modelPackage>
                            <apiPackage>ch.vd.demaut.wsclient.refsec.api</apiPackage>
                            <generateApiTests>false</generateApiTests>
                            <generateModelTests>false</generateModelTests>
                            <generateModelDocumentation>false</generateModelDocumentation>
                            <supportingFilesToGenerate>ApiClient.java,Authentication.java,HttpBasicAuth.java,ApiKeyAuth.java,OAuth.java,RFC3339DateFormat.java</supportingFilesToGenerate>
                            <configOptions>
                                <java11>true</java11>
                                <dateLibrary>java11</dateLibrary>
                                <library>resttemplate</library>
                                <useSpringBoot3>true</useSpringBoot3>
                                <useJakartaEe>true</useJakartaEe>
                                <openApiNullable>false</openApiNullable>
                            </configOptions>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
