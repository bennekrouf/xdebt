<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <artifactId>demaut-wsclient-happyexchange</artifactId>
    <version>2.7.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>demaut-wsclient-happyexchange</name>

    <parent>
        <groupId>ch.vd.ses</groupId>
        <artifactId>demaut-wsclient</artifactId>
        <version>2.7.0-SNAPSHOT</version>
    </parent>

    <properties>
        <swagger-annotations.version>2.2.17</swagger-annotations.version>
        <openapi-generator-maven-plugin.version>7.1.0</openapi-generator-maven-plugin.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>ch.vd.ses</groupId>
            <artifactId>demaut-wsclient-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>io.swagger.core.v3</groupId>
            <artifactId>swagger-annotations</artifactId>
            <version>${swagger-annotations.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.vd.devsupport</groupId>
            <artifactId>devsupport-keepass-properties-api</artifactId>
            <version>${devsupport.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>ch.vd.devsupport</groupId>
            <artifactId>devsupport-keepass-properties-starter</artifactId>
            <version>${devsupport.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.openapitools</groupId>
                <artifactId>openapi-generator-maven-plugin</artifactId>
                <version>${openapi-generator-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/src/main/resources/happyexchange-api-v0.json</inputSpec>
                            <generatorName>java</generatorName>
                            <modelPackage>ch.vd.demaut.wsclient.happyexchange.model</modelPackage>
                            <apiPackage>ch.vd.demaut.wsclient.happyexchange.api</apiPackage>
                            <generateApiTests>false</generateApiTests>
                            <generateModelTests>false</generateModelTests>
                            <generateModelDocumentation>false</generateModelDocumentation>
                            <configOptions>
                                <java8>true</java8>
                                <java11>true</java11>
                                <dateLibrary>java8-localdatetime</dateLibrary>
                                <library>resttemplate</library>
                                <useSpringBoot3>true</useSpringBoot3>
                                <useJakartaEe>true</useJakartaEe>
                                <openApiNullable>false</openApiNullable>
                            </configOptions>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
