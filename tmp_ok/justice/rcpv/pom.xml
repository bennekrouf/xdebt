<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.vd.justice</groupId>
	<artifactId>rcpv</artifactId>
	<name>rcpv</name>
	<description>Artifact RCPV</description>
	<version>1.9.17-SNAPSHOT</version>
	<packaging>war</packaging>

	<properties>

		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<config.location>./config</config.location>
		<devex-maven-plugin.version>1.1.1</devex-maven-plugin.version>
    <maven-release-plugin.version>3.0.1</maven-release-plugin.version>
		<maven-assembly-plugin.version>3.1.1</maven-assembly-plugin.version>
		<devex-maven-plugin.configTag>${devex-configTag}</devex-maven-plugin.configTag>
		<assembly.finalName>${project.artifactId}-${project.version}</assembly.finalName>
		<release.goals>clean deploy</release.goals>
		<devex.profiles>devex.release,devex.in</devex.profiles>
		<release.profiles>not,assembly,nexus,ch-int,${devex.profiles}</release.profiles>
		<devex-maven-plugin.releaseVersion>${project.version}</devex-maven-plugin.releaseVersion>
		<devex-maven-plugin.deployUnit>${project.artifactId}</devex-maven-plugin.deployUnit>
		<warprojectonly>false</warprojectonly>
	</properties>
	<!-- <distributionManagement> -->
	<!-- 	<repository> -->
	<!-- 		<id>DSAS-repo</id> -->
	<!-- 		<name>DSAS-repo</name> -->
	<!-- 		<url>${nexus.url}/dsas-releases</url> -->
