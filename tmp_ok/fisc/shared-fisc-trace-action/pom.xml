<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ch.vd.fiscalite</groupId>
        <artifactId>shared-parent-plugin</artifactId>
        <version>2.0.9</version>
    </parent>

    <groupId>ch.vd.fiscalite.shared</groupId>
    <artifactId>shared-fisc-trace-action</artifactId>
    <version>1.0.3-SNAPSHOT</version>
    <name>Shared fiscalité - Traçabilité des actions utilisateurs</name>
    <packaging>pom</packaging>

    <modules>
        <module>shared-fisc-trace-action-parseur</module>
        <module>shared-fisc-trace-action-api</module>
    </modules>

    <properties>
        <project.encoding>UTF-8</project.encoding>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <compiler.release>11</compiler.release>

        <slf4j-api.version>1.7.22</slf4j-api.version>
        <commons-logging.version>1.1.1</commons-logging.version>
        <lib.commons-lang>2.3</lib.commons-lang>
        <shared-jmx.version>4.2.0</shared-jmx.version>
        <lib.spring.version>5.1.2.RELEASE</lib.spring.version>
        <lib.poi.version>5.2.5</lib.poi.version>

        <javax.ws.rs-api.version>2.0.1</javax.ws.rs-api.version>
        <jersey-client.version>2.13</jersey-client.version>

        <commons-lang3.version>3.9</commons-lang3.version>
        <spring-boot-starter-data-jpa.version>2.2.13.RELEASE</spring-boot-starter-data-jpa.version>
        <spring-data-jpa.version>2.2.13.RELEASE</spring-data-jpa.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>shared-fisc-trace-action-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>shared-fisc-trace-action-parseur</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.poi</groupId>
                <artifactId>poi</artifactId>
                <version>${lib.poi.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.poi</groupId>
                <artifactId>poi-ooxml</artifactId>
                <version>${lib.poi.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
            <version>${spring-boot-starter-data-jpa.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.data</groupId>
            <artifactId>spring-data-jpa</artifactId>
            <version>${spring-data-jpa.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>${commons-lang3.version}</version>
        </dependency>
    </dependencies>

    <scm>
        <connection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/shared-fisc-trace-action.git</connection>
        <developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/shared-fisc-trace-action.git</developerConnection>
        <url>https://portail.etat-de-vaud.ch/outils/git/projects/FISC/repos/shared-fisc-trace-action</url>
        <tag>${project.artifactId}-${project.version}</tag>
    </scm>
</project>