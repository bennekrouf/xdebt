<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ch.vd.dfin.tao</groupId>
        <artifactId>tao-batch-consolidationpmrpt-parent</artifactId>
        <version>2022RPT.A.3-SNAPSHOT</version>
    </parent>

    <artifactId>tao-batch-consolidationpmrpt-app</artifactId>
    <name>tao-batch-consolidationpmrpt-app</name>

    <packaging>jar</packaging>

    <properties>
        <lib.jackson-annotations.version>2.13.3</lib.jackson-annotations.version>
        <lib.log4j.version>2.17.1</lib.log4j.version>
        <lib.slf4j.version>1.7.30</lib.slf4j.version>
        <lib.poi-ooxml.version>4.1.2</lib.poi-ooxml.version>
        <lib.commons-io.version>2.7</lib.commons-io.version>
        <lib.commons-lang.version>2.6</lib.commons-lang.version>
        <lib.commons-logging.version>1.2</lib.commons-logging.version>
        <lib.junit.version>4.13</lib.junit.version>
        <lib.json-schema-validator.version>1.0.72</lib.json-schema-validator.version>
        <tao.batch.common.ind>2.1.2</tao.batch.common.ind>
        <tao.common.util>1.19</tao.common.util>

        <project.encoding>Cp1252</project.encoding>
        <maven.compiler.source>1.11</maven.compiler.source>
        <maven.compiler.target>1.11</maven.compiler.target>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <encoding>${project.encoding}</encoding>
                    <release>11</release>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>ch.vd.dfin.tao</groupId>
            <artifactId>tao-batch-common-ind</artifactId>
            <version>${tao.batch.common.ind}</version>
            <scope>compile</scope>
            <exclusions>
                <exclusion>
                    <groupId>junit</groupId>
                    <artifactId>junit</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>ch.vd.dfin.tao</groupId>
            <artifactId>tao-common-util</artifactId>
            <version>${tao.common.util}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${lib.junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>${lib.commons-io.version}</version>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>${lib.commons-lang.version}</version>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>${lib.commons-logging.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi-ooxml</artifactId>
            <version>${lib.poi-ooxml.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${lib.jackson-annotations.version}</version>
        </dependency>
        <!-- https://mvnrepository.com/artifact/io.rest-assured/json-schema-validator -->
        <dependency>
            <groupId>com.networknt</groupId>
            <artifactId>json-schema-validator</artifactId>
            <version>${lib.json-schema-validator.version}</version>
        </dependency>
        <!-- slf4j -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${lib.slf4j.version}</version>
        </dependency>
        <!-- log4j -->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
            <version>${lib.log4j.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <version>${lib.log4j.version}</version>
        </dependency>

        <!-- NÃ©cessaire pour tao-exchange qui utilise encore log4j -->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-1.2-api</artifactId>
            <version>${lib.log4j.version}</version>
        </dependency>

        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-web</artifactId>
            <version>${lib.log4j.version}</version>
        </dependency>
        <!-- bridge common-logging - log4j2 (spring, taoadmin)-->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-jcl</artifactId>
            <version>${lib.log4j.version}</version>
        </dependency>
        <!-- bridge slf4j - log4j2 (activmq etc..)-->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-slf4j-impl</artifactId>
            <version>${lib.log4j.version}</version>
        </dependency>
    </dependencies>
</project>
