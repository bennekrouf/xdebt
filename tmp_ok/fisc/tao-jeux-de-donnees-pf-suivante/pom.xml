	<groupId>ch.vd.dfin.tao.tra.jeux.donnees</groupId>
	<artifactId>tao-jeux-de-donnees-pf-suivante</artifactId>
	<packaging>jar</packaging>
	<version>1.0</version>
	<name>Importe et met a jour les fichiers xml pour la pf suivante</name>
	<url>http://maven.apache.org</url>

	<!-- Properties -->

	<properties>
		<spring-version>5.2.20.RELEASE</spring-version>
		<distribTargetDirectory>${basedir}/zip</distribTargetDirectory>
	</properties>

	<!-- Build -->

	<build>
		<plugins>
			<!-- Class generation from xsd directives -->
			<plugin>
				<groupId>com.sun.tools.xjc.maven2</groupId>
				<artifactId>maven-jaxb-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<!-- Compiler directives -->
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
					<encoding>ISO-8859-1</encoding>
				</configuration>
			</plugin>
			<!-- Dependencies directives -->
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/lib</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- Jar directives -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>ch.vd.dfin.tao.tra.jeux.donnees.ActualiseJeuxDonnees</mainClass>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
							<addClasspath>true</addClasspath>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<!-- Assembly directive -->
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>src/assemble/distrib.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>install</phase>
						<goals>
							<goal>single</goal>
						</goals>

					</execution>
				</executions>
			</plugin>
			<!-- Replace tokens in file jeuxDeDonneesPFSuivante.feed.bat -->
			<plugin>
				<groupId>com.google.code.maven-replacer-plugin</groupId>
				<artifactId>maven-replacer-plugin</artifactId>
				<executions>
					<execution>
						<id>jeuxDeDonneesPFSuivante.bat</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>replace</goal>
						</goals>
						<configuration>
							<ignoreMissingFile>true</ignoreMissingFile>
							<file>distribution/bin/jeuxDeDonneesPFSuivante.feed.bat</file>
							<outputFile>distribution/bin/jeuxDeDonneesPFSuivante.bat</outputFile>
							<regex>false</regex>
							<replacements>
								<replacement>
									<token>$distributionJar</token>
									<value>${project.build.finalName}</value>
								</replacement>
							</replacements>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- Copy distribution files to the zip directory -->
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>copyDistrib</id>
						<phase>install</phase>
						<configuration>

							<target name="copyDistrib">
								<copy
									file="${project.build.directory}/${project.build.finalName}-distribution.zip"
									tofile="${distribTargetDirectory}/${project.build.finalName}-distribution.zip"
									overwrite="true" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

