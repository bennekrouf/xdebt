<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ch.vd.fiscalite.dperm</groupId>
        <artifactId>dperm-repelec</artifactId>
        <version>24R2.B.1-SNAPSHOT</version>
    </parent>

    <artifactId>dperm-repelec-impl-commons</artifactId>
    <packaging>jar</packaging>

    <description>Librairie partagée entre les implémentations de repelec command</description>

    <properties>
        <xsdWorkingDir>${project.build.directory}/xsd-for-generated-sources/xsd-dperm</xsdWorkingDir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>ch.vd.fiscalite.dperm</groupId>
            <artifactId>dperm-repelec-api</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.fiscalite.dperm</groupId>
            <artifactId>dperm-repelec-dao</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.fiscalite.dperm</groupId>
            <artifactId>dperm-resources</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-tomcat</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-oxm</artifactId>
        </dependency>
        <!-- librairies DSI -->
        <dependency>
            <groupId>ch.vd.technical.esb</groupId>
            <artifactId>esb-client</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.fiscalite.shared</groupId>
            <artifactId>tao-admin-client-shared</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.fiscalite.shared</groupId>
            <artifactId>editique-client</artifactId>
        </dependency>
        <!-- jaxb -->
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-impl</artifactId>
        </dependency>
        <!-- librairies test-->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <version>3.2.4</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>${maven-surefire-plugin.version}</version>
                    <configuration>
                        <includes>
                            <include>**/*Test.java</include>
                        </includes>
                        <excludes>
                            <exclude>**/*IT.java</exclude>
                        </excludes>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>${maven-compiler-plugin.version}</version>
                    <configuration>
                        <encoding>UTF-8</encoding>
                        <release>11</release>
                        <source>${maven.compiler.source}</source>
                        <target>${maven.compiler.target}</target>
                        <showDeprecation>true</showDeprecation>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>${maven-jar-plugin.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-source-plugin</artifactId>
                    <version>${maven-source-plugin.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>${maven-resources-plugin.version}</version>
                    <executions>
                        <execution>
                            <id>copy-resources</id>
                            <phase>generate-sources</phase>
                            <configuration>
                                <outputDirectory>${xsdWorkingDir}</outputDirectory>
                                <resources>
                                    <resource>
                                        <directory>${project.basedir}/src/main/xjb</directory>
                                        <includes>
                                            <include>binding.xjb</include>
                                        </includes>
                                    </resource>
                                </resources>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <version>${maven-dependency-plugin.version}</version>
                    <executions>
                        <execution>
                            <id>unpack-xsd-dependency</id>
                            <phase>generate-sources</phase>
                            <configuration>
                                <outputDirectory>${project.build.directory}/xsd-for-generated-sources</outputDirectory>
                                <artifactItems>
                                    <artifactItem>
                                        <groupId>ch.vd.fiscalite.dperm</groupId>
                                        <artifactId>dperm-resources</artifactId>
                                        <type>jar</type>
                                    </artifactItem>
                                </artifactItems>
                                <includes>
                                    xsd-dperm/typeSimpleDPerm-1.xsd,
                                    xsd-dperm/quittanceRepElec-2.xsd,
                                    xsd-dperm/quittanceRepElec-3.xsd,
                                    xsd-dperm/documentRepElec-1.xsd,
                                    xsd-dperm/documentRepElec-2.xsd,
                                    xsd-dperm/documentRepElec-3.xsd,
                                    xsd-dperm/documentRepElec-4.xsd,
                                    xsd-dperm/repelec/documentSortantRepElec-1.xsd,
                                    xsd-dperm/repelec/indexationDocumentDperm-1.xsd
                                </includes>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>com.sun.tools.xjc.maven2</groupId>
                    <artifactId>maven-jaxb-plugin</artifactId>
                    <version>1.1.1</version>
                    <configuration>
                        <verbose>true</verbose>
                        <readOnly>true</readOnly>
                        <strict>true</strict>
                        <extension>true</extension>
                        <args>-Xifins</args>
                        <includeSchemas>
                            <includeSchema>**/*.xsd</includeSchema>
                        </includeSchemas>
                    </configuration>
                    <executions>
                        <execution>
                            <id>generate-sources-document</id>
                            <phase>generate-sources</phase>
                            <configuration>
                                <schemaDirectory>${xsdWorkingDir}</schemaDirectory>
                                <generateDirectory>${project.build.directory}/generated-sources/jaxb/
                                </generateDirectory>
                                <includeBindings>
                                    <includeBinding>binding.xjb</includeBinding>
                                </includeBindings>
                                <encoding>UTF-8</encoding>
                            </configuration>
                        </execution>
                    </executions>
                    <dependencies>
                        <dependency>
                            <groupId>org.andromda.thirdparty.jaxb2_commons</groupId>
                            <artifactId>xjc-if-ins</artifactId>
                            <version>1.0</version>
                        </dependency>
                    </dependencies>
                </plugin>
                <plugin>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <version>${maven-javadoc-plugin.version}</version>
                    <configuration>
                        <excludePackageNames>
                            ch.vd.fiscalite.dperm.common._1:ch.vd.fiscalite.dperm.repelec.document_3:ch.vd.fiscalite.dperm.repelec.document_4:ch.vd.fiscalite.dperm.repelec.quittance_2:ch.vd.fiscalite.dperm.repelec.quittance_3:ch.vd.fiscalite.dperm.repelec.quittance_3:ch.vd.fiscalite.dperm.repelec.documentsortant_1:ch.vd.fiscalite.dperm.document.indexation_1
                        </excludePackageNames>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>${maven-dependency-plugin.version}</version>
                <executions>
                    <execution>
                        <id>unpack-xsd-dependency</id>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${maven-resources-plugin.version}</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.sun.tools.xjc.maven2</groupId>
                <artifactId>maven-jaxb-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-sources-document</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
