<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.3.0.RELEASE</version>
        <relativePath /> <!-- lookup parent from repository -->
    </parent>

    <groupId>ch.vd.isp2</groupId>
    <artifactId>isp2-tests-automatises</artifactId>
    <version>1.2.1-SNAPSHOT</version>
    <name>isp2-tests-automatises</name>
    <description>A partir d'un fichier excel, automatise l'initialisation des tests</description>

    <properties>
        <java.version>11</java.version>
        <start-class>ch.vd.isp2.testsautomatises.Isp2TestsAutomatisesApplication</start-class>

        <org.apache.poi.version>4.1.2</org.apache.poi.version>

        <jaxb2-maven-plugin.version>2.5.0</jaxb2-maven-plugin.version>
        <changelog-maven-plugin.version>1.61</changelog-maven-plugin.version>
    </properties>

    <scm>
        <connection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/isp2-tests-automatises.git</connection>
        <developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/isp2-tests-automatises.git</developerConnection>
        <url>https://dsigit.etat-de-vaud.ch/outils/git/projects/FISC/repos/isp2-tests-automatises/browse</url>
        <tag>${project.artifactId}-${project.version}</tag>
    </scm>

    <distributionManagement>
        <repository>
            <id>nexus.releases</id>
            <name>Nexus releases</name>
            <url>${nexus.url.releases}</url>
        </repository>

        <snapshotRepository>
            <id>nexus.snapshots</id>
            <name>Nexus snaphots</name>
            <url>${nexus.url.snapshots}</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

    <dependencies>
        <!-- Spring -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-jdbc</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-webflux</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-aop</artifactId>
        </dependency>

        <!-- JAXB -->
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jaxb</groupId>
            <artifactId>jaxb-runtime</artifactId>
        </dependency>

        <!-- Base de donnÃ©es -->
        <dependency>
            <groupId>com.microsoft.sqlserver</groupId>
            <artifactId>mssql-jdbc</artifactId>
            <scope>runtime</scope>
        </dependency>

        <!-- Utilitaires -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi</artifactId>
            <version>${org.apache.poi.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi-ooxml</artifactId>
            <version>${org.apache.poi.version}</version>
        </dependency>

        <!-- Tests -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.junit.vintage</groupId>
                    <artifactId>junit-vintage-engine</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-test-auto-source</id>
                        <phase>generate-test-sources</phase>
                        <goals>
                            <goal>add-test-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/test-auto/java</source>
                            </sources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>add-test-auto-resources</id>
                        <phase>generate-test-resources</phase>
                        <goals>
                            <goal>add-test-resource</goal>
                        </goals>
                        <configuration>
                            <resources>
                                <resource>
                                    <directory>src/test-auto/resources</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <version>${jaxb2-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <id>xjc-swissdec-v4</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <packageName>ch.vd.swissdec.v4</packageName>
                            <sources>
                                <source>src/main/xsd/swissdec/v4</source>
                            </sources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>xjc-swissdec-v5</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <packageName>ch.vd.swissdec.v5</packageName>
                            <sources>
                                <source>src/main/xsd/swissdec/v5</source>
                            </sources>
                            <clearOutputDir>false</clearOutputDir>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>

            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>distribution</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <finalName>${project.artifactId}</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptors>
                                <descriptor>src/main/assembly/distribution.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>changelog</id>
            <activation>
                <property>
                    <name>generate-changelog</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>se.bjurr.gitchangelog</groupId>
                        <artifactId>git-changelog-maven-plugin</artifactId>
                        <version>${changelog-maven-plugin.version}</version>
                        <configuration>
                            <templateFile>src/main/assembly/changelog.mustache</templateFile>
                            <readableTagName>-([^-]+?)$</readableTagName>
                            <ignoreCommitsIfMessageMatches>^(\[maven-release-plugin\]|chore:).*</ignoreCommitsIfMessageMatches>
                            <untaggedName>Prochaine version</untaggedName>
                            <noIssueName>Autres changements</noIssueName>
                            <toCommit>HEAD</toCommit>
                            <customIssues>
                                <customIssue>
                                    <name>Fix</name>
                                    <pattern>fix:</pattern>
                                </customIssue>
                                <customIssue>
                                    <name>Refactor</name>
                                    <pattern>refactor:</pattern>
                                </customIssue>
                                <customIssue>
                                    <name>Feature</name>
                                    <pattern>feat:</pattern>
                                </customIssue>
                                <customIssue>
                                    <name>Tests</name>
                                    <pattern>tests:</pattern>
                                </customIssue>
                            </customIssues>
                            <file>CHANGELOG.md</file>
                        </configuration>
                        <executions>
                            <execution>
                                <id>generate-changelog</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>git-changelog</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>run-test-auto</id>
            <activation>
                <property>
                    <name>run-test-auto</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>

                    <plugin>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>integration-test</goal>
                                    <goal>verify</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
