<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>ch.vd.fiscalite.edipm.bo</groupId>
		<artifactId>edipmbackoffice-parent</artifactId>
		<version>1.1.4-SNAPSHOT</version>
	</parent>

	<artifactId>edipmbackoffice</artifactId>
	<version>1.1.4-SNAPSHOT</version>
	<name>edipmbackoffice-distribution</name>
	<packaging>pom</packaging>

	<properties>
		<maven-assembly-plugin.version>3.3.0</maven-assembly-plugin.version>
		<assembly.finalName>${project.artifactId}-${project.version}</assembly.finalName>
		<devex-maven-plugin.version>1.0.19</devex-maven-plugin.version>
		<devex.configTag>master</devex.configTag>
		<devex.deployEnv>IN</devex.deployEnv>
		<devex.deployUnit>edipmbackoffice</devex.deployUnit>
	</properties>

	<profiles>
		<profile>
			<id>build-delivery-devex</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
						<version>${maven-assembly-plugin.version}</version>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>single</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<descriptors>
								<descriptor>src/main/assembly/assembly.xml</descriptor>
							</descriptors>
							<finalName>${assembly.finalName}</finalName>
							<appendAssemblyId>false</appendAssemblyId>
							<tarLongFileMode>posix</tarLongFileMode>
							<ignoreMissingDescriptor>true</ignoreMissingDescriptor>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>devex.release</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-deploy-plugin</artifactId>
						<configuration>
							<skip>false</skip>
						</configuration>
					</plugin>
					<plugin>
						<groupId>ch.vd.devex</groupId>
						<artifactId>devex-maven-plugin</artifactId>
						<version>${devex-maven-plugin.version}</version>
						<configuration>
							<deployUnit>${devex.deployUnit}</deployUnit>
							<configTag>${devex.configTag}</configTag>
						</configuration>
						<executions>
							<execution>
								<id>release</id>
								<phase>package</phase>
								<goals>
									<goal>create-release</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>devex.in</id>
			<build>
				<plugins>
					<plugin>
						<groupId>ch.vd.devex</groupId>
						<artifactId>devex-maven-plugin</artifactId>
						<version>${devex-maven-plugin.version}</version>
						<configuration>
							<deployUnit>${devex.deployUnit}</deployUnit>
							<deployTarget>${devex.deployTarget}</deployTarget>
							<configTag>${devex.configTag}</configTag>
							<environment>IN</environment>
							<releaseVersion>${devex.releaseVersion}</releaseVersion>
						</configuration>
						<executions>
							<execution>
								<id>deploy</id>
								<phase>deploy</phase>
								<goals>
									<goal>deploy</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
