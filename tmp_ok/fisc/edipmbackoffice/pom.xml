<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.6.14</version>
		<relativePath /> <!-- lookup parent from repository -->
	</parent>

	<groupId>ch.vd.fiscalite.edipm.bo</groupId>
	<artifactId>edipmbackoffice-parent</artifactId>
	<version>1.1.4-SNAPSHOT</version>
	<name>edipmbackoffice-parent</name>
	<description>Application de backOffice pour la prestation eDiPm</description>
	<packaging>pom</packaging>

	<modules>
		<module>edipmbackoffice-lib</module>
		<module>edipmbackoffice-distribution</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-deploy-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<distributionManagement>
		<repository>
			<id>nexus.releases</id>
			<name>Nexus releases</name>
			<url>${nexus.url}/app-${application.repository}-stable</url>
		</repository>
		<snapshotRepository>
			<id>nexus.snapshots</id>
			<name>Nexus snaphots</name>
			<url>${nexus.url}/app-${application.repository}-snapshots</url>
			<uniqueVersion>false</uniqueVersion>
		</snapshotRepository>
	</distributionManagement>

	<scm>
		<connection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/edipmbackoffice.git</connection>
		<developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/edipmbackoffice.git</developerConnection>
		<tag>HEAD</tag>
	</scm>
</project>
