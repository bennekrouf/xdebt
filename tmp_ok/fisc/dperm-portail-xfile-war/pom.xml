<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<name>dperm-portail-xfile-war</name>
	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.vd.fiscalite</groupId>
	<artifactId>dperm-portail-xfile-war</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<scm>
		<url>https://portail.etat-de-vaud.ch/outils/git/projects/FISC/repos/dperm-portail-xfile-war/browse</url>
		<connection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/dperm-portail-xfile-war.git</connection>
		<developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/dperm-portail-xfile-war.git</developerConnection>
		<tag>${project.artifactId}-${project.version}</tag>
	</scm>

	<ciManagement>
		<system>Jenkins CI</system>
		<url>https://validation.portail.etat-de-vaud.ch/outils/jenkins-fisc/job/dperm-portail-xfile-war/</url>
	</ciManagement>

	<developers>
		<developer>
			<id>p3wany</id>
			<name>Francois Achache</name>
		</developer>
	</developers>

	<properties>
		<toDownload.groupId></toDownload.groupId><!-- A DEFINIR -->
		<toDownload.artifactId></toDownload.artifactId><!-- A DEFINIR -->
		<toDownload.version></toDownload.version><!-- A DEFINIR -->
		<!-- TIMESTAMP Pour l'assembly distribution -->
		<build.timestamp>${maven.build.timestamp}</build.timestamp>
		<maven.build.timestamp.format>yyyyMMdd-HHmmss</maven.build.timestamp.format>
		<!-- Le USER QUI POUSSE SUR XFILE -->
		<xfile.from>${user.name}</xfile.from>
		<xfile.url>http://exploitation-va.etat-de-vaud.ch/outils/web/ws/rest</xfile.url>
		<xfile.va>true</xfile.va><!-- Deploiement sur le serveur xfile de validation  -->
	</properties>

	<distributionManagement>
		<repository>
			<id>deployment</id>
			<name>Internal Releases</name>
			<url>${nexus.url.releases}</url>
		</repository>
		<snapshotRepository>
			<id>deployment</id>
			<name>Internal Snapshots</name>
			<url>${nexus.url.snapshots}</url>
		</snapshotRepository>
	</distributionManagement>

	<profiles>
		<profile>
			<id>XFILE</id>
			<activation>
				<property>
					<name>xfile.va</name>
					<value>false</value>
				</property>
			</activation>
			<properties>
				<xfile.url>http://exploitation.etat-de-vaud.ch/outils/web/ws/rest</xfile.url>
			</properties>
		</profile>
		<profile>
			<id>ARTIFACT</id>
			<activation>
				<property>
					<name>toDownload.artifactId</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>3.0.2</version>
						<executions>
							<execution>
								<id>copy</id>
								<phase>package</phase>
								<goals>
									<goal>copy</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>${toDownload.groupId}</groupId>
									<artifactId>${toDownload.artifactId}</artifactId>
									<version>${toDownload.version}</version>
									<type>war</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/build/deployment</outputDirectory>
									<destFileName>${toDownload.artifactId}.war</destFileName>
								</artifactItem>
							</artifactItems>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>build-helper-maven-plugin</artifactId>
						<version>1.12</version>
						<executions>
							<!-- BUILD VARIABLE POUR RECUPERER LA BONNE BRANCHE CONTENANT LA CONFIG -->
							<execution>
								<id>extract-majortag</id>
								<phase>process-resources</phase>
								<goals>
									<goal>regex-property</goal>
								</goals>
								<configuration>
									<name>config.git.branch</name>
									<value>${toDownload.version}</value>
									<regex>^([0-9]+R[0-9]+).*</regex>
									<replacement>$1</replacement>
									<failIfNoMatch>true</failIfNoMatch>
								</configuration>
							</execution>
						</executions>
					</plugin>			
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.5.0</version>
						<executions>
							<!-- RECUPERATION DE LA CONFIG SUR GIT -->
							<execution>
								<id>get-conf-from-git</id>
								<phase>package</phase>
								<configuration>
									<executable>git</executable>
									<arguments>
										<argument>archive</argument>
										<argument>--remote=ssh://git@bitbucket.etat-de-vaud.ch/fisc/dperm-env-confs.git</argument>
										<argument>--format=zip</argument>
										<argument>${config.git.branch}</argument>
										<argument>templates/${toDownload.artifactId}</argument>
										<argument>-o</argument>
										<argument>${project.build.directory}/${toDownload.artifactId}.zip</argument>
									</arguments>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<!-- UNZIP ET COPIE DES FICHIERS DE CONFIGURATIONS -->
							<execution>
								<id>unzip-conf</id>
								<phase>package</phase>
								<configuration>
									<executable>unzip</executable>
									<arguments>
										<argument>-j</argument>
										<argument>-u</argument>
										<argument>-o</argument>
										<argument>${project.build.directory}/${toDownload.artifactId}.zip</argument>
										<argument>-d</argument>
										<argument>${project.build.directory}/build/config</argument>
									</arguments>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<artifactId>maven-assembly-plugin</artifactId>
						<version>3.0.0</version>
						<configuration>
							<descriptors>
								<descriptor>distribution.xml</descriptor>
							</descriptors>
							<finalName>${toDownload.artifactId}-${toDownload.version}</finalName>
						</configuration>
						<executions>
							<execution>
								<id>make-assembly</id> 
								<phase>package</phase> 
								<goals>
									<goal>single</goal>
								</goals>
								<configuration>
									<appendAssemblyId>false</appendAssemblyId>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>cei.aew.web</groupId>
						<artifactId>cei-maven-plugin</artifactId>
						<version>1.0.1</version>
						<configuration>
							<webresourceurl>${xfile.url}</webresourceurl>
							<to>WEB</to>
						</configuration>
						<executions>
							<execution>
								<id>deploy-xfile</id>
								<phase>package</phase>
								<goals>
									<goal>upload</goal>
								</goals>
								<configuration>
									<filetoupload>${project.build.directory}/${toDownload.artifactId}-${toDownload.version}.zip</filetoupload>
									<from>${xfile.from}</from>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
