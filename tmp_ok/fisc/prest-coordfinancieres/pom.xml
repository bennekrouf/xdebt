<?xml version="1.0" encoding="UTF-8"?><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ch.vd.cyber.fisc</groupId>
    <artifactId>prestecoordfinancieres</artifactId>
    <version>24.1.1-SNAPSHOT</version>
    <packaging>war</packaging>

    <name>prestecoordfinancieres</name>

    <parent>
        <groupId>ch.vd.cyber.parent</groupId>
        <artifactId>application-parent</artifactId>
        <version>13.3.0</version>
        <relativePath />
    </parent>

    <scm>
        <developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/prest-coordfinancieres.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <dependencies>
        <dependency>
            <groupId>ch.vd.cyber</groupId>
            <artifactId>starter-prestation</artifactId>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>ch.vd.cyber.fisc</groupId>
            <artifactId>fiscalite-cyber-be</artifactId>
            <version>${fiscalite-cyber-be.version}</version>
        </dependency>

        <!-- Tests -->
        <dependency>
            <groupId>ch.vd.cybersdk</groupId>
            <artifactId>prestations-be</artifactId>
            <version>${prestations-be.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <configuration>
                    <strict>false
                    </strict> <!-- see https://github.com/highsource/maven-jaxb2-plugin/wiki/Catalogs-in-Strict-Mode -->
                    <schemaDirectory>${basedir}/src/main/resources/xsd/</schemaDirectory>
                    <args>
                        <arg>-extension</arg>
                        <arg>-Xvalue-constructor</arg>
                    </args>
                </configuration>

                <executions>
                    <execution>
                        <id>schema1-generate</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <schemaIncludes>
                                <include>Cyber_FichierImpression.xsd</include><!-- XSD to generate PDF -->
                                <include>coordonneesFinancieres-1.xsd</include><!-- XSD to generate XML file for back office -->
                            </schemaIncludes>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.jvnet.jaxb2_commons</groupId>
                        <artifactId>jaxb2-value-constructor</artifactId>
                        <version>${jaxb2-value-constructor.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

    <properties>
        <devex.configTag>master</devex.configTag>
        <devex.deployTarget>EmbeddedRHEL8</devex.deployTarget>
        <fiscalite-cyber-be.version>${project.parent.version}</fiscalite-cyber-be.version>
    </properties>

</project>