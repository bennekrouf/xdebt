<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <!-- ###### PARENT ###### -->


    <parent>
        <groupId>ch.vd.dfin.tao.dossier-fiscal.admin</groupId>
        <artifactId>dossier-fiscal-admin-app</artifactId>
        <version>24R2.C.6-SNAPSHOT</version>
    </parent>

    <!-- ###### INFORMATIONS ###### -->

    <modelVersion>4.0.0</modelVersion>
    <artifactId>dossier-fiscal-admin-web</artifactId>
    <packaging>war</packaging>
    <name>dossier-fiscal-admin-web</name>
    <description>Application Dossier Fiscal Admin : Spring-boot, Hibernate, shared-iam</description>

    <!-- ###### PROPERTIES ###### -->

    <properties>
        <!-- permet de fixer la version d'active mq -->
        <activemq.version>5.15.10</activemq.version>
        <!-- Start Class -->
        <start-class>ch.vd.dfin.dossierfiscal.admin.web.config.DossierFiscalSpringBootApplication</start-class>
        <spring-boot-devmode>false</spring-boot-devmode>

        <!-- Paramètres JVM -->
        <jvm.mem.params>-Xmx1024</jvm.mem.params>

        <!-- Parametres de testing -->
        <surefire.useFile>false</surefire.useFile>
        <failsafe.useFile>false</failsafe.useFile>

        <skipGulpTask>false</skipGulpTask>
        <org.mapstruct.version>1.4.2.Final</org.mapstruct.version>
    </properties>

    <!-- ###### BUILD ###### -->

    <build>

        <!-- Filtre des ressources du classpath Maven (filtre par défaut Maven) -->
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
            </testResource>
            <testResource>
                <directory>appDir/messages</directory>
                <filtering>false</filtering>
            </testResource>
        </testResources>

        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>exec-npm-install</id>
                        <configuration>
                            <skip>${skipGulpTask}</skip>
                            <executable>npm</executable>
                            <workingDirectory>front</workingDirectory>
                            <arguments>
                                <argument>install</argument>
                            </arguments>
                        </configuration>
                        <phase>initialize</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>exec-npm-build</id>
                        <configuration>
                            <skip>${skipGulpTask}</skip>
                            <executable>npm</executable>
                            <workingDirectory>front</workingDirectory>
                            <arguments>
                                <argument>run</argument>
                                <argument>build-prod</argument>
                            </arguments>
                        </configuration>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Nettoyage des sorties Front-end -->
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <executions>
                    <execution>
                        <id>clean-target</id>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>${basedir}/target</directory>
                                </fileset>
                            </filesets>
                        </configuration>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>clean-web-static</id>
                        <configuration>
                            <skip>${skipGulpTask}</skip>
                            <filesets>
                                <fileset>
                                    <directory>${basedir}/front/dist</directory>
                                </fileset>
                                <fileset>
                                    <directory>${basedir}/front/node_modules</directory>
                                </fileset>
                            </filesets>
                        </configuration>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Copie des sorties gulp pour l'assembly des static Web -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <inherited>true</inherited>
                <executions>
                    <execution>
                        <id>copy-gulp-dist</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/classes/static</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>front/dist/dfa-application</directory>
                                    <filtering>false</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <warSourceDirectory>${basedir}/front/dist/dfa-application</warSourceDirectory>
                </configuration>
            </plugin>

            <!-- on déclare un jar avec un classifier pour qu'il puisse être importé par le module "dossier-fiscal-admin-test-automatise" -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <classifier>test-auto</classifier>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- The Spring Boot Maven Plugin provides Spring Boot support in Maven, allowing you to package executable jar or war archives and run an application “in-place” -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <addResources>${spring-boot-devmode}</addResources>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>assembly-release</id>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>1.11</source>
                    <target>1.11</target>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>${lombok.version}</version>
                        </path>
                        <path>
                            <groupId>org.mapstruct</groupId>
                            <artifactId>mapstruct-processor</artifactId>
                            <version>${org.mapstruct.version}</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <!-- ###### PROFILES ###### -->
    <profiles>
        <profile>
            <id>coverage</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.jacoco</groupId>
                        <artifactId>jacoco-maven-plugin</artifactId>
                        <configuration>
                            <excludes>
                                <exclude>ch/vd/dfin/dossierfiscal/admin/web/config/*Config.class</exclude>
                                <exclude>ch/vd/dfin/dossierfiscal/admin/web/config/**/*Config.class</exclude>
                                <exclude>ch/vd/dfin/dossierfiscal/admin/web/logs/*.class</exclude>
                                <exclude>ch/vd/dfin/dossierfiscal/admin/web/logs/**/*.class</exclude>
                                <exclude>ch/vd/dfin/dossierfiscal/admin/web/model/ui/*.class</exclude>
                                <exclude>ch/vd/dfin/dossierfiscal/admin/web/model/ui/**/*.class</exclude>
                            </excludes>
                        </configuration>
                        <executions>
                            <execution>
                                <id>jacoco-initialize</id>
                                <goals>
                                    <goal>prepare-agent</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>sonar</id>
            <properties>
                <sonar.coverage.exclusions>**/model/**/*.*,**/config/**/*.*,**/aop/**/*.*</sonar.coverage.exclusions>
            </properties>
        </profile>
    </profiles>

