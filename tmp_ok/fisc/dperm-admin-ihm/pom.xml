<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.vd.fiscalite</groupId>
  <artifactId>dperm-admin-ihm</artifactId>
  <version>24R2.C.1-SNAPSHOT</version>
  <name>dperm-admin-ihm</name>

  <scm>
    <url>https://portail.etat-de-vaud.ch/outils/git/projects/FISC/repos/dperm-admin-ihm/browse</url>
    <connection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/dperm-admin-ihm.git</connection>
    <developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/dperm-admin-ihm.git</developerConnection>
    <tag>${project.artifactId}-${project.version}</tag>
  </scm>

  <ciManagement>
    <system>Jenkins CI</system>
    <url>https://validation.portail.etat-de-vaud.ch/outils/jenkins-fisc/job/dperm-admin-ihm/</url>
  </ciManagement>

  <properties>
    <!-- COMMONS -->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <!-- TIMESTAMP Pour l'assembly distribution -->
    <build.timestamp>${maven.build.timestamp}</build.timestamp>
    <maven.build.timestamp.format>yyyyMMdd-HHmmss</maven.build.timestamp.format>
    <maven.javadoc.skip>true</maven.javadoc.skip>
    <dperm.admin.dir>${project.basedir}</dperm.admin.dir>
  </properties>

  <distributionManagement>
    <repository>
      <id>nexus.releases</id>
      <name>Nexus releases</name>
      <url>${nexus.url.releases}</url>
    </repository>
    <snapshotRepository>
      <id>nexus.snapshots</id>
      <name>Nexus snaphots</name>
      <url>${nexus.url.snapshots}</url>
      <uniqueVersion>false</uniqueVersion>
    </snapshotRepository>
  </distributionManagement>

  <build>
    <plugins>
      <!-- DISABLED JAR BUILD -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <executions>
          <execution>
            <id>default-jar</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.4.0</version>
        <executions>
          <execution>
            <id>exec-npm-test</id>
            <phase>test</phase>
            <configuration>
              <executable>npm</executable>
              <workingDirectory>${dperm.admin.dir}</workingDirectory>
              <arguments>
                <argument>run</argument>
                <argument>test-with-coverage</argument>
              </arguments>
              <skip>${skipTests}</skip>
            </configuration>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
          <execution>
            <id>exec-npm-install</id>
            <phase>generate-sources</phase>
            <configuration>
              <executable>npm</executable>
              <workingDirectory>${dperm.admin.dir}</workingDirectory>
              <arguments>
                <argument>install</argument>
              </arguments>
            </configuration>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
          <execution>
            <id>exec-npm-build</id>
            <phase>prepare-package</phase>
            <configuration>
              <executable>npm</executable>
              <workingDirectory>${dperm.admin.dir}</workingDirectory>
              <arguments>
                <argument>run</argument>
                <argument>build-prod</argument>
              </arguments>
            </configuration>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.0.0</version>
        <configuration>
          <descriptors>
            <descriptor>src/assembly/distribution.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <appendAssemblyId>false</appendAssemblyId>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <executions>
          <!-- This is a hack to get Jenkins to publish Karma test results when running a Maven project: we run 0 surefire tests, so Jenkins publishes the report of the Karma tests. -->
          <execution>
            <id>triggerSurefireForkarma</id>
            <phase>test</phase>
            <goals>
              <goal>test</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.5.3</version>
        <configuration>
          <goals>deploy -Prelease-profile</goals>
          <releaseProfiles>release-profile</releaseProfiles>
        </configuration>
      </plugin>
    </plugins>
    <!-- PLUGIN MANAGEMENT -->
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-deploy-plugin</artifactId>
          <configuration>
            <skip>false</skip>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
