<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ch.vd.dfin.tao.dossier-fiscal</groupId>
        <artifactId>dossier-fiscal</artifactId>
        <version>25R1.A.0-SNAPSHOT</version>
    </parent>

    <artifactId>dossier-fiscal-application</artifactId>
    <packaging>pom</packaging>
    <name>dossier-fiscal-application</name>
    <description>Ensemble des applications format le dossier fiscal</description>

    <properties>
        <spring-boot-devmode>false</spring-boot-devmode>
        <jvm.mem.params>-Xmx1024</jvm.mem.params>
    </properties>

    <modules>
        <module>dossier-fiscal-alimentation-web</module>
        <module>dossier-fiscal-bo-web</module>
        <module>dossier-fiscal-admin-web</module>
    </modules>

    <build>
        <!-- Filtre des ressources du classpath Maven (filtre par défaut Maven) -->
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
            </testResource>
            <testResource>
                <directory>appDir/messages</directory>
                <filtering>false</filtering>
            </testResource>
        </testResources>

        <plugins>
            <!-- on déclare un jar avec un classifier pour qu'il puisse être importé par le module "dossier-fiscal-admin-test-automatise" -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <classifier>test-auto</classifier>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- The Spring Boot Maven Plugin provides Spring Boot support in Maven, allowing you to package executable jar or war archives and run an application “in-place” -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <addResources>${spring-boot-devmode}</addResources>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>assembly-release</id>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>