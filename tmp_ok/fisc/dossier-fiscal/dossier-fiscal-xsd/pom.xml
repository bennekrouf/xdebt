<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ch.vd.dfin.tao.dossier-fiscal</groupId>
        <artifactId>dossier-fiscal</artifactId>
        <version>25R1.A.0-SNAPSHOT</version>
    </parent>

    <artifactId>dossier-fiscal-xsd</artifactId>

    <name>dossier-fiscal-xsd</name>
    <description>Continent les xsd et stub pour les Ã©changes esb/rest</description>

    <properties>
        <xsd.src.dir>${project.basedir}/src/main/resources/xsd</xsd.src.dir>
        <unpackxsd.src.dir>${project.basedir}/src/main/resources/xsd/unpack</unpackxsd.src.dir>
        <jaxb-output-directory>${project.build.directory}/generated/out</jaxb-output-directory>
    </properties>

    <dependencies>
        <dependency>
            <groupId>ch.vd.shared</groupId>
            <artifactId>normes-xsd</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.annotation</groupId>
            <artifactId>javax.annotation-api</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jvnet.jaxb2_commons</groupId>
            <artifactId>jaxb2-basics-runtime</artifactId>
        </dependency>

        <dependency>
            <groupId>ch.vd.dfin.tao</groupId>
            <artifactId>tao-exchange-generated-sources</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <!-- Unpack the jar into target directory -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${unpackxsd.src.dir}</outputDirectory>
                            <overWriteIfNewer>true</overWriteIfNewer>
                            <includeGroupIds>ch.vd.shared</includeGroupIds>
                            <includeArtifactIds>normes-xsd</includeArtifactIds>
                            <includes>ech\eCH-0010\5\eCH-0010-5-0.xsd</includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- XSD (JAXB2) -->
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <executions>
                    <execution>
                        <id>xsd</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <encoding>${project.build.sourceEncoding}</encoding>
                            <args>
                                <arg>-enableIntrospection</arg>
                                <arg>-Xequals</arg>
                                <arg>-XhashCode</arg>
                                <arg>-Xfluent-api</arg>
                                <arg>-Xdefault-value</arg>
                                <arg>-Xannotate</arg>
                                <arg>-Xinheritance</arg>
                            </args>
                            <markGenerated>true</markGenerated>
                            <generateDirectory>${jaxb-output-directory}</generateDirectory>
                            <plugins>
                                <plugin>
                                    <groupId>org.jvnet.jaxb2_commons</groupId>
                                    <artifactId>jaxb2-default-value</artifactId>
                                    <version>${jaxb2-default-value.version}</version>
                                </plugin>
                                <plugin>
                                    <groupId>org.jvnet.jaxb2_commons</groupId>
                                    <artifactId>jaxb2-basics</artifactId>
                                    <version>${jaxb2-basics.version}</version>
                                </plugin>
                                <plugin>
                                    <groupId>org.jvnet.jaxb2_commons</groupId>
                                    <artifactId>jaxb2-basics-tools</artifactId>
                                    <version>${jaxb2-basics.version}</version>
                                </plugin>
                                <plugin>
                                    <groupId>org.jvnet.jaxb2_commons</groupId>
                                    <artifactId>jaxb2-basics-runtime</artifactId>
                                    <version>${jaxb2-basics.version}</version>
                                </plugin>
                                <dependency>
                                    <groupId>org.jvnet.jaxb2_commons</groupId>
                                    <artifactId>jaxb2-fluent-api</artifactId>
                                    <version>${jaxb2-fluent-api.version}</version>
                                </dependency>
                                <plugin>
                                    <groupId>org.jvnet.jaxb2_commons</groupId>
                                    <artifactId>jaxb2-basics-annotate</artifactId>
                                    <version>${jaxb2-basics-annotate.version}</version>
                                </plugin>
                            </plugins>
                            <schemaDirectory>${xsd.src.dir}</schemaDirectory>
                            <schemaIncludes>
                                <include>**/*.xsd</include>
                            </schemaIncludes>
                            <bindings>
                                <binding>
                                    <fileset>
                                        <directory>${basedir}/src/main/resources/xjb</directory>
                                        <includes>
                                            <include>global-bindings.xjb</include>
                                            <include>specific-bindings.xjb</include>
                                        </includes>
                                    </fileset>
                                </binding>
                            </bindings>
                            <extension>true</extension>
                            <strict>false</strict>
                            <verbose>${maven-jaxb2-plugin.verbose}</verbose>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>