<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ch.vd.fiscalite.dperm</groupId>
    <artifactId>dperm-batch-creation-tache-manuelle</artifactId>
    <version>18.2.2.5-SNAPSHOT</version>
    <packaging>jar</packaging>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.3.12.RELEASE</version>
    </parent>

    <scm>
        <url>https://portail.etat-de-vaud.ch/outils/git/projects/FISC/repos/dperm-batch-creation-tache-manuelle</url>
        <connection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/dperm-batch-creation-tache-manuelle.git</connection>
        <developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/dperm-batch-creation-tache-manuelle.git</developerConnection>
        <tag>${project.artifactId}-${project.version}</tag>
    </scm>

    <developers>
        <developer>
            <id>r6gom2</id>
            <name>Sophian Boulekroune</name>
        </developer>
    </developers>

    <properties>
        <start-class>ch.vd.fiscalite.dperm.batch.creation.tache.manuelle.Application</start-class>
        <java.version>1.8</java.version>
        <jvm.mem.params>-Xmx1024</jvm.mem.params>

        <spring-framework.version>5.2.22.RELEASE</spring-framework.version>
        <xsd.src.dir>${project.build.directory}/xsd-for-generated-sources/xsd-dperm</xsd.src.dir>

        <!--Encoding properties-->
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <!--Maven compiler plugin configuration-->
        <maven.compiler.source.version>1.8</maven.compiler.source.version>
        <maven.compiler.target.version>1.8</maven.compiler.target.version>

        <!--Maven plugins versions-->
        <maven-deploy-plugin.version>2.8.2</maven-deploy-plugin.version>
        <maven-resources-plugin.version>3.0.2</maven-resources-plugin.version>
        <maven-dependency-plugin.version>3.0.2</maven-dependency-plugin.version>
        <maven-jaxb-plugin.version>1.1.1</maven-jaxb-plugin.version>
        <maven-assembly-plugin.version>3.1.0</maven-assembly-plugin.version>
        <maven-release-plugin.version>2.5.3</maven-release-plugin.version>
        <maven-antrun-plugin.version>1.8</maven-antrun-plugin.version>
        <maven-compiler-plugin.version>3.7.0</maven-compiler-plugin.version>
        <ant-jsch.version>1.10.3</ant-jsch.version>

        <!--DSI plugins versions-->
        <cei-maven-plugin.version>1.0.2</cei-maven-plugin.version>

        <!--DSI dependencies versions-->
        <esbclient.version>4.2</esbclient.version>

        <!--DSI Libraries-->
        <dperm-resources.version>18R1.A.1</dperm-resources.version>

        <!--Deployment properties-->
        <batch.server.host>slv1693v</batch.server.host>
        <batch.server.username>dsi_dperm</batch.server.username>
        <batch.server.password>tulipe</batch.server.password>
        <batch.server.root>/ccv/data/dsi_dperm</batch.server.root>
        <batch.server.domain.name>DEFINE_BY_PROFILE</batch.server.domain.name>
        <batch.server.instance>${batch.server.root}/${batch.server.domain.name}</batch.server.instance>
        <batch.releases.dir>${batch.server.instance}/tmp</batch.releases.dir>
        <batch.app.dir>${batch.server.instance}/app</batch.app.dir>
        <batch.applications.dir>${batch.server.instance}/applications</batch.applications.dir>
    </properties>

	<distributionManagement>
		<repository>
			<id>nexus.releases</id>
			<name>Nexus releases</name>
			<url>${nexus.url.releases}</url>
		</repository>
		<snapshotRepository>
			<id>nexus.snapshots</id>
			<name>Nexus snaphots</name>
			<url>${nexus.url.snapshots}</url>
			<uniqueVersion>false</uniqueVersion>
		</snapshotRepository>
	</distributionManagement>

    <dependencies>
        <dependency>
            <groupId>org.springframework.batch</groupId>
            <artifactId>spring-batch-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-batch</artifactId>
        </dependency>
        <dependency>
            <groupId>org.hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-oxm</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-activemq</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.activemq</groupId>
            <artifactId>activemq-broker</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.fiscalite.dperm</groupId>
            <artifactId>dperm-resources</artifactId>
            <version>${dperm-resources.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.vd.technical.esb</groupId>
            <artifactId>esb-client</artifactId>
            <version>${esbclient.version}</version>
        </dependency>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <version>${maven-deploy-plugin.version}</version>
                    <configuration>
                        <skip>true</skip>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>${maven-resources-plugin.version}</version>
                    <executions>
                        <execution>
                            <id>copy-resources</id>
                            <phase>generate-sources</phase>
                            <configuration>
                                <outputDirectory>${xsd.src.dir}</outputDirectory>
                                <resources>
                                    <resource>
                                        <directory>${project.basedir}/src/main/xjb</directory>
                                        <includes>
                                            <include>binding.xjb</include>
                                        </includes>
                                    </resource>
                                </resources>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <version>${maven-dependency-plugin.version}</version>
                    <executions>
                        <execution>
                            <id>unpack-xsd-dependency</id>
                            <phase>generate-sources</phase>
                            <configuration>
                                <outputDirectory>${project.build.directory}/xsd-for-generated-sources</outputDirectory>
                                <artifactItems>
                                    <artifactItem>
                                        <groupId>ch.vd.fiscalite.dperm</groupId>
                                        <artifactId>dperm-resources</artifactId>
                                        <type>jar</type>
                                    </artifactItem>
                                </artifactItems>
                                <includes>
                                    xsd-dperm/tache-manuelle/evtCreationTacheManuelle-2.xsd
                                </includes>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>com.sun.tools.xjc.maven2</groupId>
                    <artifactId>maven-jaxb-plugin</artifactId>
                    <version>${maven-jaxb-plugin.version}</version>
                    <configuration>
                        <readOnly>true</readOnly>
                        <strict>true</strict>
                        <includeSchemas>
                            <includeSchema>**/*.xsd</includeSchema>
                        </includeSchemas>
                    </configuration>
                    <executions>
                        <execution>
                            <id>generate-sources-document</id>
                            <phase>generate-sources</phase>
                            <configuration>
                                <schemaDirectory>${xsd.src.dir}</schemaDirectory>
                                <generateDirectory>${project.build.directory}/generated-sources/jaxb/</generateDirectory>
                                <includeBindings>
                                    <includeBinding>binding.xjb</includeBinding>
                                </includeBindings>
                                <encoding>UTF-8</encoding>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>${maven-assembly-plugin.version}</version>
                    <executions>
                        <execution>
                            <id>make-assembly</id>
                            <phase>package</phase>
                            <configuration>
                                <descriptors>
                                    <descriptor>src/main/assembly/assembly.xml</descriptor>
                                </descriptors>
                                <finalName>${project.artifactId}-${project.version}</finalName>
                                <appendAssemblyId>false</appendAssemblyId>
                                <tarLongFileMode>posix</tarLongFileMode>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>${maven-release-plugin.version}</version>
                    <configuration>
                        <releaseProfiles>int,build-delivery</releaseProfiles>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-antrun-plugin</artifactId>
                    <version>${maven-antrun-plugin.version}</version>
                    <executions>
                        <execution>
                            <id>deploy-batch-tomcat</id>
                            <phase>package</phase>
                            <configuration>
                                <target>

                                    <!-- Definition de la command ssh -->
                                    <macrodef name="ssh">
                                        <attribute name="command" default="NOT SET" />
                                        <attribute name="failonerror" default="true" />
                                        <sequential>
                                            <sshexec host="${batch.server.host}" username="${batch.server.username}" password="${batch.server.password}" trust="true" failonerror="@{failonerror}" command="@{command}" verbose="true" />
                                        </sequential>
                                    </macrodef>

                                    <!-- Copie de l archive zip sur un repertoire temporaire du serveur -->
                                    <echo>Transfering file: ${dist.build.dir}/${project.artifactId}-${project.version}.zip to ${batch.releases.dir} on ${batch.server.host}</echo>
                                    <scp file="${project.build.directory}/${project.artifactId}-${project.version}.zip" todir="${batch.server.username}:${batch.server.password}@${batch.server.host}:${batch.releases.dir}" sftp="true" trust="true" verbose="true" failonerror="true" />

                                    <!-- Suppression du contenu du batch deploye precedement -->
                                    <ssh command="rm -rf ${batch.app.dir}/${project.artifactId}-${project.version}/" />

                                    <!-- Decompression de l archive dans le repertoire contenant les applications -->
                                    <ssh command="unzip -o ${batch.releases.dir}/${project.artifactId}-${project.version}.zip -d ${batch.app.dir}/${project.artifactId}-${project.version}" />

                                    <!-- Suppression de l ancien lien -->
                                    <ssh command="rm -f ${batch.applications.dir}/${project.artifactId}" />

                                    <!-- Creation du nouveau lien -->
                                    <ssh command="ln -s ${batch.app.dir}/${project.artifactId}-${project.version}/${project.artifactId}-${project.version} ${batch.applications.dir}/${project.artifactId}" />
                                </target>
                            </configuration>
                        </execution>
                    </executions>
                    <!--Mandatory for deployment (contains the sshexec and scp tasks)-->
                    <dependencies>
                        <dependency>
                            <groupId>org.apache.ant</groupId>
                            <artifactId>ant-jsch</artifactId>
                            <version>${ant-jsch.version}</version>
                        </dependency>
                    </dependencies>
                </plugin>
                <plugin>
                    <groupId>cei.aew.web</groupId>
                    <artifactId>cei-maven-plugin</artifactId>
                    <version>${cei-maven-plugin.version}</version>
                    <executions>
                        <execution>
                            <id>upload-delivery-cei</id>
                            <phase>package</phase>
                            <goals>
                                <goal>upload</goal>
                            </goals>
                            <configuration>
                                <webresourceurl>http://exploitation.etat-de-vaud.ch/outils/web/ws/rest</webresourceurl>
                                <filetoupload>${project.build.directory}/${project.artifactId}-${project.version}.zip</filetoupload>
                                <from>r6gom2</from>
                                <to>WEB</to>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>${maven-compiler-plugin.version}</version>
                    <configuration>
                        <source>${maven.compiler.source.version}</source>
                        <target>${maven.compiler.target.version}</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-xsd-dependency</id>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.sun.tools.xjc.maven2</groupId>
                <artifactId>maven-jaxb-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-sources-document</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>val</id>
            <properties>
                <env>val</env>
            </properties>
        </profile>
        <profile>
            <id>int</id>
            <properties>
                <batch.server.domain.name>dpermIN</batch.server.domain.name>
                <env>int</env>
            </properties>
        </profile>
        <profile>
            <id>int-post-prod</id>
            <properties>
                <batch.server.domain.name>dpermI2</batch.server.domain.name>
                <env>int-post-prod</env>
            </properties>
        </profile>
        <profile>
            <id>cei-delivery</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>make-assembly</id>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>cei.aew.web</groupId>
                        <artifactId>cei-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>upload-delivery-cei</id>
                                <goals>
                                    <goal>upload</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>build-delivery</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>make-assembly</id>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>deploy-batch-tomcat</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>disable-java8-doclint</id>
            <activation>
                <jdk>[1.8,)</jdk>
            </activation>
            <properties>
                <additionalparam>-Xdoclint:none</additionalparam>
            </properties>
        </profile>
    </profiles>
</project>
