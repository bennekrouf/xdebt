				</exclusion>
				<exclusion>
					<artifactId>spring-web</artifactId>
					<groupId>org.springframework</groupId>
				</exclusion>
				<exclusion>
					<artifactId>editiqueJms</artifactId>
					<groupId>ch.vd.dfin</groupId>
				</exclusion>
				<exclusion>
