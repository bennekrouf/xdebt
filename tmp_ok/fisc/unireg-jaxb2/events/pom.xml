<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<artifactId>unireg-jaxb2-events</artifactId>
	<packaging>jar</packaging>

	<parent>
		<groupId>ch.vd.unireg</groupId>
		<artifactId>unireg-jaxb2</artifactId>
		<!-- BEGIN_LVERSION -->
		<version>7.30-SNAPSHOT</version>
		<!-- END_LVERSION -->
		<relativePath>../pom.xml</relativePath>
	</parent>

	<name>Unireg - Events Beans JAXB2</name>
	<description>Beans JAXB2 qui décrivent les données des événements reçus et envoyés par le projet Unireg</description>

	<dependencies>
		<dependency>
			<groupId>${project.parent.groupId}</groupId>
			<artifactId>unireg-jaxb2-party</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.parent.groupId}</groupId>
			<artifactId>unireg-jaxb2-infra</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<version>${maven-jaxb2-plugin.version}</version>
				<configuration>
					<schemaDirectory>src/main/resources</schemaDirectory>
					<strict>false</strict>
					<catalog>src/main/resources/catalog.xml</catalog>
					<schemaIncludes>
						<include>main.xsd</include>
					</schemaIncludes>
					<bindingDirectory>src/main/resources</bindingDirectory>
					<bindingIncludes>
						<include>common-bindings.xml</include>
						<include>ech-bindings.xml</include>
						<include>party-bindings.xml</include>
						<include>infra-bindings.xml</include>
						<include>bindings.xml</include>
					</bindingIncludes>
					<args>
						<arg>-extension</arg>
						<arg>-Xpretty-classname</arg>
						<arg>-Xpretty-classname-force:ch.vd.unireg.xml.event.lr.event.v1.EvtListeType/EvtListeData</arg>
						<arg>-Xunireg-ws</arg>
						<arg>-Xnamespace-prefix</arg>
						<arg>-Xts</arg>
						<arg>-Xts:style:ch.vd.unireg.UniregToStringStyle.STYLE</arg>
						<arg>-Xvalue-constructor</arg>
						<arg>-Xinheritance</arg>
					</args>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.1.0</version>
				<configuration>
					<excludes>
						<!-- on exclut les répertoires des beans qui correspondent aux XSDs des projets unireg-jaxb-party
						     et unireg-jaxb-party, car ils ont déjà été compilés dans ce dernier -->
						<exclude>ch/ech/**</exclude>
						<exclude>ch/vd/unireg/xml/common/**</exclude>
						<exclude>ch/vd/unireg/xml/exception/**</exclude>
						<exclude>ch/vd/unireg/xml/party/**</exclude>
						<exclude>ch/vd/unireg/xml/infra/**</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.4.3</version>
				<configuration>
					<encoding>${project.resources.sourceEncoding}</encoding>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<finalName>release</finalName>
					<descriptors>
						<descriptor>release_partyservice.xml</descriptor>
						<descriptor>release_fiscalevent.xml</descriptor>
					</descriptors>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>3.0.0</version>
				<executions>
					<!-- Task ANT qui génère la javadoc des classes exposées par le web-service -->
					<execution>
						<id>ws.javadoc</id>
						<goals>
							<goal>run</goal>
						</goals>
						<phase>site</phase>
						<configuration>
							<target>
								<property name="compile_classpath" refid="maven.compile.classpath" />
								<property name="runtime_classpath" refid="maven.runtime.classpath" />
								<property name="plugin_classpath" refid="maven.plugin.classpath" />
								<echo message="==&gt; compile_classpath: ${compile_classpath}" />

								<!-- BEGIN_LVERSION -->
								<javadoc access="public" additionalparam="-encoding 'utf-8' -charset 'utf-8'" author="true" classpath="${compile_classpath}" destdir="target/javadoc" doctitle="Unireg - Documentation du service Jms (3.4)" nodeprecated="false" nodeprecatedlist="false" noindex="false" nonavbar="false" notree="false" splitindex="true" use="true" version="true">
									<fileset dir="target/generated-sources/xjc/" defaultexcludes="yes">
										<include name="**/*.java" />
										<exclude name="**/ObjectFactory.java" />
									</fileset>
									<fileset dir="../common/src/main/java/ch/vd/unireg/xml/common" defaultexcludes="yes">
										<include name="**/*.java" />
										<exclude name="**/ObjectFactory.java" />
									</fileset>
								</javadoc>
								<!-- END_LVERSION -->
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>

