        <dependency>
            <groupId>ch.vd.fiscalite.dperm.process</groupId>
            <artifactId>DPerm-TAXATION-GLOBE-Acquisition</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>ch.vd.fiscalite.dperm.process</groupId>
            <artifactId>DPerm-TAXATION-GLOBE-Traitement</artifactId>
            <version>1.0.0</version>
