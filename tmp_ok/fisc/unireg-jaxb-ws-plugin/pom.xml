<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.vd.unireg</groupId>
	<artifactId>jaxb2-unireg-ws-plugin</artifactId>
	<packaging>jar</packaging>
	<version>2.1.1-SNAPSHOT</version>

	<name>JAXB2 Plugin - Unireg Web-service</name>
	<description>Ce plugin ajoute certaines méthodes à certaines classes en fonction des besoins spécifiques des web-services d'Unireg.</description>

	<dependencies>
		<dependency>
			<groupId>org.glassfish.jaxb</groupId>
			<artifactId>jaxb-xjc</artifactId>
			<version>2.3.2</version>
		</dependency>
	</dependencies>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<inherited>true</inherited>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.8</source>
						<target>1.8</target>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>

		</plugins>
	</build>

	<distributionManagement>
		<repository>
			<id>nexus.releases</id>
			<name>Nexus releases</name>
			<url>${nexus.url.releases}</url>
		</repository>
		<snapshotRepository>
			<id>nexus.snapshots</id>
			<name>Nexus snaphots</name>
			<url>${nexus.url.snapshots}</url>
			<!-- évite d'ajouter un timestamp à chaque déploiement : nécessaire pour avoir les sources synchrones avec un jar snapshot -->
			<uniqueVersion>false</uniqueVersion>
		</snapshotRepository>
	</distributionManagement>
	<scm>
		<url>https://portail.etat-de-vaud.ch/outils/git/projects/FISC/repos/unireg-jaxb-ws-plugin</url>
		<connection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/unireg-jaxb-ws-plugin.git</connection>
		<developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/unireg-jaxb-ws-plugin.git</developerConnection>
		<tag>HEAD</tag>
	</scm>

	<properties>
		<!-- Application settings -->
		<copyright.year>2013</copyright.year>
		<amp.genericCore>true</amp.genericCore>
		<amp.fullSource>false</amp.fullSource>
	</properties>

</project>
