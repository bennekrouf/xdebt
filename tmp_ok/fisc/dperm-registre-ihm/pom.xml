<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.vd.fiscalite</groupId>
	<artifactId>dperm-registre-ihm</artifactId>
	<version>24R2.B.1-SNAPSHOT</version>
	<name>dperm-registre-ihm</name>

	<scm>
		<url>https://portail.etat-de-vaud.ch/outils/git/projects/FISC/repos/dperm-registre-ihm/browse</url>
		<connection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/dperm-registre-ihm.git</connection>
		<developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/dperm-registre-ihm.git</developerConnection>
		<tag>${project.artifactId}-${project.version}</tag>
	</scm>

	<ciManagement>
		<system>Jenkins CI</system>
		<url>https://validation.portail.etat-de-vaud.ch/outils/jenkins-fisc/job/snapshot-dperm-portail-registre-ihm/</url>
	</ciManagement>

	<developers>
		<developer>
			<id>p3wany</id>
			<name>Francois Achache</name>
		</developer>
	</developers>

	<properties>
		<!-- COMMONS -->
		<command.cmd />
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<jigsaw-core.version>2.9.27</jigsaw-core.version>
		<!-- TIMESTAMP Pour l'assembly distribution -->
		<build.timestamp>${maven.build.timestamp}</build.timestamp>
		<maven.build.timestamp.format>yyyyMMdd-HHmmss</maven.build.timestamp.format>
		<maven.javadoc.skip>true</maven.javadoc.skip>
	</properties>

	<distributionManagement>
		<repository>
			<id>nexus.releases</id>
			<name>Nexus releases</name>
			<url>${nexus.url.releases}</url>
		</repository>
		<snapshotRepository>
			<id>nexus.snapshots</id>
			<name>Nexus snaphots</name>
			<url>${nexus.url.snapshots}</url>
			<uniqueVersion>false</uniqueVersion>
		</snapshotRepository>
	</distributionManagement>

	<profiles>
		<profile>
			<id>WINDOWS</id>
			<activation>
				<os>
					<family>windows</family>
				</os>
			</activation>
			<properties>
				<command.cmd>.cmd</command.cmd>
			</properties>
		</profile>
		<profile>
			<id>release-profile</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-deploy-plugin</artifactId>
						<configuration>
							<skip>false</skip>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<build>
		<plugins>
			<!-- DISABLED JAR BUILD -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<id>default-jar</id>
						<phase>none</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.4.0</version>
				<executions>
					<execution>
						<id>npm-uninstall-jigsaw</id>
						<phase>prepare-package</phase>
						<configuration>
							<executable>npm${command.cmd}</executable>
							<arguments>
								<argument>uninstall</argument>
								<argument>jigsaw-core</argument>
							</arguments>
						</configuration>
						<goals>
							<goal>exec</goal>
						</goals>
					</execution>
					<execution>
						<id>npm-install-jigsaw</id>
						<phase>prepare-package</phase>
						<configuration>
							<executable>npm${command.cmd}</executable>
							<arguments>
								<argument>install</argument>
								<argument>jigsaw-core@${jigsaw-core.version}</argument>
							</arguments>
						</configuration>
						<goals>
							<goal>exec</goal>
						</goals>
					</execution>
					<execution>
						<id>exec-npm-install</id>
						<phase>prepare-package</phase>
						<configuration>
							<executable>npm${command.cmd}</executable>
							<arguments>
								<argument>install</argument>
							</arguments>
						</configuration>
						<goals>
							<goal>exec</goal>
						</goals>
					</execution>
					<execution>
						<id>exec-gulp-build</id>
						<phase>prepare-package</phase>
						<configuration>
							<executable>node${command.cmd}</executable>
							<arguments>
								<argument>${basedir}/node_modules/gulp/bin/gulp.js</argument>
								<argument>build</argument>
								<argument>--fe_version</argument>
								<argument>${project.version}</argument>
							</arguments>
						</configuration>
						<goals>
							<goal>exec</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>3.0.0</version>
				<configuration>
					<descriptors>
						<descriptor>src/assembly/distribution.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.5.3</version>
				<configuration>
					<configuration>
						<goals>deploy -Prelease-profile</goals>
					</configuration>
					<releaseProfiles>release-profile</releaseProfiles>
				</configuration>
			</plugin>
		</plugins>
		<!-- PLUGIN MANAGEMENT -->
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-deploy-plugin</artifactId>
					<configuration>
						<skip>false</skip>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
