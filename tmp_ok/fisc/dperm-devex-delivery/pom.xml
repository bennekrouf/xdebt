<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<name>dperm-devex-delivery</name>
	<groupId>ch.vd.fiscalite</groupId>
	<artifactId>dperm-devex-delivery</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<scm>
		<url>https://portail.etat-de-vaud.ch/outils/git/projects/FISC/repos/dperm-devex-delivery/browse</url>
		<connection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/dperm-devex-delivery.git</connection>
		<developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/dperm-devex-delivery.git
		</developerConnection>
		<tag>${project.artifactId}-${project.version}</tag>
	</scm>

	<properties>
		<devex.url>http://outils-devex-ws.etat-de-vaud.ch/outils/devex</devex.url>
		<configTag.deploy>master</configTag.deploy>
		<devex.environment>IN</devex.environment>
		<devex.release.version>${release.version}</devex.release.version>
	</properties>

	<profiles>
		<profile>
			<id>front-back</id>
			<dependencies>
				<dependency>
					<groupId>${front.groupId}</groupId>
					<artifactId>${front.artifactId}</artifactId>
					<version>${front.version}</version>
					<type>zip</type>
				</dependency>
				<dependency>
					<groupId>${back.groupId}</groupId>
					<artifactId>${back.artifactId}</artifactId>
					<version>${back.version}</version>
					<type>war</type>
				</dependency>
			</dependencies>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>3.1.1</version>
						<executions>
							<execution>
								<id>copy</id>
								<phase>package</phase>
								<goals>
									<goal>copy</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>${back.groupId}</groupId>
											<artifactId>${back.artifactId}</artifactId>
											<version>${back.version}</version>
											<type>war</type>
											<outputDirectory>${project.build.directory}/build</outputDirectory>
											<destFileName>${back.artifactId}.war</destFileName>
										</artifactItem>
									</artifactItems>
								</configuration>
							</execution>
							<execution>
								<id>unpack</id>
								<phase>package</phase>
								<goals>
									<goal>unpack</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>${front.groupId}</groupId>
											<artifactId>${front.artifactId}</artifactId>
											<version>${front.version}</version>
											<type>zip</type>
											<outputDirectory>${project.build.directory}/build/${front.artifactId}</outputDirectory>
										</artifactItem>
									</artifactItems>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<artifactId>maven-assembly-plugin</artifactId>
						<version>3.1.1</version>
						<configuration>
							<descriptors>
								<descriptor>distribution.xml</descriptor>
							</descriptors>
							<finalName>${nexusName}-${devex.release.version}</finalName>
						</configuration>
						<executions>
							<execution>
								<id>make-assembly</id>
								<phase>package</phase>
								<goals>
									<goal>single</goal>
								</goals>
								<configuration>
									<appendAssemblyId>false</appendAssemblyId>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<artifactId>maven-clean-plugin</artifactId>
						<executions>
							<execution>
								<!-- we can't override this id -->
								<id>default-clean</id>
								<phase>package</phase>
								<goals>
									<goal>clean</goal>
								</goals>
								<configuration>
									<excludeDefaultDirectories>true</excludeDefaultDirectories>
									<filesets>
										<fileset>
											<directory>${project.build.directory}</directory>
											<excludes>
												<exclude>${nexusName}-${devex.release.version}.zip</exclude>
											</excludes>
										</fileset>
									</filesets>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-deploy-plugin</artifactId>
						<version>3.1.1</version>
						<executions>
							<execution>
								<id>deploy-file-to-nexus</id>
								<phase>package</phase>
								<goals>
									<goal>deploy-file</goal>
								</goals>
								<configuration>
									<file>target/${nexusName}-${devex.release.version}.zip</file>
									<repositoryId>${repositoy.id.to.upload}</repositoryId>
									<url>${repositoy.url.to.upload}</url>
									<groupId>${back.groupId}</groupId>
									<artifactId>${nexusName}</artifactId>
									<version>${devex.release.version}</version>
									<packaging>zip</packaging>
									<skip>false</skip>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>back-only</id>
			<dependencies>
				<dependency>
					<groupId>${back.groupId}</groupId>
					<artifactId>${back.artifactId}</artifactId>
					<version>${back.version}</version>
					<type>war</type>
				</dependency>
			</dependencies>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>3.1.1</version>
						<executions>
							<execution>
								<id>copy</id>
								<phase>package</phase>
								<goals>
									<goal>copy</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>${back.groupId}</groupId>
											<artifactId>${back.artifactId}</artifactId>
											<version>${back.version}</version>
											<type>war</type>
											<outputDirectory>${project.build.directory}/build</outputDirectory>
											<destFileName>${back.artifactId}.war</destFileName>
										</artifactItem>
									</artifactItems>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<artifactId>maven-assembly-plugin</artifactId>
						<version>3.1.1</version>
						<configuration>
							<descriptors>
								<descriptor>distribution.xml</descriptor>
							</descriptors>
							<finalName>${nexusName}-${devex.release.version}</finalName>
						</configuration>
						<executions>
							<execution>
								<id>make-assembly</id>
								<phase>package</phase>
								<goals>
									<goal>single</goal>
								</goals>
								<configuration>
									<appendAssemblyId>false</appendAssemblyId>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-deploy-plugin</artifactId>
						<version>3.1.1</version>
						<executions>
							<execution>
								<id>deploy-file-to-nexus</id>
								<phase>package</phase>
								<goals>
									<goal>deploy-file</goal>
								</goals>
								<configuration>
									<file>target/${nexusName}-${devex.release.version}.zip</file>
									<repositoryId>${repositoy.id.to.upload}</repositoryId>
									<url>${repositoy.url.to.upload}</url>
									<groupId>${back.groupId}</groupId>
									<artifactId>${nexusName}</artifactId>
									<version>${devex.release.version}</version>
									<packaging>zip</packaging>
									<skip>false</skip>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>snapshot</id>
			<properties>
				<repositoy.url.to.upload>${project.distributionManagement.snapshotRepository.url}</repositoy.url.to.upload>
				<repositoy.id.to.upload>${project.distributionManagement.snapshotRepository.id}</repositoy.id.to.upload>
			</properties>
		</profile>
		<profile>
			<id>release</id>
			<properties>
				<repositoy.url.to.upload>${project.distributionManagement.repository.url}</repositoy.url.to.upload>
				<repositoy.id.to.upload>${project.distributionManagement.repository.id}</repositoy.id.to.upload>
			</properties>
		</profile>
		<profile>
			<id>devex</id>
			<build>
				<plugins>
					<plugin>
						<groupId>ch.vd.devex</groupId>
						<artifactId>devex-maven-plugin</artifactId>
						<configuration>
							<deployUnits>
								<deployUnit>${deployUnit}</deployUnit>
							</deployUnits>
							<deployTarget>${deployTarget}</deployTarget>
							<configTag>${configTag.deploy}</configTag>
							<releaseVersion>${devex.release.version}</releaseVersion>
							<environment>${devex.environment}</environment>
							<failOnError>true</failOnError>
						</configuration>
						<executions>
							<execution>
								<id>create</id>
								<phase>deploy</phase>
								<goals>
									<goal>create-release</goal>
								</goals>
							</execution>
							<execution>
								<id>deploy</id>
								<phase>deploy</phase>
								<goals>
									<goal>deploy</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<distributionManagement>
		<repository>
			<id>nexus.releases</id>
			<name>Nexus releases</name>
			<url>https://artifacts.etat-de-vaud.ch/repository/app-jenkinsfisc-stable</url>
		</repository>
		<snapshotRepository>
			<id>nexus.snapshots</id>
			<name>Nexus snaphots</name>
			<url>https://artifacts.etat-de-vaud.ch/repository/app-jenkinsfisc-snapshots</url>
			<uniqueVersion>false</uniqueVersion>
		</snapshotRepository>
	</distributionManagement>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>ch.vd.devex</groupId>
					<artifactId>devex-maven-plugin</artifactId>
					<version>1.1.1</version>
					<configuration>
						<url>${devex.url}</url>
						<failOnError>true</failOnError>
						<warProjectOnly>false</warProjectOnly>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-deploy-plugin</artifactId>
					<version>3.1.1</version>
					<configuration>
						<skip>true</skip>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
