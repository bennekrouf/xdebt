<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>ch.vd.fiscalite.dperm.process</groupId>
        <artifactId>process-release-PM</artifactId>
        <version>24.3.1.2-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <artifactId>DPerm-DEM-DEGREV-Acquisition</artifactId>
    <version>1.0.6-SNAPSHOT</version>
    <packaging>jar</packaging>

    <properties>
        <bos.home>${project.parent.build.directory}/BonitaBPMSubscription-${bonita.version.build}</bos.home>
        <bonita.home>${project.parent.build.directory}/bonita-home</bonita.home>
        <bonita.client>${project.parent.build.directory}/bonita-client</bonita.client>
        <bonita-repository>${project.parent.build.directory}/repo</bonita-repository>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>vd.ch.socle.bpm</groupId>
                <artifactId>bonita-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-bar</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>copy-bar</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>update-version</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>update-process-version</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>check</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>check-module-version</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>update</id>
                        <phase>none</phase>
                        <goals>
                            <goal>update-module-version</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-archive-cei</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>nexus</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-deploy-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>default-deploy</id>
                                <goals>
                                    <goal>deploy</goal>
                                </goals>
                                <configuration>
                                    <skip>false</skip>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>