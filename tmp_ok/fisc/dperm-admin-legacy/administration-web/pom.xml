	<artifactId>administration-web</artifactId>
	<name>administration-web</name>
	<packaging>war</packaging>
	<description>Couche Web du dperm-administration</description>

	<properties>
		<dist.app.name>dperm-administration-${project.version}</dist.app.name>
		<dist.app.link.name>dperm-administration</dist.app.link.name>
		<application.version>${project.version}</application.version>
		<application.buildTime>${maven.build.timestamp}</application.buildTime>
		<xfile.upload.from>${user.name}</xfile.upload.from>
	</properties>

	<build>

		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-assembly-plugin</artifactId>
					<executions>
						<execution>
							<id>assembly-bd</id>
							<!-- Pour être sure que l'exécution soit effectué avant l'exécution
								suivante -->
							<phase>prepare-package</phase>
							<configuration>
								<finalName>${dist.app.link.name}</finalName>
								<descriptor>assembly/administration-bd-release.xml</descriptor>
								<attach>false</attach>
								<outputDirectory>${project.build.directory}/bd</outputDirectory>
							</configuration>
						</execution>
						<execution>
							<id>assembly-release</id>
							<phase>install</phase>
							<configuration>
								<finalName>${dist.app.link.name}</finalName>
								<descriptor>assembly/administration-web-release.xml</descriptor>
							</configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<artifactId>maven-deploy-plugin</artifactId>
					<configuration>
						<skip>false</skip>
					</configuration>
				</plugin>
				<plugin>
					<groupId>cei.aew.web</groupId>
					<artifactId>cei-maven-plugin</artifactId>
					<configuration>
						<from>${xfile.upload.from}</from>
						<webresourceurl>http://exploitation.etat-de-vaud.ch/outils/web/ws/rest</webresourceurl>
						<to>WEB</to>
					</configuration>
					<executions>
						<execution>
							<id>upload-cei-xFile-livrable</id>
							<phase>install</phase>
							<configuration>
								<filetoupload>${val.distribution.file}</filetoupload>
							</configuration>
						</execution>
					</executions>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<profiles>
		<profile>
			<id>build-delivery</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-assembly-plugin</artifactId>
						<executions>
							<execution>
								<id>assembly-bd</id>
								<goals>
									<goal>single</goal>
								</goals>
							</execution>
							<execution>
								<id>assembly-release</id>
								<goals>
									<goal>single</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>cei.aew.web</groupId>
						<artifactId>cei-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>upload-cei-xFile-livrable</id>
								<goals>
									<goal>upload</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

