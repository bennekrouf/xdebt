<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ch.vd.fiscalite</groupId>
        <artifactId>dperm-admin-legacy</artifactId>
        <version>24R2.C.2-SNAPSHOT</version>
    </parent>

    <artifactId>administration-business</artifactId>
    <packaging>jar</packaging>
    <name>administration-business</name>
    <description>Couche Business du dperm-administration</description>

    <properties>
        <xsd.src.dir>${project.build.directory}/xsd-for-generated-sources</xsd.src.dir>
        <project.build.directory.jaxb>${project.build.directory}/generated-sources/jaxb/</project.build.directory.jaxb>
    </properties>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>unpack-xsd-dependency</id>
                            <phase>generate-sources</phase>
                            <configuration>
                                <outputDirectory>${xsd.src.dir}</outputDirectory>
                                <artifactItems>
                                    <artifactItem>
                                        <groupId>ch.vd.fiscalite.dperm</groupId>
                                        <artifactId>dperm-resources</artifactId>
                                        <version>${lib.dperm.resources.version}</version>
                                        <type>jar</type>
                                    </artifactItem>
                                </artifactItems>
                                <includes>
                                    xsd-dperm/detectionDoublon-3.xsd,
                                    xsd-dperm/detectionDoublon-4.xsd,
                                    xsd-dperm/elementsAttributionTache-2.xsd,
                                    xsd-dperm/elementsAttributionTache-3.xsd,
                                    xsd-dperm/elementsAttributionTache-4.xsd,
                                    xsd-dperm/elementsAttributionTache-5.xsd,
                                    xsd-dperm/elementsAttributionTache-6.xsd,
                                    xsd-dperm/elementsCalculAbandon-1.xsd,
                                    xsd-dperm/elementsCalculSeuilAbandon-2.xsd,
                                    xsd-dperm/evenementSupervisionDPerm-2.xsd,
                                    xsd-dperm/evenementSupervisionDPerm-3.xsd,
                                    xsd-dperm/evenementSupervisionDPerm-4.xsd,
                                    xsd-dperm/operationHistorique-4.xsd,
                                    xsd-dperm/typeSimpleDPerm-1.xsd,
                                    xsd-dperm/attributionTache-1.xsd,
                                    xsd-dperm/tachesHistorique-1.xsd,
                                    xsd-dperm/groupeUtilisateurDPerm-1.xsd,
                                    xsd-dperm/groupeUtilisateurDPerm-2.xsd,
                                    xsd-dperm/competencesAdminDPerm-1.xsd,
                                    xsd-dperm/typesTacheAdminDPerm-1.xsd,
                                    xsd-dperm/elementsRechercheTache-1.xsd,
                                    xsd-dperm/elementsRechercheTache-2.xsd,
                                    xsd-dperm/elementsRechercheTache-3.xsd,
                                    xsd-dperm/elementsRechercheHistoriqueTache-1.xsd,
                                    xsd-dperm/reponseRechercheTache-1.xsd,
                                    xsd-dperm/reponseRechercheTache-2.xsd,
                                    xsd-dperm/reponseRechercheTache-3.xsd,
                                    xsd-dperm/reponseRecherchePot-1.xsd,
                                    xsd-dperm/exceptionDelaiTache-1.xsd,
                                    xsd-dperm/reservation-tache/dossierTaxation-1.xsd
                                </includes>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <artifactId>maven-resources-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>copy-binding-file</id>
                            <phase>generate-sources</phase>
                            <configuration>
                                <outputDirectory>${xsd.src.dir}</outputDirectory>
                                <resources>
                                    <resource>
                                        <directory>${project.basedir}/src/main/resources/xsd-admin</directory>
                                        <includes>
                                            <include>binding.xjb</include>
                                        </includes>
                                    </resource>
                                </resources>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>com.sun.tools.xjc.maven2</groupId>
                    <artifactId>maven-jaxb-plugin</artifactId>
                    <version>1.1.1</version>
                    <configuration>
                        <verbose>true</verbose>
                        <readOnly>true</readOnly>
                        <strict>true</strict>
                        <extension>true</extension>
                        <args>-Xifins -Xvalue-constructor</args>
                        <includeSchemas>
                            <includeSchema>**/*.xsd</includeSchema>
                        </includeSchemas>
                        <encoding>UTF-8</encoding>
                    </configuration>
                    <executions>
                        <execution>
                            <id>generate-sources-document</id>
                            <phase>generate-sources</phase>
                            <configuration>
                                <schemaDirectory>${xsd.src.dir}</schemaDirectory>
                                <generateDirectory>${project.build.directory.jaxb}</generateDirectory>
                                <includeBindings>
                                    <includeBinding>binding.xjb</includeBinding>
                                </includeBindings>
                                <encoding>UTF-8</encoding>
                            </configuration>
                        </execution>

                    </executions>
                    <dependencies>
                        <dependency>
                            <groupId>org.andromda.thirdparty.jaxb2_commons</groupId>
                            <artifactId>xjc-if-ins</artifactId>
                            <version>1.0</version>
                        </dependency>
                        <dependency>
                            <groupId>org.andromda.thirdparty.jaxb2_commons</groupId>
                            <artifactId>value-constructor</artifactId>
                            <version>1.0</version>
                        </dependency>
                    </dependencies>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-xsd-dependency</id>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-binding-file</id>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.sun.tools.xjc.maven2</groupId>
                <artifactId>maven-jaxb-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-sources-document</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>
    </build>

