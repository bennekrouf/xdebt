<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>ch.vd.dfin.tao.core-common</groupId>
    <artifactId>tao-core</artifactId>
    <version>24R2.C.4-SNAPSHOT</version>
  </parent>

  <artifactId>tao-core-test-dao</artifactId>
  <name>tao-core-test-dao</name>

  <dependencies>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>tao-core-test</artifactId>
      <scope>compile</scope>
    </dependency>

  </dependencies>

  <profiles>
    <profile>
      <id>coverage</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.jacoco</groupId>
            <artifactId>jacoco-maven-plugin</artifactId>
            <configuration>
              <excludes>
                <exclude>ch/vd/dfin/tao/core/test/dao/enumeration/*.class</exclude>
                <exclude>ch/vd/dfin/tao/core/test/dao/enumeration/**/*.class</exclude>
                <exclude>ch/vd/dfin/tao/core/test/dao/model/*.class</exclude>
                <exclude>ch/vd/dfin/tao/core/test/dao/model/**/*.class</exclude>
              </excludes>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
