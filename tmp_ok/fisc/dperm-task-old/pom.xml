        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>buildnumber-maven-plugin</artifactId>
                    <version>1.0-beta-2</version>
                    <configuration>
                        <format>{0,date,yyyy-MM-dd HH:mm:ss}</format>
                        <items>
                            <item>timestamp</item>
                        </items>
                    </configuration>
                    <executions>
                        <execution>
                            <phase>validate</phase>
                            <goals>
                                <goal>create</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <artifactId>maven-resources-plugin</artifactId>
                    <configuration>
                        <encoding>UTF-8</encoding>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-war-plugin</artifactId>
                    <version>2.3</version>
                    <configuration>
                        <archive>
                            <manifest>
                                <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            </manifest>
                            <manifestEntries>
                                <Implementation-Build>${buildNumber}</Implementation-Build>
                            </manifestEntries>
                        </archive>
                        <dependentWarExcludes>**/web.xml</dependentWarExcludes>
                        <webResources>
                            <resource>
                                <filtering>true</filtering>
                                <directory>${project.basedir}/src/main/webapp</directory>
                                <includes>
                                    <include>**/*.xml</include>
                                </includes>
                            </resource>
                        </webResources>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-antrun-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>deploy-application-tomcat</id>
                            <phase>install</phase>
                            <configuration>
                                <target>
                                    <macrodef name="ssh">
                                        <attribute name="command" default="NOT SET" />
                                        <attribute name="failonerror" default="true" />
                                        <sequential>
                                            <sshexec host="${dperm.task.server.host}" username="${dperm.task.server.username}" password="${dperm.task.server.password}" trust="true" failonerror="@{failonerror}" command="@{command}" />
                                        </sequential>
                                    </macrodef>

                                    <echo>copie de l archive</echo>
                                    <scp file="${local.distribution.artifact.file}" todir="${dperm.task.server.username}:${dperm.task.server.password}@${dperm.task.server.host}:${dperm.task.releases.dir}" sftp="true" trust="true" verbose="true" failonerror="true" />

                                    <echo>extraction de l archive</echo>
                                    <ssh command="unzip -o ${dperm.task.releases.dir}/${dist.app.name}.zip -d ${dperm.task.app.dir}/${dist.app.name}" />

                                    <ssh command="rm -f ${dperm.task.applications.dir}/${dist.app.link.name}" />

                                    <echo>Creation du lien symbolique</echo>
                                    <ssh command="ln -s ${dperm.task.app.dir}/${dist.app.name}/${dist.app.name} ${dperm.task.applications.dir}/${dist.app.link.name}" />

                                    <echo>Arret du serveur tomcat</echo>
                                    <ssh command="${dperm.task.command} stop" failonerror="false" />

                                    <echo>Nettoyage des fichiers temporaires</echo>
                                    <ssh command="${dperm.task.command} clean" />

                                    <echo>Demarrage des instances</echo>
                                    <ssh command="${dperm.task.command} start" />
                                </target>
                            </configuration>
                        </execution>
                        <execution>
                            <id>copy-delivery-tomcat</id>
                            <phase>install</phase>
                            <configuration>
                                <target>
                                    <copy file="${local.distribution.artifact.file}" tofile="${val.distribution.file}" />
                                    <scp file="${val.distribution.file}" todir="${dperm.task.server.username}:${dperm.task.server.password}@${dperm.task.server.host}:${dperm.task.delivery.dir}" sftp="true" trust="true" verbose="true" failonerror="true" />
                                </target>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.eclipse.m2e</groupId>
                    <artifactId>lifecycle-mapping</artifactId>
                    <version>1.0.0</version>
                    <configuration>
                        <lifecycleMappingMetadata>
                            <pluginExecutions>
                                <pluginExecution>
                                    <pluginExecutionFilter>
                                        <groupId>org.apache.maven.plugins</groupId>
                                        <artifactId>maven-dependency-plugin</artifactId>
                                        <versionRange>[2.0,)</versionRange>
                                        <goals>
                                            <goal>copy-dependencies</goal>
                                            <goal>unpack</goal>
                                        </goals>
                                    </pluginExecutionFilter>
                                    <action>
                                        <execute />
                                    </action>
                                </pluginExecution>
                            </pluginExecutions>
                        </lifecycleMappingMetadata>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>

