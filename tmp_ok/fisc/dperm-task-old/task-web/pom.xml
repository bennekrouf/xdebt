    <artifactId>task-web</artifactId>
    <name>task-web</name>
    <packaging>war</packaging>
    <description>Couche Web du dperm-task</description>

    <properties>
        <dist.app.name>dperm-task-${project.version}</dist.app.name>
        <dist.app.link.name>dperm-task</dist.app.link.name>
        <application.version>${project.version}</application.version>
        <application.buildTime>${maven.build.timestamp}</application.buildTime>
        <local.distribution.batch.dir>${project.build.directory}/batchs</local.distribution.batch.dir>
    </properties>

    <build>

        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>assembly-bd</id>
                            <!-- Pour être sure que l'exécution soit effectué avant l'exécution suivante -->
                            <phase>prepare-package</phase>
                            <configuration>
                                <finalName>${dist.app.link.name}</finalName>
                                <descriptor>assembly/task-bd-release.xml</descriptor>
                                <attach>false</attach>
                                <outputDirectory>${project.build.directory}/bd</outputDirectory>
                            </configuration>
                        </execution>
                        <execution>
                            <id>assembly-release</id>
                            <phase>install</phase>
                            <configuration>
                                <finalName>${dist.app.link.name}</finalName>
                                <descriptor>assembly/task-web-release.xml</descriptor>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>

                <plugin>
                    <groupId>cei.aew.web</groupId>
                    <artifactId>cei-maven-plugin</artifactId>
                    <configuration>
                        <from>xsijme</from>
                    </configuration>
                    <executions>
                        <execution>
                            <id>upload-cei-web-xFile-livrable</id>
                            <phase>install</phase>
                            <configuration>
                                <filetoupload>${val.distribution.file}</filetoupload>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <configuration>
                        <skip>true</skip>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <profiles>
        <profile>
            <id>deploy-web-on-tomcat</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>assembly-bd</id>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>assembly-release</id>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>deploy-application-tomcat</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                </plugins>
            </build>
        </profile>

        <profile>
            <id>build-delivery</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>assembly-bd</id>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>assembly-release</id>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                      <artifactId>maven-antrun-plugin</artifactId>
                      <executions>
                        <execution>
                          <id>copy-delivery-tomcat</id>
                          <goals>
                            <goal>run</goal>
                          </goals>
                        </execution>
                      </executions>
                    </plugin>
                    <plugin>
                      <groupId>cei.aew.web</groupId>
                      <artifactId>cei-maven-plugin</artifactId>
                      <executions>
                        <execution>
                          <id>upload-cei-web-xFile-livrable</id>
                          <goals>
                            <goal>upload</goal>
                          </goals>
                        </execution>
                      </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

