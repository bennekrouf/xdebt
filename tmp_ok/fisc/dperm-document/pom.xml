<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>ch.vd.fiscalite</groupId>
		<artifactId>dperm-portail-pom</artifactId>
		<version>23R1.C.1</version>
	</parent>

	<artifactId>dperm-document</artifactId>
	<version>24R2.C.1-SNAPSHOT</version>
	<packaging>${packaging.type}</packaging>
	<name>dperm-document</name>

	<scm>
		<url>https://portail.etat-de-vaud.ch/outils/git/projects/FISC/repos/dperm-document/browse</url>
		<connection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/dperm-document.git</connection>
		<developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/fisc/dperm-document.git</developerConnection>
		<tag>${project.artifactId}-${project.version}</tag>
	</scm>

	<ciManagement>
		<system>Jenkins CI</system>
		<url>https://validation.portail.etat-de-vaud.ch/outils/jenkins-fisc/job/snapshot-dperm-portail-document/</url>
	</ciManagement>

	<developers>
		<developer>
			<id>p3wany</id>
			<name>Francois Achache</name>
		</developer>
	</developers>

	<properties>
		<main.class>ch.vd.dperm.document.SpringBootRunner</main.class>
		<!-- COMMONS -->
		<lib.dperm.resources.version>24R2.A.5</lib.dperm.resources.version>
		<tao-admin-client-shared.version>1.2.3</tao-admin-client-shared.version>
		<apache-commons.version>2.7</apache-commons.version>
		<jigsaw-core.version>2.9.27</jigsaw-core.version>
		<shared-fisc-jmx.version>2.0.3</shared-fisc-jmx.version>
		<editique-client.version>1.4</editique-client.version>
		<dperm-admin-client.version>1.0.8</dperm-admin-client.version>
		<esb-client.version>4.2</esb-client.version>
		<esb-validation.version>1.1</esb-validation.version>
		<apache-poi.version>3.17</apache-poi.version>
		<ojdbc7.version>12.1.0.2.0</ojdbc7.version>
		<apache-pdfbox.version>2.0.10</apache-pdfbox.version>
		<javax-ws.version>2.1.1</javax-ws.version>
		<fidor-jaxb2.version>1.14</fidor-jaxb2.version>
		<model-mapper.version>2.3.6</model-mapper.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.springframework.cloud</groupId>
				<artifactId>spring-cloud-dependencies</artifactId>
				<version>Greenwich.RELEASE</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-tomcat</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-webflux</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.cloud</groupId>
			<artifactId>spring-cloud-netflix-hystrix-dashboard</artifactId>
		</dependency>

		<!-- DATABASE -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-data-jpa</artifactId>
		</dependency>
		<dependency>
			<groupId>oracle.jdbc</groupId>
			<artifactId>ojdbc7</artifactId>
			<version>${ojdbc7.version}</version>
		</dependency>
		<!-- OXM JAXB -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-oxm</artifactId>
		</dependency>
		<!-- APACHE COMMONS -->
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>${apache-commons.version}</version>
		</dependency>
		<!-- JIGSAW-CORE -->
		<dependency>
			<groupId>ch.vd.fiscalite.shared</groupId>
			<artifactId>jigsaw-core</artifactId>
			<version>${jigsaw-core.version}</version>
		</dependency>
		<dependency>
			<groupId>ch.vd.fiscalite.shared</groupId>
			<artifactId>jigsaw-core</artifactId>
			<classifier>tests</classifier>
			<version>${jigsaw-core.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>ch.vd.fiscalite.shared</groupId>
			<artifactId>shared-fisc-jmx</artifactId>
			<version>${shared-fisc-jmx.version}</version>
			<exclusions>
				<exclusion>
					<groupId>net.sf.ehcache</groupId>
					<artifactId>ehcache-core</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<!-- EDITIQUE-CLIENT -->
		<dependency>
			<groupId>ch.vd.fiscalite.shared</groupId>
			<artifactId>editique-client</artifactId>
			<version>${editique-client.version}</version>
		</dependency>
		<!-- DPERM-ADMIN-CLIENT -->
		<dependency>
			<groupId>ch.vd.fiscalite.shared</groupId>
			<artifactId>dperm-admin-client</artifactId>
			<version>${dperm-admin-client.version}</version>
		</dependency>
		<!-- CLIENT TAO-ADMIN -->
		<dependency>
			<groupId>ch.vd.fiscalite.shared</groupId>
			<artifactId>tao-admin-client-shared</artifactId>
			<version>${tao-admin-client-shared.version}</version>
		</dependency>
		<!-- PDFBOX -->
		<dependency>
			<groupId>org.apache.pdfbox</groupId>
			<artifactId>pdfbox</artifactId>
			<version>${apache-pdfbox.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.pdfbox</groupId>
			<artifactId>xmpbox</artifactId>
			<version>${apache-pdfbox.version}</version>
		</dependency>
		<!-- LOMBOK -->
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<scope>provided</scope>
		</dependency>
		<!-- Model Mapper -->
		<dependency>
			<groupId>org.modelmapper</groupId>
			<artifactId>modelmapper</artifactId>
			<version>${model-mapper.version}</version>
		</dependency>
		<!-- SLF4J -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
		</dependency>
		<!-- Swagger -->
		<dependency>
			<groupId>org.springdoc</groupId>
			<artifactId>springdoc-openapi-ui</artifactId>
		</dependency>
		<!-- TESTS DEPENDENCIES-->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- MOCKITO -->
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-core</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- ASSERTJ -->
		<dependency>
			<groupId>org.assertj</groupId>
			<artifactId>assertj-core</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- ESB TOOLS -->
		<dependency>
			<groupId>ch.vd.technical.esb</groupId>
			<artifactId>esb-client</artifactId>
			<version>${esb-client.version}</version>
		</dependency>
		<dependency>
			<groupId>ch.vd.technical.esb</groupId>
			<artifactId>esb-validation</artifactId>
			<version>${esb-validation.version}</version>
		</dependency>
		<dependency>
			<groupId>ch.vd.fidor</groupId>
			<artifactId>fidor-jaxb2</artifactId>
			<version>${fidor-jaxb2.version}</version>
		</dependency>
		<!-- RESSOURCE XSD PRESENT JUSTE POUR NAVIGER DANS LES JARS -->
		<dependency>
			<groupId>ch.vd.fiscalite.dperm</groupId>
			<artifactId>dperm-resources</artifactId>
			<version>${lib.dperm.resources.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.poi</groupId>
			<artifactId>poi</artifactId>
			<version>${apache-poi.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.poi</groupId>
			<artifactId>poi-ooxml</artifactId>
			<version>${apache-poi.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.poi</groupId>
			<artifactId>poi-scratchpad</artifactId>
			<version>${apache-poi.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.poi</groupId>
			<artifactId>poi-ooxml-schemas</artifactId>
			<version>${apache-poi.version}</version>
		</dependency>
		<dependency>
			<groupId>javax.ws.rs</groupId>
			<artifactId>javax.ws.rs-api</artifactId>
			<version>${javax-ws.version}</version>
		</dependency>

	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>${basedir}/src/main/resources</directory>
				<excludes>
					<exclude>**/*.sql</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<!-- COPIE DES FICHIERS DE BINDING POUR GENERATION A PARTIR DE LA XSD -->
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<!-- COPIE DES FICHIERS DE BINDING POUR GENERATION A PARTIR DE LA XSD -->
					<execution>
						<id>copy-binding-file</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/classes/xsd</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/src/main/xsd</directory>
									<includes>
										<include>binding.xjb</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- EXTRAIT LES XSD DE dperm-resources -->
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-xsd-dependency</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/classes/xsd</outputDirectory>
							<outputAbsoluteArtifactFilename>true</outputAbsoluteArtifactFilename>
							<artifactItems>
								<artifactItem>
									<groupId>ch.vd.fiscalite.dperm</groupId>
									<artifactId>dperm-resources</artifactId>
									<version>${lib.dperm.resources.version}</version>
									<type>jar</type>
								</artifactItem>
							</artifactItems>
							<includes>
								xsd-dperm/typeSimpleDPerm-1.xsd,
								xsd-dperm/evenementSupervisionDPerm-3.xsd,
								xsd-dperm/tache-manuelle/evtCreationTacheManuelle-2.xsd
							</includes>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- GENERE LES CLASSES A PARTIR DES XSD PAR JAXB -->
			<plugin>
				<groupId>com.sun.tools.xjc.maven2</groupId>
				<artifactId>maven-jaxb-plugin</artifactId>
				<version>1.1.1</version>
				<configuration>
					<readOnly>true</readOnly>
					<strict>true</strict>
					<extension>true</extension>
					<args>-Xvalue-constructor</args>
					<includeSchemas>
						<includeSchema>**/*.xsd</includeSchema>
					</includeSchemas>
					<encoding>UTF-8</encoding>
				</configuration>
				<executions>
					<execution>
						<id>generate-source-dperm</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<schemaDirectory>${project.build.directory}/classes/xsd</schemaDirectory>
							<encoding>UTF-8</encoding>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>org.andromda.thirdparty.jaxb2_commons</groupId>
						<artifactId>value-constructor</artifactId>
						<version>1.0</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>buildnumber-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
</project>
