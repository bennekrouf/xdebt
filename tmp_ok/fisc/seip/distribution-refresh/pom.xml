<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>ch.vd.sipf.bof</groupId>
        <artifactId>sipfbof</artifactId>
        <version>1.3.7-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>seiprefresh</artifactId>
    <name>distribution-refresh</name>
    <packaging>pom</packaging>

    <properties>
        <!-- Propriétés devex pour le déploiement  -->
        <devex.deployEnv>IN</devex.deployEnv>
        <devex.configTag>refresh</devex.configTag>
        <devex.releaseVersion>${project.version}</devex.releaseVersion>
        <devex.deployUnit>seiprefresh</devex.deployUnit>
        <devex.deployTarget>Tomcat</devex.deployTarget>
    </properties>

    <profiles>
        <profile>
            <!-- pour le déploiement en IN -->
            <id>env.in</id>
            <properties>
                <assembly.env>IN</assembly.env>
            </properties>
            <build>
                <plugins>
                    <!-- Pour générer le fichier pour le CEI -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>${maven-assembly-plugin.version}</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <descriptors>
                                <descriptor>assembly_refresh.xml</descriptor>
                            </descriptors>
                            <finalName>${assembly.refresh.finalName}</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <tarLongFileMode>gnu</tarLongFileMode>
                            <outputDirectory>../target</outputDirectory>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>build-delivery-devex</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-deploy-plugin</artifactId>
                        <configuration>
                            <skip>false</skip>
                        </configuration>
                    </plugin>
                    <!-- Pour générer le fichier pour le CEI -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>${maven-assembly-plugin.version}</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <descriptors>
                                <descriptor>assembly_refresh.xml</descriptor>
                            </descriptors>
                            <finalName>${assembly.refresh.finalName}</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <tarLongFileMode>gnu</tarLongFileMode>
                            <outputDirectory>target</outputDirectory>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <!-- Création de la release dans devex -->
        <profile>
            <!-- pour l'utilisation du plugin devex : les variables d'environnement doivent être setter : déjà effectué sur jenkins
              DEVEX_URL=http://outils-devex-ws.etat-de-vaud.ch/outils/devex
              DEVEX_USERNAME=< IUP>
              DEVEX_PASSWORD=<pwd ADACV>
            -->
            <id>devex.release</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>ch.vd.devex</groupId>
                        <artifactId>devex-maven-plugin</artifactId>
                        <version>${devex-maven-plugin.version}</version>
                        <configuration>
                            <configTag>${devex.configTag}</configTag>
                            <deployUnit>${devex.deployUnit}</deployUnit>
                            <deployTarget>${devex.deployTarget}</deployTarget>
                        </configuration>
                        <executions>
                            <execution>
                                <id>release</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>create-release</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <!-- Déploiment de la release dans devex -->
        <profile>
            <!-- pour l'utilisation du plugin devex : les variables d'environnement doivent être setter : déjà effectué sur jenkins
              DEVEX_URL=http://outils-devex-ws.etat-de-vaud.ch/outils/devex
              DEVEX_USERNAME=< IUP>
              DEVEX_PASSWORD=<pwd ADACV>
            -->
            <id>devex.deploy</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>ch.vd.devex</groupId>
                        <artifactId>devex-maven-plugin</artifactId>
                        <version>${devex-maven-plugin.version}</version>
                        <configuration>
                            <configTag>${devex.configTag}</configTag>
                            <deployUnit>${devex.deployUnit}</deployUnit>
                            <deployTarget>${devex.deployTarget}</deployTarget>
                            <environment>${devex.deployEnv}</environment>
                            <releaseVersion>${project.version}</releaseVersion>
                        </configuration>
                        <executions>
                            <execution>
                                <id>deploy</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>deploy</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
