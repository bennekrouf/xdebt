<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ch.vd.dfin.tao.dossier-fiscal.bo</groupId>
        <artifactId>dossier-fiscal-bo-app</artifactId>
        <version>24R2.C.5-SNAPSHOT</version>
    </parent>

    <artifactId>dossier-fiscal-bo-jacoco-report</artifactId>
    <description>Compute aggregated test code coverage</description>

    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>

        <maven.deploy.skip>true</maven.deploy.skip>
    </properties>

    <dependencies>
        <!-- Explicitly include module-a for JaCoCo's report-aggregate goal -->
        <dependency>
            <groupId>ch.vd.dfin.tao.dossier-fiscal.bo</groupId>
            <artifactId>dossier-fiscal-bo-business</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.vd.dfin.tao.dossier-fiscal.bo</groupId>
            <artifactId>dossier-fiscal-bo-dao</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.vd.dfin.tao.dossier-fiscal.bo</groupId>
            <artifactId>dossier-fiscal-bo-db</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.vd.dfin.tao.dossier-fiscal.bo</groupId>
            <artifactId>dossier-fiscal-bo-metier</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.vd.dfin.tao.dossier-fiscal.bo</groupId>
            <artifactId>dossier-fiscal-bo-services</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.vd.dfin.tao.dossier-fiscal.bo</groupId>
            <artifactId>dossier-fiscal-bo-test</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.vd.dfin.tao.dossier-fiscal.bo</groupId>
            <artifactId>dossier-fiscal-bo-test-automatise</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.vd.dfin.tao.dossier-fiscal.bo</groupId>
            <artifactId>dossier-fiscal-bo-web</artifactId>
            <version>${project.version}</version>
            <classifier>test-auto</classifier>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <artifactId>asm</artifactId>
                    <groupId>org.ow2.asm</groupId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.logging.log4j</groupId>
                    <artifactId>log4j-to-slf4j</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>coverage</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.jacoco</groupId>
                        <artifactId>jacoco-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>report-aggregate</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>report-aggregate</goal>
                                </goals>
                                <configuration>
                                    <dataFileIncludes>**/*.exec</dataFileIncludes>
                                    <outputDirectory>${project.reporting.outputDirectory}/jacoco</outputDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
