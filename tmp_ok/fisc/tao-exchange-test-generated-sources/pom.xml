<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <groupId>ch.vd.fiscalite</groupId>
    <artifactId>shared-parent-plugin</artifactId>
    <version>2.0.9</version>
  </parent>
  <properties>
    <jdk.version>1.11</jdk.version>
    <maven.compiler.target>1.11</maven.compiler.target>
    <maven.compiler.source>1.11</maven.compiler.source>
    <maven.compiler.release>11</maven.compiler.release>
    <java.version>1.11</java.version>
    <version-exchange-ressource>toSetdansProfil</version-exchange-ressource>
  </properties>
  <artifactId>tao-exchange-test-generated-sources</artifactId>
  <groupId>ch.vd.dfin.tao</groupId>
  <version>1</version>
  <modelVersion>4.0.0</modelVersion>
  <profiles>
    <profile>
      <id>rapportGenSrcAct</id>
      <properties>
        <version-exchange-ressource>21R2.B.2</version-exchange-ressource>
        <version-exchange-ressource-ref>21R1.A.5</version-exchange-ressource-ref>
      </properties>
    </profile>
    <profile>
    <id>rapportGenSrcRef</id>
    <properties>
      <version-exchange-ressource>21R1.A.5</version-exchange-ressource>
      <version-exchange-ressource-ref></version-exchange-ressource-ref>
    </properties>
  </profile>
  </profiles>
  <build>
  <plugins>
    <plugin>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-dependency-plugin</artifactId>
      <version>3.1.1</version>
        <executions>
          <execution>
            <id>copy</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <artifactItems>
            <artifactItem>
            <groupId>ch.vd.dfin.tao</groupId>
            <artifactId>tao-exchange-generated-sources</artifactId>
            <version>${version-exchange-ressource}</version>
            <type>jar</type>
            <overWrite>true</overWrite>
            </artifactItem>
          </artifactItems>
          <outputDirectory>src/main/resources</outputDirectory>
          <overWriteReleases>false</overWriteReleases>
          <overWriteSnapshots>true</overWriteSnapshots>
        </configuration>
    </plugin>
  <plugin>
  <groupId>org.codehaus.mojo</groupId>
  <artifactId>exec-maven-plugin</artifactId>
  <version>1.6.0</version>
  <executions>
  <execution>
  <phase>verify</phase>
  <goals>
    <goal>java</goal>
  </goals>
  <configuration>
  <mainClass>rapportgeneration.RapportGenerationCode</mainClass>
    <arguments>
      <argument>${version-exchange-ressource}</argument>
      <argument>${version-exchange-ressource-ref}</argument>
    </arguments>
  </configuration>
  </execution>
  </executions>
  </plugin>
  </plugins>
 	</build>
  <dependencies>
    <dependency>
      <groupId>ch.vd.dfin.tao</groupId>
      <artifactId>tao-exchange-generated-sources</artifactId>
      <version>${version-exchange-ressource}</version>
    </dependency>
  </dependencies>

</project>