<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ch.vd.fidor</groupId>
        <artifactId>fidor-parent</artifactId>
        <!-- BEGIN_LVERSION -->
        <version>24R2.3.4-SNAPSHOT</version>
        <!-- END_LVERSION -->
    </parent>

    <artifactId>fidor</artifactId>
    <packaging>pom</packaging>

    <name>Fidor - Distribution</name>
    <description>Fidor, Le référentiel fiscal de l'Etat de Vaud</description>

    <properties>
        <assembly.finalName>fidor-${project.version}</assembly.finalName>
        <!-- 'build.userId' et 'devex.configTag' doivent être renseignés comme variables d'environnement par Jenkins -->
        <build.userId/>
        <devex.configTag/>
        <devex.releaseVersion>${project.version}</devex.releaseVersion>
        <devex.deployUnit>fidor</devex.deployUnit>
        <devex.deployTarget>tomcat9</devex.deployTarget>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.parent.groupId}</groupId>
            <artifactId>fidor-web</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <configuration>
                    <artifactItems>
                        <artifactItem>
                            <groupId>${project.parent.groupId}</groupId>
                            <artifactId>fidor-web</artifactId>
                            <version>${project.version}</version>
                            <type>war</type>
                        </artifactItem>
                    </artifactItems>
                </configuration>
                <executions>
                    <execution>
                        <id>copy-dependencies-distribution</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <descriptors>
                        <descriptor>src/main/assembly/release.xml</descriptor>
                    </descriptors>
                    <finalName>${assembly.finalName}</finalName>
                    <appendAssemblyId>false</appendAssemblyId>
                    <tarLongFileMode>posix</tarLongFileMode>
                </configuration>
            </plugin>
        </plugins>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>ch.vd.devex</groupId>
                    <artifactId>devex-maven-plugin</artifactId>
                    <version>${devex-maven-plugin.version}</version>
                    <configuration>
                        <deployUnit>${devex.deployUnit}</deployUnit>
                        <deployTarget>${devex.deployTarget}</deployTarget>
                        <configTag>${devex.configTag}</configTag>
                    </configuration>
                    <executions>
                        <execution>
                            <id>release</id>
                            <phase>deploy</phase>
                            <goals>
                                <goal>create-release</goal>
                            </goals>
                        </execution>
                        <execution>
                            <id>deploy</id>
                            <phase>deploy</phase>
                            <goals>
                                <goal>deploy</goal>
                            </goals>
                            <configuration>
                                <releaseVersion>${devex.releaseVersion}</releaseVersion>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <profiles>
        <profile>
            <!-- Création de la release dans DevEx -->
            <id>devex.release</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-deploy-plugin</artifactId>
                        <configuration>
                            <skip>false</skip>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>ch.vd.devex</groupId>
                        <artifactId>devex-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>release</id>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <!-- Déploiement de Fidor en intégration par Devex -->
            <id>devex.IN</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>ch.vd.devex</groupId>
                        <artifactId>devex-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>deploy</id>
                                <configuration>
                                    <environment>IN</environment>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <!-- Déploiement de Fidor en intégration 2 par Devex -->
            <id>devex.I2</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>ch.vd.devex</groupId>
                        <artifactId>devex-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>deploy</id>
                                <configuration>
                                    <environment>I2</environment>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
