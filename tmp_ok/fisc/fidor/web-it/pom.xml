<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
		 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ch.vd.fidor</groupId>
        <artifactId>fidor-parent</artifactId>
        <!-- BEGIN_LVERSION -->
        <version>24R2.3.4-SNAPSHOT</version>
        <!-- END_LVERSION -->
    </parent>

    <artifactId>fidor-web-it</artifactId>
    <packaging>jar</packaging>


    <name>Fidor - Web IT</name>
    <description>Tests automatisés de l'IHM et des WS de Fidor</description>

    <dependencies>
        <!-- dépendances fidor -->
        <dependency>
            <groupId>ch.vd.fidor</groupId>
            <artifactId>fidor-wsclient-common</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.fidor</groupId>
            <artifactId>fidor-business</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.vd.fidor</groupId>
            <artifactId>fidor-business</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>ch.vd.fidor</groupId>
            <artifactId>fidor-business-it</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>ch.vd.fidor</groupId>
            <artifactId>fidor-core</artifactId>
            <version>${project.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>ch.vd.fidor</groupId>
            <artifactId>fidor-core</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>ch.vd.fidor</groupId>
            <artifactId>fidor-web</artifactId>
            <version>${project.version}</version>
            <classifier>classes</classifier>
            <scope>test</scope>
        </dependency>

        <!-- autres dépendances -->
        <dependency>
            <groupId>javax.ws.rs</groupId>
            <artifactId>javax.ws.rs-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-dbcp2</artifactId>
            <version>2.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-core</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>net.sourceforge.htmlunit</groupId>
            <artifactId>htmlunit</artifactId>
            <version>2.7</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>install</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>
    </build>

    <profiles>
        <profile>
            <id>coverage</id>
            <properties>
                <!-- JaCoCo IT Properties -->
                <jacoco.it.report.path>${basedir}/target/jacoco-it.exec</jacoco.it.report.path>
                <jacoco.tcpserver.hostname>localhost</jacoco.tcpserver.hostname>
                <jacoco.tcpserver.port>6301</jacoco.tcpserver.port>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.jacoco</groupId>
                        <artifactId>jacoco-maven-plugin</artifactId>
                        <configuration>
                            <haltOnFailure>true</haltOnFailure>
                            <append>true</append>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>dump</goal>
                                </goals>
                                <configuration>
                                    <address>${jacoco.tcpserver.hostname}</address>
                                    <port>${jacoco.tcpserver.port}</port>
                                    <append>true</append>
                                    <destFile>${jacoco.it.report.path}</destFile>
                                    <reset>true</reset>
                                    <dump>true</dump>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
