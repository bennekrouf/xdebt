    <parent>
        <groupId>ch.vd.fidor</groupId>
        <artifactId>fidor-parent</artifactId>
        <!-- BEGIN_LVERSION -->
        <version>24R2.3.4-SNAPSHOT</version>
        <!-- END_LVERSION -->
    </parent>

    <artifactId>fidor-web</artifactId>
    <packaging>war</packaging>


    <name>Fidor - Web</name>
    <description>Fidor, Le référentiel fiscal de l'Etat de Vaud</description>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <warSourceDirectory>${project.basedir}/src/main/webapp</warSourceDirectory>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                        <manifestEntries>
                        </manifestEntries>
                    </archive>
                    <overlays>
                        <overlay>
                            <excludes>
                                <exclude>**/web.xml</exclude>
                            </excludes>
                        </overlay>
                    </overlays>
                    <webResources>
                        <resource>
                            <filtering>false</filtering>
                            <directory>${project.basedir}/src/main/webapp</directory>
                        </resource>

                        <!-- Angular resources -->
                        <resource>
                            <filtering>false</filtering>
                            <directory>${project.basedir}/target/front</directory>
                            <targetPath>front</targetPath>
                        </resource>
                    </webResources>
                    <!-- pour avoir les classes de web comme dépendance dans web-it -->
                    <attachClasses>true</attachClasses>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <version>1.4</version>
                <configuration>
                    <format>{0,date,yyyy-MM-dd HH:mm:ss}</format>
                    <items>
                        <item>timestamp</item>
                    </items>
                </configuration>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <!-- Plugin pour exposer le sha1 du commit git dans les propriétés -->
                <groupId>pl.project13.maven</groupId>
                <artifactId>git-commit-id-plugin</artifactId>
                <version>2.2.3</version>
                <configuration>
                    <dotGitDirectory>${project.basedir}/../.git</dotGitDirectory>
                    <generateGitPropertiesFile>false</generateGitPropertiesFile>
                    <includeOnlyProperties>
                        <includeOnlyProperty>git.commit.id.abbrev</includeOnlyProperty>
                    </includeOnlyProperties>
                    <commitIdGenerationMode>full</commitIdGenerationMode>
                    <abbrevLength>10</abbrevLength>
                </configuration>
                <executions>
                    <execution>
                        <id>get-the-git-infos</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>revision</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Pour le build angular -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.6.0</version>
                <configuration>
                    <workingDirectory>${basedir}/front</workingDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>exec-npm-install</id>
                        <phase>initialize</phase>
                        <configuration>
                            <executable>npm</executable>
                            <arguments>
                                <argument>install</argument>
                            </arguments>
                        </configuration>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>exec-ngcli-compile</id>
                        <phase>compile</phase>
                        <configuration>
                            <executable>npm</executable>
                            <arguments>
                                <argument>run</argument>
                                <argument>lint</argument>
                            </arguments>
                            <skip>${skipBuild}</skip>
                        </configuration>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>exec-ngcli-test</id>
                        <phase>test</phase>
                        <configuration>
                            <executable>npm</executable>
                            <arguments>
                                <argument>run</argument>
                                <argument>test:headless</argument>
                            </arguments>
                            <skip>${skipTests}</skip>
                        </configuration>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>exec-ngcli-package</id>
                        <phase>prepare-package</phase>
                        <configuration>
                            <workingDirectory>${basedir}/front</workingDirectory>
                            <executable>npm</executable>
                            <arguments>
                                <argument>run</argument>
                                <argument>${ng.build.mode}</argument>
                            </arguments>
                            <skip>${skipBuild}</skip>
                        </configuration>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
                <executions>
                    <execution>
                        <id>exec-copy-index-assets</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/front</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>front/dist/package</directory>
                                    <filtering>false</filtering>
                                </resource>
                            </resources>
                            <skip>${skipBuild}</skip>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>com.github.kongchen</groupId>
                <artifactId>swagger-maven-plugin</artifactId>
                <version>3.1.8</version>
                <configuration>
                    <apiSources>
                        <apiSource>
                            <springmvc>false</springmvc>
                            <locations>
                                <location>ch.vd.fidor.ws.v5.WebService</location>
                            </locations>
                            <schemes>
                                <scheme>http</scheme>
                                <scheme>https</scheme>
                            </schemes>
                            <host>http://int-fidor-ws.etat-de-vaud.ch</host>
                            <basePath>/fiscalite/int-fidor/ws/v5</basePath>
                            <!--							<info>-->
                            <!--								<title>Fidor WS v5</title>-->
                            <!--								&lt;!&ndash; BEGIN_LVERSION &ndash;&gt;-->
                            <!--								<version>24R2.3.4-SNAPSHOT (fidor-jaxb v${fidor-jaxb2.version})</version>-->
                            <!--								&lt;!&ndash; END_LVERSION &ndash;&gt;-->
                            <!--								<description>Ressources du web-service v5 de Fidor.</description>-->
                            <!--							</info>-->
                            <swaggerDirectory>${basedir}/target/classes</swaggerDirectory>
                            <swaggerFileName>ws-v5-swagger</swaggerFileName>
                            <outputFormats>json</outputFormats>
                        </apiSource>
                        <apiSource>
                            <springmvc>false</springmvc>
                            <locations>
                                <location>ch.vd.fidor.ws.v6.WebService</location>
                            </locations>
                            <schemes>
                                <scheme>http</scheme>
                                <scheme>https</scheme>
                            </schemes>
                            <host>http://int-fidor-ws.etat-de-vaud.ch</host>
                            <basePath>/fiscalite/int-fidor/ws/v6</basePath>
                            <!--							<info>-->
                            <!--								<title>Fidor WS v6</title>-->
                            <!--								&lt;!&ndash; BEGIN_LVERSION &ndash;&gt;-->
                            <!--								<version>24R2.3.4-SNAPSHOT (fidor-jaxb v${fidor-jaxb2.version})</version>-->
                            <!--								&lt;!&ndash; END_LVERSION &ndash;&gt;-->
                            <!--								<description>Ressources du web-service v6 de Fidor.</description>-->
                            <!--							</info>-->
                            <swaggerDirectory>${basedir}/target/classes</swaggerDirectory>
                            <swaggerFileName>ws-v6-swagger</swaggerFileName>
                            <outputFormats>json</outputFormats>
                        </apiSource>
                    </apiSources>
                </configuration>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <!-- Plugin pour déployer Fidor dans un Tomcat pour les tests WIT -->
                <groupId>org.codehaus.cargo</groupId>
                <artifactId>cargo-maven2-plugin</artifactId>
                <configuration>
                    <container>
                        <containerId>tomcat8x</containerId>
                        <type>remote</type>
                    </container>
                    <configuration>
                        <type>runtime</type>
                        <properties>
                            <cargo.remote.username>tomcat</cargo.remote.username>
                            <cargo.remote.password>tomcat</cargo.remote.password>
                            <cargo.remote.uri>${wit.tomcat.uri}</cargo.remote.uri>
                        </properties>
                    </configuration>
                    <deployables>
                        <deployable>
                            <groupId>ch.vd.fidor</groupId>
                            <artifactId>fidor-web</artifactId>
                            <type>war</type>
                            <properties>
                                <context>/fidor</context>
                            </properties>
                        </deployable>
                    </deployables>
                </configuration>
            </plugin>

        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/data</directory>
                <filtering>false</filtering>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>false</filtering>
            </testResource>
        </testResources>
    </build>

