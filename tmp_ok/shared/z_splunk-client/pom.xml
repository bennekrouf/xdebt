<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>ch.vd.shared</groupId>
	<artifactId>splunk-client</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>splunk-client</name>
	<description>Client REST splunk</description>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>1.8</java.version>

        <!-- DÃ©pendances -->
        <splunk-client.version>1.6.0.0</splunk-client.version>
        <junit.version>4.12</junit.version>
	</properties>

	<dependencies>
        <dependency>
            <groupId>com.splunk</groupId>
            <artifactId>splunk</artifactId>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.splunk</groupId>
                <artifactId>splunk</artifactId>
                <version>${splunk-client.version}</version>
            </dependency>

            <!-- Test -->
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <distributionManagement>
        <repository>
            <id>deployment</id>
            <name>Internal Releases</name>
            <url>http://nexus.etat-de-vaud.ch/repository/releases/</url>
        </repository>
        <snapshotRepository>
            <id>deployment</id>
            <name>Internal Releases</name>
            <url>http://nexus.etat-de-vaud.ch/repository/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <scm>
        <url>http://git.etat-de-vaud.ch/?p=shared/splunk-client.git</url>
        <connection>scm:git:git@git.etat-de-vaud.ch:shared/splunk-client.git</connection>
        <developerConnection>scm:git:git@git.etat-de-vaud.ch:shared/splunk-client.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <!-- TODO : ajouter le repository au nexus -->
    <repositories>
        <repository>
            <id>splunk-artifactory</id>
            <name>Splunk Releases</name>
            <url>http://splunk.artifactoryonline.com/splunk/ext-releases-local</url>
        </repository>
    </repositories>

</project>
