<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.vd.shared.xjc.plugins</groupId>
	<artifactId>jaxb2-pretty-classname</artifactId>
	<packaging>jar</packaging>
	<version>2.2.0-SNAPSHOT</version>

	<name>JAXB2 Plugin - Pretty Classname</name>
	<description>Ce plugin supprime le suffixe 'Type' des noms de classes générées par Jaxb à partir de XSD lorsque la convention de nommage eCH a été suivie.</description>

	<dependencies>
		<dependency>
			<groupId>org.glassfish.jaxb</groupId>
			<artifactId>jaxb-xjc</artifactId>
			<version>4.0.4</version>
		</dependency>
	</dependencies>

	<distributionManagement>
		<repository>
			<id>nexus-dgnsi-server</id> <!-- doit matcher l'id du server dans settings.xml -->
			<name>Nexus DGSNI</name>
			<url>${nexus.url.stable}</url>
		</repository>
		<snapshotRepository>
			<id>nexus-dgnsi-server</id>
			<name>Nexus DGSNI</name>
			<url>${nexus.url.snapshots}</url>
			<uniqueVersion>false</uniqueVersion>
		</snapshotRepository>
	</distributionManagement>

	<properties>
		<java.version>17</java.version>
		<!-- Application settings -->
		<copyright.year>2023</copyright.year>
		<amp.genericCore>true</amp.genericCore>
		<amp.fullSource>false</amp.fullSource>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

</project>
