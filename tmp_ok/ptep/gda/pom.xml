<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ch.vd.cyber</groupId>
    <artifactId>gda</artifactId>
    <version>24.0.0-SNAPSHOT</version>
    <packaging>war</packaging>

    <name>Gestion des d√©chets d'amiante</name>

    <parent>
        <groupId>ch.vd.cyber.parent</groupId>
        <artifactId>application-parent</artifactId>
        <version>13.6.0-SNAPSHOT</version>
        <relativePath/>
    </parent>

    <scm>
        <developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/ptep/gda.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <dependencies>
        <dependency>
            <groupId>ch.vd.pee</groupId>
            <artifactId>sibat-client</artifactId>
            <version>${sibat-client.version}</version>
        </dependency>
        <dependency>
            <groupId>javax.xml.soap</groupId>
            <artifactId>javax.xml.soap-api</artifactId>
            <version>${javax.xml.soap-api.version}</version>
        </dependency>

        <dependency>
            <groupId>ch.vd.cyber</groupId>
            <artifactId>starter-prestation</artifactId>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- Tests -->
        <dependency>
            <groupId>ch.vd.cybersdk</groupId>
            <artifactId>prestations-be</artifactId>
            <version>${prestations-be.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <version>2.5.0</version>
                <executions>
                    <execution>
                        <id>Gda</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <packageName>ch.vd.gda.v2</packageName>
                            <sources>src/main/resources/gda-2.1.xsd</sources>
                            <outputDirectory>${project.build.directory}/generated-sources/</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <properties>
        <javax.xml.soap-api.version>1.4.0</javax.xml.soap-api.version>
        <sibat-client.version>1.1.0</sibat-client.version>
        <devex.configTag>master</devex.configTag>
    </properties>

</project>