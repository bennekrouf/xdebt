						<artifactId>animal-sniffer-enforcer-rule</artifactId>
						<version>1.6</version>
					</dependency>

				</dependencies>
				<executions>
					<!--execution> <id>check-signatures</id> <phase>compile</phase> <goals> 
						<goal>enforce</goal> </goals> <configuration> <rules> <checkSignatureRule implementation="org.codehaus.mojo.animal_sniffer.enforcer.CheckSignatureRule"> 
						<signature> <groupId>org.codehaus.mojo.signature</groupId> <artifactId>java16</artifactId> 
						<version>1.0</version> </signature> <ignores> <ignore>org.hibernate.*</ignore> 
						<ignore>org.apache.*</ignore> <ignore>org.slf4j.*</ignore> <ignore>org.springframework.*</ignore> 
						<ignore>javax.xml.*</ignore> <ignore>ch.*</ignore> <ignore>org.acegisecurity.*</ignore> 
						<ignore>javax.servlet.*</ignore> <ignore>junit.*</ignore> </ignores> </checkSignatureRule> 
						</rules> </configuration> </execution -->

				</executions>
			</plugin>


			<plugin>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<dependencies>
					<dependency>
						<groupId>ch.vd.dse.sesa.adse</groupId>
						<artifactId>adse-build-tools</artifactId>
						<version>1.0.0</version>
					</dependency>
				</dependencies>
			</plugin>

			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<!-- Génération du jar contenant les sources a  chaque packaging des 
						artifacts. -->
					<execution>
						<id>sources-jar</id>
						<phase>install</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<argLine>-Xms256M -Xmx1080M</argLine>
					<excludes>
						<exclude>**/it/**</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>integration</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-failsafe-plugin</artifactId>
						<configuration>
							<argLine>-Xms256M -Xmx1280M</argLine>
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>integration-test</goal>
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<reporting>
		<plugins>
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<encoding>${file.encoding}</encoding>
				</configuration>
			</plugin>

			<!-- Plugin pour créer automatiquement les liens vers les sources -->
			<plugin>
				<artifactId>maven-jxr-plugin</artifactId>
				<configuration>
					<inputEncoding>${file.encoding}</inputEncoding>
					<outputEncoding>${file.encoding}</outputEncoding>
					<aggregate>true</aggregate>
					<linkJavadoc>true</linkJavadoc>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<configuration>
					<encoding>${file.encoding}</encoding>
					<configLocation>audit/sqliCheckstyleConfiguration_V1.0.xml</configLocation>
				</configuration>
			</plugin>
		</plugins>
	</reporting>

