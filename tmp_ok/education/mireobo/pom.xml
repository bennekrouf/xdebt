<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <!-- =======================================================================
  = PARENT
  ======================================================================== -->
  <parent>
    <groupId>ch.vd.education.metedu.commons</groupId>
    <artifactId>metedu-application-parent</artifactId>
    <version>1.5.9RC1</version>
  </parent>

  <!-- =======================================================================
  = PROJECT
  ======================================================================== -->
  <groupId>ch.vd.education.mireo.bo</groupId>
  <artifactId>mireo-bo</artifactId>
  <version>1.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>MIREO-BO</name>

  <url>${scm.url}</url>
  <issueManagement>
    <system>jira</system>
    <url>https://issuetracker.etat-de-vaud.ch/outils/issuetracker/projects/EDUFORREAL/issues</url>
  </issueManagement>

  <scm>
    <connection>${scm.connexion}</connection>
    <developerConnection>${scm.connexion}</developerConnection>
    <url>${scm.url}</url>
    <tag>HEAD</tag>
  </scm>

  <!-- =======================================================================
  = PROPERTIES
  ======================================================================== -->
  <properties>
    <!-- START - SCM -->
    <scm.connexion>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/education/mireobo.git</scm.connexion>
    <scm.url>https://dsigit.etat-de-vaud.ch/outils/git/projects/EDUCATION/repos/mireobo/browse</scm.url>
    <!-- END   - SCM -->

    <!-- START - OVERRIDE PARENT DEPENDENCIES VERSION -->
    <!-- END   - OVERRIDE PARENT DEPENDENCIES VERSION -->

    <!-- START - PROJECT DEPENDENCIES VERSION -->
    <!-- END   - PROJECT DEPENDENCIES VERSION -->

    <!-- START - DEPLOYMENT -->
    <deployUnit>mireobo</deployUnit>
    <devex-maven-plugin.deployUnit>${deployUnit}</devex-maven-plugin.deployUnit>
    <devex-maven-plugin.configTag>master</devex-maven-plugin.configTag>
    <devex-maven-plugin.deployTarget>EMBEDDEDRH9</devex-maven-plugin.deployTarget>
    <assembly.finalName>${deployUnit}-${project.version}</assembly.finalName>
    <start-class>ch.vd.education.mireo.bo.webapp.MireoBoApplication</start-class>
    <!-- END   - DEPLOYMENT -->

    <!-- START - SUPER POM TOGGLE -->
    <!-- END   - SUPER POM TOGGLE -->

    <!-- START - SONAR -->
    <!-- END   - SONAR -->

    <!-- START - OTHER -->
    <inugami.maven.plugin.analysis.project.base.name>ch.vd.education.mireo.bo</inugami.maven.plugin.analysis.project.base.name>
    <!-- END   - OTHER -->
  </properties>

  <!-- =======================================================================
  = MODULES
  ======================================================================== -->
  <modules>
    <module>mireo-bo-api</module>
    <module>mireo-bo-commons</module>
    <module>mireo-bo-core</module>
    <module>mireo-bo-infrastructure</module>
    <module>mireo-bo-interfaces</module>
    <module>mireo-bo-webapp</module>
  </modules>

  <!-- =======================================================================
  = DEPENDENCIES MANAGEMENT
  ======================================================================== -->
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>ch.vd.education.mireo.bo</groupId>
        <artifactId>mireo-bo-api</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>ch.vd.education.mireo.bo</groupId>
        <artifactId>mireo-bo-commons</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>ch.vd.education.mireo.bo</groupId>
        <artifactId>mireo-bo-core</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>ch.vd.education.mireo.bo</groupId>
        <artifactId>mireo-bo-infrastructure</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>ch.vd.education.mireo.bo</groupId>
        <artifactId>mireo-bo-interface</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>ch.vd.education.mireo.bo</groupId>
        <artifactId>mireo-bo-interface-api</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>ch.vd.education.mireo.bo</groupId>
        <artifactId>mireo-bo-webapp</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>io.inugami</groupId>
        <artifactId>inugami_api_interfaces</artifactId>
        <version>${io.inugami.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <!-- =======================================================================
  = DEPENDENCIES
  ======================================================================== -->
  <dependencies>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.mapstruct</groupId>
      <artifactId>mapstruct</artifactId>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>
  </dependencies>

  <!-- =======================================================================
  = BUILD
  ======================================================================== -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <!-- =======================================================================
  = PROFILES
  ======================================================================== -->
</project>
