<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ch.vd.education.metedu.mediation</groupId>
        <artifactId>metedu-mediation</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>metedu-mediation-xsd</artifactId>
    <name>MET-EDU Mediation (xsd)</name>

    <properties>
        <metedu-xsd.directory>${project.parent.basedir}/target/dependency</metedu-xsd.directory>
        <normes-xsd.directory>${metedu-xsd.directory}/xsd/normes-xsd</normes-xsd.directory>
        <xjb.source.path>src/main/xjb/bindings/metedu-mediation-xsd.xjb</xjb.source.path>
    </properties>

    <dependencies>
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>ch.vd.education</groupId>
                                    <artifactId>metedu-shared-xsd</artifactId>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${metedu-xsd.directory}</outputDirectory>
                            <overWriteReleases>true</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <version>2.5.0</version>
                <executions>
                    <execution>
                        <id>rcpers</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <xjbSources>
                                <xjbSource>${xjb.source.path}</xjbSource>
                            </xjbSources>
                            <sources>
                                <source>${normes-xsd.directory}/evd/eVD-0001/6/eVD-0001-6-4.xsd</source>
                                <source>${normes-xsd.directory}/evd/eVD-0015/4/eVD-0015-4-3.xsd</source>
                            </sources>
                            <extension>true</extension>
                            <clearOutputDir>false</clearOutputDir>
                            <catalog>${normes-xsd.directory}/evd/evd-catalog.xml</catalog>
                        </configuration>
                    </execution>
                    <execution>
                        <id>rcent</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <xjbSources>
                                <xjbSource>${xjb.source.path}</xjbSource>
                            </xjbSources>
                            <sources>
                                <source>${normes-xsd.directory}/evd/eVD-0024/3/eVD-0024-3-6.xsd</source>
                            </sources>
                            <extension>true</extension>
                            <clearOutputDir>false</clearOutputDir>
                            <catalog>${normes-xsd.directory}/evd/evd-catalog.xml</catalog>
                        </configuration>
                    </execution>
                    <execution>
                        <id>refinf</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <xjbSources>
                                <xjbSource>${xjb.source.path}</xjbSource>
                            </xjbSources>
                            <sources>
                                <source>${normes-xsd.directory}/evd/eVD-0007/1/eVD-0007-1-1.xsd</source>
                                <source>${normes-xsd.directory}/evd/eVD-0008</source>
                            </sources>
                            <extension>true</extension>
                            <clearOutputDir>false</clearOutputDir>
                            <catalog>${normes-xsd.directory}/evd/evd-catalog.xml</catalog>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
