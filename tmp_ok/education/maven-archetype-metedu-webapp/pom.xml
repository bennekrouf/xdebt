<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <!-- =======================================================================
    = PARENT
    ======================================================================== -->

    <!-- =======================================================================
    = PROJECT
    ======================================================================== -->
    <groupId>ch.vd.education.archetypes</groupId>
    <artifactId>maven-archetype-metedu-webapp</artifactId>
    <version>1.5.9-SNAPSHOT</version>
    <packaging>maven-archetype</packaging>
    <name>MET-EDU Archetype metedu-webapp</name>

    <url>${scm.url}</url>
    <issueManagement>
        <system>jira</system>
        <url>https://issuetracker.etat-de-vaud.ch/outils/issuetracker/projects/EDUFORREAL/issues</url>
    </issueManagement>

    <scm>
        <connection>${scm.connexion}</connection>
        <developerConnection>${scm.connexion}</developerConnection>
        <url>${scm.url}</url>
        <tag>HEAD</tag>
    </scm>

    <distributionManagement>
        <repository>
            <id>nexus-dgnsi-server</id> <!-- doit matcher l'id du server dans settings.xml -->
            <name>Nexus DGNSI</name>
            <url>${nexus.url.stable}</url>
        </repository>
        <snapshotRepository>
            <id>nexus-dgnsi-server</id>
            <name>Nexus DGNSI</name>
            <url>${nexus.url.snapshots}</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

    <!-- =======================================================================
    = PROPERTIES
    ======================================================================== -->
    <properties>
        <scm.connexion>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/education/maven-archetype-metedu-webapp.git</scm.connexion>
        <scm.url>
            https://dsigit.etat-de-vaud.ch/outils/git/projects/EDUCATION/repos/maven-archetype-metedu-webapp/browse
        </scm.url>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>

        <org.apache.commons.commons-lang3.version>3.5</org.apache.commons.commons-lang3.version>
        <org.apache.commons.commons-text.version>1.9</org.apache.commons.commons-text.version>
        <org.projectlombok.lombok.version>1.18.30</org.projectlombok.lombok.version>

        <org.apache.maven.archetype.archetype-packaging.version>3.0.1
        </org.apache.maven.archetype.archetype-packaging.version>
        <org.apache.maven.plugin.maven-clean-plugin.version>3.1.0</org.apache.maven.plugin.maven-clean-plugin.version>
        <org.apache.maven.plugin.maven-archetype-plugin.version>3.2.1
        </org.apache.maven.plugin.maven-archetype-plugin.version>
        <org.apache.maven.plugin.maven-resources-plugin.version>3.0.2
        </org.apache.maven.plugin.maven-resources-plugin.version>
        <org.apache.maven.plugin.maven-install-plugin.version>2.5.2
        </org.apache.maven.plugin.maven-install-plugin.version>
        <org.apache.maven.plugin.maven-deploy-plugin.version>2.8.2</org.apache.maven.plugin.maven-deploy-plugin.version>
        <org.apache.maven.plugin.maven-release-plugin.version>3.0.1
        </org.apache.maven.plugin.maven-release-plugin.version>

        <release.goals>clean deploy</release.goals>
        <release.profiles>not</release.profiles>
        <release.pushChanges>true</release.pushChanges>

        <build.nofront>true</build.nofront>
    </properties>

    <!-- =======================================================================
    = MODULES
    ======================================================================== -->

    <!-- =======================================================================
    = DEPENDENCIES MANAGEMENT
    ======================================================================== -->

    <!-- =======================================================================
    = DEPENDENCIES
    ======================================================================== -->
    <dependencies>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>${org.apache.commons.commons-lang3.version}</version>
        </dependency>

        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-text</artifactId>
            <version>${org.apache.commons.commons-text.version}</version>
        </dependency>

        <dependency>
            <groupId>org.apache.velocity</groupId>
            <artifactId>velocity</artifactId>
            <version>1.7</version>
        </dependency>

        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>${org.projectlombok.lombok.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- TESTING -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>5.5.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <!-- =======================================================================
    = BUILD
    ======================================================================== -->
    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.archetype</groupId>
                <artifactId>archetype-packaging</artifactId>
                <version>${org.apache.maven.archetype.archetype-packaging.version}</version>
            </extension>
        </extensions>

        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-clean-plugin</artifactId>
                    <version>${org.apache.maven.plugin.maven-clean-plugin.version}</version>
                </plugin>

                <plugin>
                    <artifactId>maven-archetype-plugin</artifactId>
                    <version>${org.apache.maven.plugin.maven-archetype-plugin.version}</version>
                    <configuration>
                        <useDefaultExcludes>false</useDefaultExcludes>
                    </configuration>
                </plugin>

                <plugin>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>${org.apache.maven.plugin.maven-resources-plugin.version}</version>
                    <configuration>
                        <addDefaultExcludes>false</addDefaultExcludes>
                    </configuration>
                </plugin>

                <plugin>
                    <artifactId>maven-install-plugin</artifactId>
                    <version>${org.apache.maven.plugin.maven-install-plugin.version}</version>
                </plugin>

                <plugin>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <version>${org.apache.maven.plugin.maven-deploy-plugin.version}</version>
                </plugin>

                <plugin>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>${org.apache.maven.plugin.maven-release-plugin.version}</version>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <artifactId>maven-release-plugin</artifactId>
                <configuration>
                    <goals>${release.goals}</goals>
                    <tagNameFormat>@{project.version}</tagNameFormat>
                    <pushChanges>${release.pushChanges}</pushChanges>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <!-- =======================================================================
    = PROFILES
    ======================================================================== -->
    <profiles>
        <profile>
            <id>not</id>
            <properties>
                <skipTests>true</skipTests>
                <skipTestsFront>true</skipTestsFront>
            </properties>
        </profile>
        <profile>
            <id>nof</id>
            <properties>
                <build.nofront>true</build.nofront>
                <skipTestsFront>true</skipTestsFront>
            </properties>
        </profile>
    </profiles>
</project>
