    <!-- =======================================================================
    = BUILD
    ======================================================================== -->
    <build>
        <plugins>
            <plugin>
                <groupId>io.github.kbuntrock</groupId>
                <artifactId>openapi-maven-plugin</artifactId>
                <version>${io.github.kbuntrock.openapi-maven-plugin.version}</version>

                <executions>
                    <execution>
                        <id>documentation-global</id>
                        <phase>${swagger.generator.disabled}package</phase>
                        <goals>
                            <goal>documentation</goal>
                        </goals>
                        <configuration>
                            <apiConfiguration>
                                <library>SPRING_MVC</library>
                                <tagAnnotations>
                                    <annotation>RequestMapping</annotation>
                                </tagAnnotations>
                            </apiConfiguration>
                            <apis>
                                <api>
                                    <locations>
                                        <location>ch.vd.education.metedu.commons.security.rest</location>
                                    </locations>
                                    <filename>${project.artifactId}-${project.version}.yaml</filename>
                                </api>
                            </apis>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
