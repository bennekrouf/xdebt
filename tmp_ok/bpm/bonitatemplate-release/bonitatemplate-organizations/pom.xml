<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>ch.vd.bpm.bonitatemplate</groupId>
        <artifactId>bonitatemplate-release</artifactId>
        <version>1.1.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>bonitatemplate-organizations</artifactId>
    <packaging>pom</packaging>

    <properties>
        <bos.home>${project.parent.build.directory}/BonitaBPMSubscription-${bonita.version.build}</bos.home>
        <bonita.home>${project.parent.build.directory}/bonita-home</bonita.home>
        <bonita.client>${project.parent.build.directory}/bonita-client</bonita.client>
        <bonita-repository>${project.parent.build.directory}/repo</bonita-repository>
    </properties>

    <dependencies>


    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>target/generated-resources/xml/xslt</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>src/main/assembly.xml</descriptor>
                    </descriptors>
                    <appendAssemblyId>false</appendAssemblyId>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>xml-maven-plugin</artifactId>
                <version>1.0.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>transform</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <transformationSets>
                        <transformationSet>
                            <dir>${bonita-repository}/organizations</dir>
                            <stylesheet>src/main/organization.xsl</stylesheet>
                            <fileMappers>
                                <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.RegExpFileMapper">
                                    <pattern>\.organization</pattern>
                                    <replacement>.xml</replacement>
                                </fileMapper>
                            </fileMappers>
                        </transformationSet>
                    </transformationSets>
                </configuration>
            </plugin>

        </plugins>
    </build>

</project>