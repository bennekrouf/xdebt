<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ch.vd.justice.egdc</groupId>
        <artifactId>egdc-parent</artifactId>
        <version>24.2.5</version>
    </parent>

    <artifactId>egdc-batches</artifactId>
    <name>${project-name.prefix}${project.artifactId}</name>

    <description>Module bootstrapping eGDC batches</description>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>egdc-batch-adapter</artifactId>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>egdc-persistence</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.egdc</groupId>
            <artifactId>egdc-security-batch</artifactId>
        </dependency>

        <!-- Spring -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-batch</artifactId>
        </dependency>

        <!-- test -->
        <dependency>
            <groupId>org.springframework.batch</groupId>
            <artifactId>spring-batch-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.shared</groupId>
            <artifactId>shared-test</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.shared</groupId>
            <artifactId>shared-application</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.shared</groupId>
            <artifactId>shared-spring</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-mail</artifactId>
        </dependency>

        <dependency>
            <groupId>com.github.sbrannen</groupId>
            <artifactId>spring-test-junit5</artifactId>
        </dependency>

        <dependency>
            <groupId>ch.vd.justice.shared</groupId>
            <artifactId>shared-jms</artifactId>
        </dependency>

        <dependency>
            <groupId>ch.vd.justice.shared</groupId>
            <artifactId>shared-persistence-xa</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.shared</groupId>
            <artifactId>shared-persistence</artifactId>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>egdc-esb-publisher-adapter-impl</artifactId>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>egdc-esb-rmp-export-adapter-impl</artifactId>
        </dependency>
        <!--dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>egdc-application-common</artifactId>
            <classifier>tests</classifier>
            <type>test-jar</type>
        </dependency-->
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <configuration>
                    <!--
                        This is to avoid error:
                            java.lang.ArrayStoreException: sun.reflect.annotation.TypeNotPresentExceptionProxy
                        https://github.com/spring-projects/spring-boot/issues/6254#issuecomment-307151464

                        Reason: failsafe run at phase integration-test in which, this project's JAR file is not
                        a normal JAR. It's spring-boot jar
                    -->
                    <classesDirectory>${project.build.outputDirectory}</classesDirectory>
                    <testFailureIgnore>true</testFailureIgnore>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <mainClass>org.springframework.batch.core.launch.support.CommandLineJobRunner</mainClass>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>build-info</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
