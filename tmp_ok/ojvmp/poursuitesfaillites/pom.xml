<?xml version="1.0" encoding="UTF-8"?><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ch.vd.ojvmp</groupId>
    <artifactId>pef</artifactId>
    <version>24.1.0-SNAPSHOT</version>
    <packaging>war</packaging>

    <name>Poursuites et Faillites - Application</name>

    <parent>
        <groupId>ch.vd.cyber.parent</groupId>
        <artifactId>application-parent</artifactId>
        <version>13.6.0-SNAPSHOT</version>
        <relativePath />
    </parent>

    <scm>
        <developerConnection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/ojvmp/poursuitesfaillites.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <dependencies>
        <dependency>
            <groupId>ch.vd.cyber</groupId>
            <artifactId>starter-prestation</artifactId>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.opencsv</groupId>
            <artifactId>opencsv</artifactId>
            <version>5.9</version>
        </dependency>


        <!-- Tests -->
        <dependency>
            <groupId>ch.vd.cybersdk</groupId>
            <artifactId>prestations-be</artifactId>
            <version>${prestations-be.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <version>2.5.0</version>
                <executions>
                    <execution>
                        <id>generate-from-faillites-schema</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <packageName>ch.vd.ojvmp.pef.bo.faillites</packageName>
                            <sources>src/main/resources/xsd/extrait_faillite-v1.0.xsd</sources>
                            <outputDirectory>${project.build.directory}/generated-sources/xcj2</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-from-themis-wsdl</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <sourceType>wsdl</sourceType>
                            <packageName>ch.vd.ojvmp.pef.bo.poursuites</packageName>
                            <sources>
                                <source>src/main/resources/xsd/inquiryService1.wsdl</source>
                            </sources>
                            <outputDirectory>${project.build.directory}/generated-sources/xcj</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <properties>
        <devex.configTag>master</devex.configTag>
    </properties>

</project>