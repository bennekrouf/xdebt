<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ch.vd.justice.shared</groupId>
        <artifactId>shared-maven</artifactId>
        <version>24.2.1</version>
        <!-- lookup parent from repository -->
        <relativePath />
    </parent>

    <scm>
        <developerConnection>scm:git:git@bitbucket.etat-de-vaud.ch::/ojvmp/egdx-egdd</developerConnection>
        <tag>24.2.3</tag>
    </scm>

    <groupId>ch.vd.justice.egdd</groupId>
    <artifactId>egdd-parent</artifactId>
    <version>24.2.3</version>
    <packaging>pom</packaging>

<name>${project-name.prefix}${project.artifactId}</name>
<description>The parent pom for egdd</description>

    <modules>
        <module>egdd-application-web</module>
        <module>egdd-application-batch</module>
        <module>egdd-application-common</module>
        <!-- frontend should be declared before boot-backend to have it build before (by default maven follows the module declaration order if there are no other dependencies/constraints).
            Ideally, it should be declared as "compile-only" dependency, but this is not a Maven scope.
        Another option would be to declare is as runtime dependency in boot-backend and exclude it from assembly/packaging -->
        <module>egdd-frontend</module>
        <module>egdd-boot-backend</module>
        <module>egdd-domain</module>
        <module>egdd-frontend-adapter</module>
        <module>egdd-inkasso-adapter</module>
        <!-- TODO move to shared ? -->
        <module>egdd-moteur-fusion-adapter</module>
        <module>egdd-persistence</module>
        <module>egdd-rcpers-adapter</module>
        <module>egdd-security-web</module>
        <module>egdd-security-batch</module>
        <module>egdd-batches</module>
        <module>egdd-batch-adapter</module>
        <module>egdd-jusas-adapter</module>
        <module>egdd-assembly</module>
        <module>egdd-generator</module>

        <!-- this is the module to run jacoco report-aggregate locally. the egdd-report
            simply contains a pom.xml file which depends on all project modules Jacoco
        report-aggregate mojo needs dependencies not aggregator pom. -->
        <!--<module>egdd-report</module> -->
    </modules>

    <properties>
        <maven.failsafe.reuseForks>true</maven.failsafe.reuseForks>
        <argLine>-Dfile.encoding=UTF-8</argLine>
        <!-- TODO move to shared-parent pom + increase shared version -->
        <apache.cxf.version>3.3.5</apache.cxf.version>
        <maven.failsafe.reuseForks>true</maven.failsafe.reuseForks>
        <t6kt-maven-plugin.version>1.0.4</t6kt-maven-plugin.version>
        <!-- tesserakt maven plugin configuration -->
        <t6kt-maven-plugin.application>${project.artifactId}</t6kt-maven-plugin.application>
        <t6kt-maven-plugin.application>egdx</t6kt-maven-plugin.application>
        <t6kt-maven-plugin.deployUnit>egdd</t6kt-maven-plugin.deployUnit>
        <t6kt-maven-plugin.applicationVersion>${project.version}</t6kt-maven-plugin.applicationVersion>
        <tesserakt-maven-plugin.url>https://esgate.etat-de-vaud.ch/tesserakt-pr</tesserakt-maven-plugin.url>
        <release.goals>clean verify</release.goals>
        <release.profiles>not</release.profiles>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- Own modules -->
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-application-web</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-application-batch</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-application-common</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-application-common</artifactId>
                <classifier>tests</classifier>
                <type>test-jar</type>
                <scope>test</scope>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-boot-backend</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-domain</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>egdd-domain</artifactId>
                <classifier>tests</classifier>
                <scope>test</scope>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-frontend-adapter</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-persistence</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-security-web</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-security-batch</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-moteur-fusion-adapter-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-moteur-fusion-adapter-impl</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-batches</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-batch-adapter</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-jusas-adapter-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-jusas-adapter-impl</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-inkasso-adapter-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-inkasso-adapter-impl</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-inkasso-listener-adapter-impl</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-rcpers-adapter-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.egdd</groupId>
                <artifactId>egdd-rcpers-adapter-impl</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <!-- TODO move pluginManagement to shared-parent pom + increase shared version -->
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.cxf</groupId>
                    <artifactId>cxf-wadl2java-plugin</artifactId>
                    <version>${apache.cxf.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>3.0.1</version>
                    <configuration>
                        <goals>${release.goals}</goals>
                        <releaseProfiles>${release.profiles}</releaseProfiles>
                        <tagNameFormat>@{project.version}</tagNameFormat>
                        <localCheckout>true</localCheckout>
                        <autoVersionSubmodules>true</autoVersionSubmodules>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>ch.vd.devsupport</groupId>
                    <artifactId>tesserakt-maven-plugin</artifactId>
                    <version>${t6kt-maven-plugin.version}</version>
                    <configuration>
                        <username>${T6KT_USERNAME}</username>
                        <password>${T6KT_PASSWORD}</password>
                        <application>${t6kt-maven-plugin.application}</application>
                        <deployUnit>${t6kt-maven-plugin.deployUnit}</deployUnit>
                        <applicationVersion>${t6kt-maven-plugin.applicationVersion}</applicationVersion>
                        <chartVersion>${t6kt-maven-plugin.chartVersion}</chartVersion>
                        <configurationVersion>${t6kt-maven-plugin.configurationVersion}</configurationVersion>
                        <environment>${t6kt-maven-plugin.environment}</environment>
                        <url>${tesserakt-maven-plugin.url}</url>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-source-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>attach-sources</id>
                            <goals>
                                <goal>jar</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <profiles>
        <profile>
            <id>dgnsi</id>
            <modules>
                <module>egdd-generator</module>
            </modules>
        </profile>
    </profiles>

    <distributionManagement>
        <repository>
            <id>nexus-dgnsi-server</id>
            <name>Nexus DGNSI</name>
            <url>${nexus.url}/app-${application.repository}-stable</url>
        </repository>
        <snapshotRepository>
            <id>nexus-dgnsi-server</id>
            <name>Nexus DGNSI</name>
            <url>${nexus.url}/app-${application.repository}-snapshots</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>
</project>
