<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>ch.vd</groupId>
		<artifactId>rcmatic</artifactId>
        <version>1.0.14-SNAPSHOT</version>
	</parent>
	
	<packaging>pom</packaging>
	<artifactId>hrcws</artifactId>
    <description>Description : hrc-ws.</description>

    <properties>      
        <xfile.url>http://exploitation.etat-de-vaud.ch/outils/web/ws/rest</xfile.url>
        <assembly.filename>${project.artifactId}-${project.version}</assembly.filename>
        <xfile.group>n5kep5</xfile.group> <!-- dsi_pee par exemple -->
        <devex.configTag>${hrc.ConfigTag}</devex.configTag>
        <devex.releaseVersion>${project.version}</devex.releaseVersion>
        <devex.deployUnit>${project.artifactId}</devex.deployUnit>
        <devex.deployTarget>Tomcat</devex.deployTarget>
    </properties>


    <profiles>
	    <profile>
            <id>devex.reconfig</id>
            <properties>
                 <devex.releaseVersion>${hrc.Version}</devex.releaseVersion>
            </properties>
		</profile>
		<profile>
            <id>generate.zip</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>${maven-assembly-plugin.version}</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <appendAssemblyId>false</appendAssemblyId>
                                    <descriptors>
                                        <descriptor>assembly.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
		</profile>
        <profile>
            <id>xfile</id>
            <properties>
                <maven.deploy.skip>true</maven.deploy.skip>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>cei.aew.web</groupId>
                        <artifactId>cei-maven-plugin</artifactId>
                        <version>${cei-maven-plugin.version}</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>upload</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                        <webresourceurl>${xfile.url}</webresourceurl>
                        <filetoupload>target/${project.artifactId}-${project.version}.zip</filetoupload>
                        <from>${xfile.group}</from>
                        <to>WEB</to>
                        <file>target/${project.artifactId}-${project.version}</file>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>devex.release</id>
            <properties>
                <!-- pour ne pas deployer dans Nexus -->
                <maven.deploy.skip>true</maven.deploy.skip>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>ch.vd.devex</groupId>
                        <artifactId>devex-maven-plugin</artifactId>
                        <version>${devex-maven-plugin.version}</version>
                        <configuration>
                            <deployUnits>
                                <deployUnit>${devex.deployUnit}</deployUnit>
                            </deployUnits>
                            <deployTarget>${devex.deployTarget}</deployTarget>
                            <configTag>${devex.configTag}</configTag>
                        </configuration>
                        <executions>
                            <execution>
                                <id>release</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>create-release</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <!-- Déploiement de la Release dans DevEx -->
            <id>devex.in</id>
            <properties>
                <!-- pour ne pas deployer dans Nexus -->
                <maven.deploy.skip>true</maven.deploy.skip>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>ch.vd.devex</groupId>
                        <artifactId>devex-maven-plugin</artifactId>
                        <version>${devex-maven-plugin.version}</version>
                        <configuration>
                            <deployUnits>
                                <deployUnit>${devex.deployUnit}</deployUnit>  <!-- possibilité de spécifier plusieurs deploy-units si besoin -->
                            </deployUnits>
                            <deployTarget>${devex.deployTarget}</deployTarget>
                            <configTag>${devex.configTag}</configTag>
                            <environment>IN</environment>
                            <releaseVersion>${devex.releaseVersion}</releaseVersion>
                        </configuration>
                        <executions>
                            <execution>
                                <id>deploy</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>deploy</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>