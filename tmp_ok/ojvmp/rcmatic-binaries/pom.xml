<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>ch.vd</groupId>
	<artifactId>rcmatic</artifactId>
    <version>1.0.14-SNAPSHOT</version>
	<name>hrc</name>
	<description>Description : hrc RC Matic outil de recherche Registre du commerce</description>
	<packaging>pom</packaging>

	<scm>
		<connection>scm:git:ssh://git@bitbucket.etat-de-vaud.ch/ojvmp/rcmatic-binaries.git</connection>
		<tag>rcmatic-0.1.1</tag>
	</scm>

	<modules>
		<module>hrc_ws_pom</module>
		<module>hrc_internet_pom</module>
	</modules>

	<properties>
		<cei-maven-plugin.version>1.1.0</cei-maven-plugin.version>
        <maven-assembly-plugin.version>2.5.3</maven-assembly-plugin.version>
        <devex-maven-plugin.version>1.1.1</devex-maven-plugin.version>
		<release.profiles>generate.zip,xfile,devex.release,devex.in</release.profiles>
		<hrc.ConfigTag />
		<hrc.Version />
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.5.3</version>
				<configuration>
					<arguments>${hrc.ConfigTag}</arguments>
					<releaseProfiles> ${release.profiles}</releaseProfiles>
					<autoVersionSubmodules>true</autoVersionSubmodules>
					<pushChanges>true</pushChanges>
				</configuration>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-deploy-plugin</artifactId>
					<version>3.0.0-M1</version>
					<configuration>
						<skip>true</skip>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>