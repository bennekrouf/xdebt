  <profiles>
    <profile>
      <!--
        - Usage:
        -     mvn validate -P wsdl2java
        -
        - Erzeugt die von Axis aus den wsdl's generierten Java-Files.
        -->
      <id>wsdl2java</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>wsdl2java-antrun</id>
                <phase>validate</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <tasks>
                    <taskdef resource="org/apache/axis/antlib.xml" classpathref="maven.runtime.classpath" />
                    <wsdl2java url="wsdl/TestWs.wsdl" output="junit" serverside="false" skeletondeploy="false" />
                    <wsdl2java url="wsdl/GddWs.wsdl" output="src" serverside="false" skeletondeploy="false" />
                    <wsdl2java url="wsdl/GdcWs.wsdl" output="src" serverside="false" skeletondeploy="false" />
                  </tasks>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
