<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ch.vd.justice.edref</groupId>
        <artifactId>edref-parent</artifactId>
        <version>24.2.1</version>
    </parent>

    <artifactId>edref-boot-backend</artifactId>
    <name>${project-name.prefix}${project.artifactId}</name>

    <description>Module bootstraping the eDREF backend</description>

    <dependencies>
        <!-- Own modules -->

        <dependency>
            <groupId>ch.vd.justice.edref</groupId>
            <artifactId>edref-persistence</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.edref</groupId>
            <artifactId>edref-application-web</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.edref</groupId>
            <artifactId>edref-security-web</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.edref</groupId>
            <artifactId>edref-frontend-adapter</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.shared</groupId>
            <artifactId>shared-boot-backend</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.shared</groupId>
            <artifactId>shared-persistence-xa</artifactId>
        </dependency>

        <!-- Spring -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-starter-netflix-eureka-client</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-security</artifactId>
        </dependency>

        <!-- Hazelcast -->
        <dependency>
            <groupId>com.hazelcast</groupId>
            <artifactId>hazelcast-spring</artifactId>
        </dependency>
        <dependency>
            <groupId>com.hazelcast</groupId>
            <artifactId>hazelcast</artifactId>
        </dependency>
        <dependency>
            <groupId>com.hazelcast</groupId>
            <artifactId>hazelcast-eureka-one</artifactId>
        </dependency>

        <!-- Test -->

        <dependency>
            <groupId>com.sun.jersey</groupId>
            <artifactId>jersey-core</artifactId>
        </dependency>

        <dependency>
            <groupId>com.sun.jersey</groupId>
            <artifactId>jersey-client</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.jersey.contribs</groupId>
            <artifactId>jersey-apache-client4</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.shared</groupId>
            <artifactId>shared-persistence-xa</artifactId>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi-ooxml</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.github.sbrannen</groupId>
            <artifactId>spring-test-junit5</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.shared</groupId>
            <artifactId>shared-test</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.shared</groupId>
            <artifactId>shared-persistence</artifactId>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.shared</groupId>
            <artifactId>shared-frontend-adapter</artifactId>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <!-- jolokia added as requested on http://codecentric.github.io/spring-boot-admin/1.5.7/#jmx-bean-management -->
        <dependency>
            <groupId>org.jolokia</groupId>
            <artifactId>jolokia-core</artifactId>
        </dependency>
    </dependencies>

    <build>
        <finalName>egdxedref</finalName>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>build-info</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-resources-index</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/classes/static</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.parent.basedir}/edref-frontend/dist/static</directory>
                                    <includes>
                                        <include>index.html</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/classes/static/static</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.parent.basedir}/edref-frontend/dist/static</directory>
                                    <excludes>
                                        <exclude>index.html</exclude>
                                    </excludes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-target-to-parent</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.parent.basedir}/target</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.parent.basedir}/edref-boot-backend/target</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
