<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>


    <parent>
        <groupId>ch.vd.justice.shared</groupId>
        <artifactId>shared-maven</artifactId>
        <version>24.2.1</version>
        <!-- lookup parent from repository -->
        <relativePath />
    </parent>

    <groupId>ch.vd.justice.edref</groupId>
    <artifactId>edref-parent</artifactId>
    <version>24.2.1</version>
    <packaging>pom</packaging>

    <name>${project-name.prefix}${project.artifactId}</name>
    <description>The parent pom for eDREF</description>

    <modules>
        <module>edref-application-web</module>
        <!-- frontend should be declared before boot-backend to have it build before (by default maven follows the module declaration order if there are no other dependencies/constraints).
        Ideally, it should be declared as "compile-only" dependency, but this is not a Maven scope.
        Another option would be to declare is as runtime dependency in boot-backend and exclude it from assembly/packaging -->
        <module>edref-frontend</module>
        <module>edref-boot-backend</module>
        <module>edref-domain</module>
        <module>edref-frontend-adapter</module>
        <module>edref-persistence</module>
        <module>edref-security-web</module>
        <module>edref-batches</module>
        <module>edref-batch-adapter</module>
        <module>edref-application-batch</module>
        <module>edref-security-batch</module>
        <module>edref-application-common</module>
        <module>edref-ref-inf-adapter</module>
        <module>edref-vostra-adapter</module>
        <module>edref-assembly</module>
        <module>edref-generator</module>
    </modules>

    <properties>
        <!-- see https://www.eclemma.org/jacoco/trunk/doc/prepare-agent-mojo.html -->
        <argLine>-Dfile.encoding=UTF-8</argLine>
        <!-- TODO move to shared-parent pom + increase shared version -->
        <apache.cxf.version>3.3.5</apache.cxf.version>
        <maven.failsafe.reuseForks>true</maven.failsafe.reuseForks>
        <t6kt-maven-plugin.version>1.0.4</t6kt-maven-plugin.version>
        <!-- tesserakt maven plugin configuration -->
        <t6kt-maven-plugin.application>${project.artifactId}</t6kt-maven-plugin.application>
        <t6kt-maven-plugin.application>egdx</t6kt-maven-plugin.application>
        <t6kt-maven-plugin.deployUnit>edref</t6kt-maven-plugin.deployUnit>
        <t6kt-maven-plugin.applicationVersion>${project.version}</t6kt-maven-plugin.applicationVersion>
        <tesserakt-maven-plugin.url>https://esgate.etat-de-vaud.ch/tesserakt-pr</tesserakt-maven-plugin.url>
        <release.goals>clean verify</release.goals>
        <release.profiles>not</release.profiles>
    </properties>


    <scm>
        <connection>scm:git:git@bitbucket.etat-de-vaud.ch:ojvmp/egdx-edref</connection>
        <developerConnection>scm:git:git@bitbucket.etat-de-vaud.ch:ojvmp/egdx-edref</developerConnection>
        <tag>24.2.1</tag>
    </scm>

    <dependencyManagement>
        <dependencies>
            <!-- Own modules -->
            <dependency>
                <groupId>ch.vd.justice.edref</groupId>
                <artifactId>edref-domain</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.edref</groupId>
                <artifactId>edref-frontend-adapter</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.edref</groupId>
                <artifactId>edref-application-web</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.edref</groupId>
                <artifactId>edref-security-web</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.edref</groupId>
                <artifactId>edref-persistence</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.edref</groupId>
                <artifactId>edref-boot-backend</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.edref</groupId>
                <artifactId>edref-batches</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.edref</groupId>
                <artifactId>edref-batch-adapter</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.edref</groupId>
                <artifactId>edref-application-batch</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.edref</groupId>
                <artifactId>edref-security-batch</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>edref-application-common</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>edref-application-common</artifactId>
                <classifier>tests</classifier>
                <type>test-jar</type>
                <scope>test</scope>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.edref</groupId>
                <artifactId>edref-ref-inf-adapter-impl</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.edref</groupId>
                <artifactId>edref-ref-inf-adapter-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.edref</groupId>
                <artifactId>edref-vostra-adapter-impl</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.vd.justice.edref</groupId>
                <artifactId>edref-vostra-adapter-api</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <distributionManagement>
        <repository>
            <id>nexus-dgnsi-server</id>
            <name>Nexus DGNSI</name>
            <url>${nexus.url}/app-${application.repository}-stable</url>
        </repository>
        <snapshotRepository>
            <id>nexus-dgnsi-server</id>
            <name>Nexus DGNSI</name>
            <url>${nexus.url}/app-${application.repository}-snapshots</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <configuration>
                        <skip>true</skip>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>ch.vd.devsupport</groupId>
                    <artifactId>tesserakt-maven-plugin</artifactId>
                    <version>${t6kt-maven-plugin.version}</version>
                    <configuration>
                        <username>${T6KT_USERNAME}</username>
                        <password>${T6KT_PASSWORD}</password>
                        <application>${t6kt-maven-plugin.application}</application>
                        <deployUnit>${t6kt-maven-plugin.deployUnit}</deployUnit>
                        <applicationVersion>${t6kt-maven-plugin.applicationVersion}</applicationVersion>
                        <chartVersion>${t6kt-maven-plugin.chartVersion}</chartVersion>
                        <configurationVersion>${t6kt-maven-plugin.configurationVersion}</configurationVersion>
                        <environment>${t6kt-maven-plugin.environment}</environment>
                        <url>${tesserakt-maven-plugin.url}</url>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>3.0.1</version>
                    <configuration>
                        <localCheckout>true</localCheckout>
                        <autoVersionSubmodules>true</autoVersionSubmodules>
                        <goals>${release.goals}</goals>
                        <releaseProfiles>${release.profiles}</releaseProfiles>
                        <tagNameFormat>@{project.version}</tagNameFormat>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>
