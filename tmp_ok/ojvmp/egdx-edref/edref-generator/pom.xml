<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>ch.vd.justice.edref</groupId>
        <artifactId>edref-parent</artifactId>
        <version>24.2.1</version>
    </parent>

    <artifactId>edref-generator</artifactId>
    <name>${project-name.prefix}${project.artifactId}</name>

    <properties>
        <java.version>1.8</java.version>
        <mdcgen.hibernate.version>5.0.5.Final</mdcgen.hibernate.version>
        <jsoup.version>1.11.2</jsoup.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <compilerArgument>-parameters</compilerArgument>
                    <testCompilerArgument>-parameters</testCompilerArgument>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>ch.vd.justice.shared</groupId>
            <artifactId>shared-generator</artifactId>
            <version>${shared.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.edref</groupId>
            <artifactId>edref-frontend-adapter</artifactId>
        </dependency>
        <!-- to re-force compile scope that our parent pom overrode to test -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <!-- needed for "normal" execution to support generating tests -->
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.shared</groupId>
            <artifactId>shared-test</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-test</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.github.sbrannen</groupId>
            <artifactId>spring-test-junit5</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.dom4j</groupId>
            <artifactId>dom4j</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.vd.justice.edref</groupId>
            <artifactId>edref-application-web</artifactId>
        </dependency>
    </dependencies>
</project>
